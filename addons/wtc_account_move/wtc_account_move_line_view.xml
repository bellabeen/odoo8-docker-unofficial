<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="wtc_account_move_line_form_view">
		    <field name="name">wtc.account.move.line.form</field>
		    <field name="model">account.move.line</field>
		    <field name="type">form</field>
		    <field name="inherit_id" ref="account.view_move_line_form"/>
		    <field name="arch" type="xml">
                <field name='period_id' position="after">
                	<field name='kwitansi'/>
                </field>		    	
		    	<xpath expr="/form/sheet/group" position="before">
                    <group>
                        <group>
                            <field name="branch_id"/>
                        </group>
                        <group>
                            <field name="division"/>
                        </group>
                    </group>
                </xpath>
		    </field>
		</record>
		
		<record model="ir.ui.view" id="journal_move_line_tree_view">
		    <field name="name">wtc.account.move.line.tree.view</field>
		    <field name="model">account.move.line</field>
		    <field name="arch" type="xml">
		        <tree string="List Journal Items" edit="false" create="false">
		        	<field name="branch_id"/>
		            <field name="division"/>
					<field name="name"/>	            		            			            	
		            <field name="ref"/>
		        	<field name="partner_id"/>
		            <field name="journal_id"/>
					<field name="period_id"/>	            		            			            	
		            <field name="account_id"/>
		        	<field name="debit"/>
		            <field name="credit"/>
					<field name="invoice"/>	            		            			            	
		            <field name="move_id"/>
		            <field name="asset_id"/> 		   
		            <field name="date"/>
					<field name="date_maturity"/>	            		            			            	
		            <field name="reconcile_id"/>
		            <field name="reconcile_partial_id"/>
		            <field name="state"/>			            	         	            
		        </tree>
		     </field>
		</record>
		
 		<record id="wtc_view_journal_items" model="ir.ui.view">
            <field name="name">wtc.view.journal.items</field>
            <field name="model">account.move.line</field>
            <field name="arch" type="xml">
                <search string="Search Account Move Line">
		        	<field name="branch_id"/>
					<field name="name"/>	            		            			            	
		            <field name="ref"/>
		        	<field name="partner_id"/>
		            <field name="journal_id"/>
		            <field name="account_id"/>
					<field name="invoice"/>	            		            			            	
		            <field name="move_id"/>
		            <field name="asset_id"/> 		   
		            <field name="reconcile_id"/>
		            <field name="reconcile_partial_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter string="Journal" icon="terp-go-month" domain="[]" context="{'group_by':'journal_id'}"/>                    
                        <filter string="Account" icon="terp-go-month" domain="[]" context="{'group_by':'account_id'}"/>                    
                        <filter string="State" icon="terp-go-month" domain="[]" context="{'group_by':'state'}"/>                    
                    </group>
                </search>
            </field>
        </record>		
		<record model="ir.actions.act_window" id="wtc_journal_items_action">
		    <field name="name">All Journal Items</field>
		    <field name="res_model">account.move.line</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="wtc_view_journal_items"/>
		    <field name="view_id" ref="journal_move_line_tree_view" />
		</record>
					
		<menuitem id="wtc_journal_items_all_menu_item" parent="account.menu_finance_entries"  sequence="1" action="wtc_journal_items_action"/> 		
						
	</data>
</openerp>