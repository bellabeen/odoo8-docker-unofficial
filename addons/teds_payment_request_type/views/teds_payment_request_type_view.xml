<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<record id="view_teds_payment_request_type_form" model="ir.ui.view">
            <field name="name">teds.payment.request.type.form</field>
            <field name="model">wtc.payments.request.type</field>
            <field name="inherit_id" ref="wtc_account_voucher.view_wtc_payment_request_type_form"/>
            <field name="arch" type="xml">
                <field name="name" position="attributes">
                    <attribute name="required">True</attribute>
                </field>
                <field name="name" position="after">
                    <field name="type" invisible="1"/>
                    <field name="active"/>
                </field>
                <xpath expr="//notebook/page" position="before">	
            		<page string="Detail Type">
            			<field name="payment_request_type_ids">
            				<tree editable="bottom">
            					<field name="name" required="1"/>
            					<field name="account_id" required="1" options="{'no_open':True,'no_create':True}"/>
            				</tree>
            			</field>
            		</page>
                </xpath>
            </field>
        </record>

         <record id="wtc_account_voucher.wtc_payment_request_type" model="ir.actions.act_window">
            <field name="domain">[('type','=','NC')]</field>
            <field name="context">{'default_type':'NC'}</field>
        </record>

        <record id="action_teds_payment_request_type_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="wtc_account_voucher.view_wtc_payments_request_type_tree"/>
            <field name="act_window_id" ref="wtc_account_voucher.wtc_payment_request_type"/>
        </record>    

        <record id="action_teds_payment_request_type_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wtc_account_voucher.view_wtc_payment_request_type_form"/>
            <field name="act_window_id" ref="wtc_account_voucher.wtc_payment_request_type"/>        
        </record>     
    
    </data>
</openerp>
