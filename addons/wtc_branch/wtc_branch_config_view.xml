<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		
		<record model="ir.ui.view" id="wtc_branch_config_tree_view">
		    <field name="name">wtc_branch_config_tree_view</field>
		    <field name="model">wtc.branch.config</field>
		    <field name="arch" type="xml">
		        <tree string="List Branch Config">
		        	<field name="name"/>
		            <field name="branch_id"/>
		        </tree>
		     </field>
		</record>
 
		<record model="ir.ui.view" id="wtc_branch_config_form_view">
		    <field name="name">wtc.branch_config.form.view</field>
		    <field name="model">wtc.branch.config</field>
		    <field name="arch" type="xml">
		        <form string="Branch Configuration">		        	
		        	<sheet>
			        	<div class="oe_title">
			        		<h2>
				                <label string="Branch Configuration"/>    			
				 				<field name="name" class="oe_inline"/>
			 				</h2>
			        	</div>       
						<group>   
							<group colspan="2">
								<field name="branch_id" options="{'no_create': True,'no_open': True}" colspan="2"/>
							</group>  
							<group>		
							</group>            
						</group>				
		           </sheet>
		        </form>
		    </field>
		</record>

 		<record id="view_branch_filter" model="ir.ui.view">
            <field name="name">Branch Configuration</field>
            <field name="model">wtc.branch.config</field>
            <field name="arch" type="xml">
                <search string="Search Branch Configuration ">
                    <field name="name" string="Reference"/>
                    <field name="branch_id"/> 
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>		
		<record model="ir.actions.act_window" id="wtc_branch_config_action">
		    <field name="name">Branch Configuration</field>
		    <field name="res_model">wtc.branch.config</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_branch_filter"/>
		</record>
					
		<menuitem id="wtc_branch_configuration_menuitem" name="Branch Config" sequence="2" parent="wtc_dealer_menu.ma_branches_menu" action="wtc_branch_config_action"/>
	</data>
</openerp>
															