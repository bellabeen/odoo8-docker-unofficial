<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	
		
		<record model="ir.ui.view" id="wtc_harga_bbn_form_view">
		    <field name="name">wtc.harga.bbn.form</field>
		    <field name="model">wtc.harga.bbn</field>
		    <field name="arch" type="xml">
		    	<form>
		    			<label for="name" class="oe_edit_only"/>
	                    <h1>
	                        <field name="name"/>
	                    </h1>
		        		<group col="2">
		        			<field name="active" />											        			
		        		</group>
		        		<notebook>
		        			<page string="Harga BBN">
			    				<field name="harga_bbn_line_ids" colspan="4" nolabel="1">
		        			 		<tree string="Line">
		                				<field name="name"/>
			                			<field name="active" />
										<field name="tipe_plat"/>
										<field name="start_date"/>
										<field name="end_date"/>
									</tree>
		                		</field>
	                		</page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>	                		
                		</notebook>
		    	</form>    
		    </field>
		</record>

		<record model="ir.ui.view" id="wtc_harga_bbn_tree_view">
		    <field name="name">wtc.harga.bbn.tree</field>
		    <field name="model">wtc.harga.bbn</field>
		    <field name="arch" type="xml">
		    	<tree>
        			<field name="name"/>
        			<field name="active" />											        			
		    	</tree>    
		    </field>
		</record>
						
		<record model="ir.ui.view" id="wtc_harga_bbn_line_form_view">
		    <field name="name">wtc.harga.bbn.line.form</field>
		    <field name="model">wtc.harga.bbn.line</field>
		    <field name="arch" type="xml">
		    	<form>
		    		<sheet>
		        		<group col="4">
		        			<field name="name"/>
		        			<field name="active" />
		        			<field name="tipe_plat"/>
									<label for="start_date" string="Effective Date"/>	
                			<div>
                				<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
                			</div>											        			
		        		</group>
	    				<field name="harga_bbn_line_detail_ids" colspan="4" nolabel="1">
        			 		<tree string="Details" editable="top">
                				<field name="product_template_id" domain="[('categ_id','child_of','8')]"/>
	                			<field name="city_id" />
								<field name="notice"/>
								<field name="proses"/>
								<field name="jasa"/>
								<field name="jasa_area"/>
								<field name="fee_pusat"/>
								<field name="total" />
							</tree>
                		</field>
		        	</sheet>
		    	</form>    
		    </field>
		</record>
		
		<record model="ir.actions.act_window" id="harga_bbn_action">
		    <field name="name">Harga BBN</field>
		    <field name="res_model">wtc.harga.bbn</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
		
		<menuitem id="harga_bbn_submenu" name="Harga BBN" parent="wtc_dealer_menu.showroom_configuration_menu"  action="harga_bbn_action"/> 				  
								
	</data>
</openerp>