<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 

			<record model="ir.ui.view" id="wtc_area_tree_view">
			    <field name="name">wtc.area.tree</field>
			    <field name="model">wtc.area</field>
			    <field name="arch" type="xml">
			        <tree string="Area">
			            <field name="code"/>
			            <field name="description"/>
			        </tree>
			     </field>
			</record>
			
			<record model="ir.ui.view" id="wtc_area">
			    <field name="name">wtc.area</field>
			    <field name="model">wtc.area</field>
			    <field name="arch" type="xml">
			        <form string="Area">
			        	<sheet>
			             <group col="4" colspan="4">
				            <field name="code"/>       
				            <field name="description" />
						</group>
					<notebook>	
						<page string="Branches">
		                    <field name="branch_ids" nolabel="1" colspan="4">
		                        <tree string="Branches" editable="bottom">
		                        	<field name="name"/>
		                            <field name="code"/>
		                        </tree>
		                    </field>
		                   	<div class="oe_chatter">
			                    <field name="message_follower_ids" widget="mail_followers"/>
			                    <field name="message_ids" widget="mail_thread"/>
			                </div>
		                </page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>		                
	                </notebook>
	                	</sheet>
			        </form>
			    </field>
			</record> 
	 		<record id="view_area_filter" model="ir.ui.view">
	            <field name="name">wtc.area.list.select</field>
	            <field name="model">wtc.area</field>
	            <field name="arch" type="xml">
	                <search string="Search Area">
	                    <field name="code"/>
	                </search>
	            </field>
	        </record>			
			<record model="ir.actions.act_window" id="wtc_area_action">
			    <field name="name">Area</field>
			    <field name="res_model">wtc.area</field>
			    <field name="view_type">form</field>
			    <field name="view_mode">tree,form</field>
				<field name="search_view_id" ref="view_area_filter"/>					    
			</record>

			<menuitem id="master_area" name="Area" sequence="3" parent="wtc_dealer_menu.ma_branches_menu" action="wtc_area_action"/> 
	</data>
</openerp> 
