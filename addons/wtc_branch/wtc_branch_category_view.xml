<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="wtc_workshop_category_tree_view">
		    <field name="name">wtc.workshop.category.tree</field>
		    <field name="model">wtc.workshop.category</field>
		    <field name="arch" type="xml">
		        <tree string="List Workshop Category">
		            <field name="name"/>
		        </tree>
		     </field>
		</record>
		<record model="ir.ui.view" id="wtc_workshop_category_form_view">
		    <field name="name">wtc.workshop.category.form</field>
		    <field name="model">wtc.workshop.category</field>
		    <field name="arch" type="xml">
		        <form string="Form Workshop Category" version="7.0">
		            <group>
		                <field name="name"/>
		            </group>
            		<notebook>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>
					</notebook>		            
		        </form>
		    </field>
		</record>
		<record model="ir.actions.act_window" id="action_wtc_workshop_category_form">
		    <field name="name">Workshop Category</field>
		    <field name="res_model">wtc.workshop.category</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>

		<menuitem id="wtc_workshop_category_menuitem" name="Workshop Category" sequence="4" parent="wtc_dealer_menu.ma_branches_menu" action="action_wtc_workshop_category_form"/>
		
		<record model="ir.ui.view" id="wtc_branch_category_form_view">
		    <field name="name">wtc.branch.form</field>
		    <field name="model">wtc.branch</field>
		    <field name="inherit_id" ref="wtc_branch.wtc_branch_form_view" />
		    <field name="arch" type="xml">
		        <field name="name" position="before">
		            <field name="workshop_category"/>
		        </field>
		    </field>
		</record>
		
        <record model="ir.ui.view" id="wtc_branch_on_stock_picking_type_form_view">
            <field name="name">stock.picking.type.form</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                     <field name="branch_id" />
             	</field>
             	<field name="default_location_src_id" position="attributes">
             		<attribute name="required">True</attribute>
             		<attribute name="domain">[('branch_id','=',branch_id)]</attribute>
             	</field>
             	<field name="default_location_dest_id" position="attributes">
             		<attribute name="required">True</attribute>
             		<attribute name="domain">[('branch_id','=',branch_id)]</attribute>
             	</field>
            </field>
        </record>		
		
	</data>
</openerp>