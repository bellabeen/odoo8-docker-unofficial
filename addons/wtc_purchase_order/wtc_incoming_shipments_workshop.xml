            <field name="view_mode">form</field>
            <field name="view_id" ref="stock.view_picking_form"/>
            <field name="act_window_id" ref="wtc_action_picking_type_form_incoming_workshop"/>
        </record>
        
        <menuitem action="wtc_action_picking_type_form_incoming_workshop" id="wtc_incoming_shipments_workshop_menu" parent="wtc_dealer_menu.workshop_purchase_menu" sequence="3"/>
	
