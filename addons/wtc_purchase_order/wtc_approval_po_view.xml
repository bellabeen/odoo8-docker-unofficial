<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  
    	
		<record id="wtc_approval_po_form_view" model="ir.ui.view">
			<field name="name">wtc.approval.po.form</field>
			<field name="model">purchase.order</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">
				
				<button name="purchase_confirm" position="replace">
					<button name="approval_request" states="draft,sent,bid" string="RFA" type="workflow" class="oe_highlight" groups="wtc_purchase_order.group_purchase_order_rfa"/>	
					<button name="approval_approve" states="waiting_for_approval" string="Approve" type="workflow" class="oe_highlight" groups="wtc_purchase_order.group_purchase_order_approve"/>
					<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'purchase.order','next_workflow':'approval_reject'}"/>
					<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'purchase.order','next_workflow':'approval_cancel'}" groups="wtc_purchase_order.group_purchase_order_cancel_approval"/>
										
				</button>
				
				<field name="picking_type_id" position="after">
					<field name="approval_state"/>
				</field>
				
				<xpath expr="//page[@string='Deliveries &amp; Invoices']" position="after">
					<page string="Approval">
						<field name="approval_ids">
							<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
								<field name="group_id" />
								<field name="branch_id"/>
								<field name="division"/>
								<field name="limit"/>
								<field name="sts"/>
								<field name="reason"/>
								<field name="pelaksana_id"/>
								<field name="tanggal"/>
							</tree>
						</field>
					</page>
					<page string="Audit Trail">
						<group>
							<group>
								<field name="create_uid" readonly="1"></field>
								<field name="create_date" readonly="1"></field>
								<field name="confirm_uid" readonly="1"></field>
								<field name="confirm_date" readonly="1"></field>
							</group>
							<group>							
								<field name="write_uid" readonly="1"></field>
								<field name="write_date" readonly="1"></field>
								<field name="cancel_uid" readonly="1"></field>
								<field name="cancel_date" readonly="1"></field>
							</group>
						</group>
					</page>						
				</xpath>
				
			</field>
		</record>
		
 	</data>
 </openerp>