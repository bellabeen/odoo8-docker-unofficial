<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="wtc_p2p_purchase_form_view_inherited">
    		<field name="name">wtc.sale.order.form</field>            
    		<field name="model">wtc.p2p.purchase.order</field>            
    		<field name="inherit_id" ref="wtc_p2p.wtc_p2p_purchase_form_view"/>
    		<field name="arch" type="xml">
    			<field name="purchase_line" position="attributes">
					 <attribute name="attrs">{'readonly': [('state','not in',('draft','validate'))],'invisible':[('type_name','in', ['Additional','Topup'])]}</attribute> 
				</field>
				<field name="additional_line" position="attributes">
					 <attribute name="attrs">{'readonly': [('state','not in',('draft','validate'))],'invisible':['|', ('type_name','=', 'Fix'), ('type_name','=', False)]}</attribute> 
				</field>
				<button name="generate_line" position="attributes">
					 <attribute name="attrs">{'invisible':['|', '|', ('state','=','cancel'), ('type_name','=','Additional'), '|', '&amp;', ('type_name','=','Fix'), ('purchase_line','&lt;&gt;',[]), '&amp;', ('type_name','=','Topup'), ('additional_line','&lt;&gt;',[])]}</attribute> 
				</button>
    		

														
	    	</field>
    	</record>
    	
      	    	    	
   	</data>
</openerp>
	    