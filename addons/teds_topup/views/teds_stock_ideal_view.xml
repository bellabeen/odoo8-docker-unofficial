<?xml version="1.0"?>
<openerp>
	<data>
		<!-- TREE teds_stock_ideal: teds_stock_ideal_tree_view -->
		<record id="teds_stock_ideal_tree_view" model="ir.ui.view">
			<field name="name">Stock Ideal Tree</field>
			<field name="model">stock.ideal</field>
			<field name="arch" type="xml">
				<tree string="Ideal Stock">
					<field name="branch_id" />
					<field name="effective_start_date" />
					<field name="effective_end_date" />
				</tree>
			</field>
		</record>

		<!-- FORM teds_stock_ideal: teds_stock_ideal_form_view -->
		<record id="teds_stock_ideal_form_view" model="ir.ui.view">
			<field name="name">Stock Ideal Form</field>
			<field name="model">stock.ideal</field>
			<field name="arch" type="xml">
				<form string="Ideal Stock">
					<header></header>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="branch_id" 
									options="{'no_open': True, 'no_create': True}" />
							</group>
							<group>
								<field name="effective_start_date" required="1" />
								<field name="effective_end_date" required="1" />
							</group>
						</group>
						<notebook>
					       	<page string="Ideal Stock Detail">
						       	<field name="stock_ideal_line">
						           	<tree editable="top">
						           		<field name="product_id"
						           			options="{'no_open': True, 'no_create': True}" />
						           		<field name="product_category_id" invisible="1" 
						           			options="{'no_open': True, 'no_create': True}" />
						           		<field name="category_id_show" />
						           		<field name="simpart" />
						           		<field name="ideal_bln" />
						           		<field name="min_qty" />
						           		<field name="max_qty" />
						           	</tree>
										</field>
					        </page>
					        <page string="Audit Trail">
					        	<group>
					        		<group>
						        		<field name="create_uid" readonly="1" />
						        		<field name="create_date" readonly="1" />
						        	</group>
						        	<group>
						        		<field name="write_uid" readonly="1" />
						        		<field name="write_date" readonly="1" />
						        	</group>
					        	</group>
					        </page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<!-- ACTION teds_stock_ideal -->
		<act_window id="stock_ideal_action"
			name="Stock Ideal"
			res_model="stock.ideal"
			view_mode="tree,form"/>

		<!-- MENU teds_stock_ideal -->
		<menuitem id="stock_ideal_menu"	 
			parent="wtc_dealer_menu.workshop_configuration_menu" 
			sequence="50"
			action="stock_ideal_action"/>

	</data>
</openerp>