<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<record id="view_remark_tree" model="ir.ui.view">
            <field name="name">wtc.remark.tree</field>
            <field name="model">wtc.remark</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Remark" create="true" editable="top">                   
                    <field name="model_id"  required='1' options="{'no_create': True,'no_open': True}"/>
                    <field name="remark"  required='1'/>
                </tree>
            </field>
     </record>
		 <record id="view_remark_line_search" model="ir.ui.view">
            <field name="name">wtc.remark.search</field>
            <field name="model">wtc.remark</field>
            <field name="arch" type="xml">
                <search string="Search Remark">
                    <field name="model_id"/>
                    <field name="remark"/>
                </search>
            </field>
        </record>     
        
     <record id="view_remark_form" model="ir.ui.view">
            <field name="name">wtc.remark.form</field>
            <field name="model">wtc.remark</field>            
            <field name="arch" type="xml">
                <form string="Remark">            	
                <sheet>
                   		<div class="oe_title">                      
		       				<h1>
		       					<label string="Remark"/> 
		    			    </h1>
	                    </div>
	                    <group>
	                   		<group col="4">
		                    	<field name="model_id"  required='1' options="{'no_create': True,'no_open': True}"/>
			                	<field name="remark"  required='1'/>
			                		
			                 </group>
		                 </group>           
		                
		                  <notebook> 
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>		                 
		            		</notebook>
                	</sheet> 
                </form>
             </field>
      </record>

		<record model="ir.actions.act_window" id="wtc_remark_action">
		    <field name="name">Remark</field>
		    <field name="res_model">wtc.remark</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
       	<menuitem action="wtc_remark_action" sequence='500' id="menu_wtc_remark" parent="wtc_dealer_menu.backoffice_tax_menu" />
	</data>
</openerp>