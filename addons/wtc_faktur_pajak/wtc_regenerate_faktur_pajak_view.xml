<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
     
	<record id="view_regenerate_faktur_pajak_tree" model="ir.ui.view">
            <field name="name">wtc.regenerate.faktur.pajak.tree</field>
            <field name="model">wtc.regenerate.faktur.pajak.gabungan</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Regenerate Faktur Pajak">   
                	<field name="name"/>                
                    <field name="date"/>
                    <field name="model_id"/>
                    <field name="state"/>
                </tree>
            </field>
     </record>
     
	<record id="view_regenerate_faktur_pajak_search" model="ir.ui.view">
            <field name="name">wtc.regenerate.faktur.pajak.search</field>
            <field name="model">wtc.regenerate.faktur.pajak.gabungan</field>
            <field name="arch" type="xml">
                <search string="Search Reregenerate Faktur Pajak">
                	<field name="name"/>                
                    <field name="date"/>
                    <field name="model_id"/>
                    <field name="state"/>
                </search>
            </field>
    </record> 	
        
	<record id="wtc_regenerate_faktur_pajak_form" model="ir.ui.view">
            <field name="name">wtc.regenerate.faktur.pajak.form</field>
            <field name="model">wtc.regenerate.faktur.pajak.gabungan</field>            
            <field name="arch" type="xml">
                <form string="Regenerate Faktur Pajak"  >
                
                <header>
                	 <button name="action_post" groups='wtc_faktur_pajak.group_wtc_regenerate_faktur_pajak_post' states="draft" string="Post" class="oe_highlight" type="object"/>
                	<field name="state" widget="statusbar" statusbar_visible="draft,posted" />
                </header>
                <sheet>
                   		<div class="oe_title">                      
		       				<h1>
		       					<label string="Regenerate Faktur Pajak"/> 
					            <field name="name" readonly="1"/>
		    			    </h1>
	                    </div>
	                    <group>
	                   		<group col="4">
			                	<field name="model_id" options="{'no_create': True,'no_open': True}" required='1' attrs="{'readonly': [('state','not in','draft')]}" />			                		                  				                   			
			                	<field name="date" readonly='1' attrs="{'readonly': [('state','not in','draft')]}" />
			                 </group>
		                 </group>           
		                
		                  <notebook> 
	                  		<page string='Transaction Details'>
			                	<field name="regenerate_line" attrs="{'readonly': [('state','!=','draft')]}">                    			
		                    		<tree editable="top" edit="false" create="false">
		                    			<field name="name" />
										<field name="model_id" invisible='1'/>		                    			
		                    			<field name="untaxed_amount"/>
										<field name="tax_amount"/>
										<field name="amount_total"/>
										<field name="partner_id"/>																					
										<field name="date"/>										
										<field name="transaction_id" invisible='1'/>						
		                    		</tree>                 		
			                    </field>		                  		                  		
		                  	</page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>		                 
		            		</notebook>
                	</sheet>   	                    
                </form>
            </field>
        </record>
        
    	<record model="ir.actions.act_window" id="wtc_regenerate_faktur_pajak_action">
		    <field name="name">Regenerate Faktur Pajak</field>
		    <field name="res_model">wtc.regenerate.faktur.pajak.gabungan</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
		
		
		
		<menuitem action="wtc_regenerate_faktur_pajak_action" sequence='201' id="menu_wtc_regenerate_faktur_pajak" parent="wtc_dealer_menu.backoffice_tax_menu" />
       	
	</data>
</openerp>