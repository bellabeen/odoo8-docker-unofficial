<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

	<record id="wtc_faktur_faktur_wizard_view" model="ir.ui.view">
            <field name="name">wtc.faktur.pajak.out.wizard</field>
            <field name="model">wtc.faktur.pajak.out</field>
            <field name="priority" eval="115"/>
            <field name="arch" type="xml" >
                <form string="Print Faktur Pajak">
           			 <group>
		                <field name="signature_id" options="{'no_open':True,'no_create_edit':True}" required="True" on_change="signature_change(signature_id)"/>
						<field name="kode_transaksi" placeholder='contoh : 010'/>	
						<field name="keterangan"/>	               
		             </group>
		             <group>
		                <button name="%(faktur_pajak)d"  type="action" string="Print" class="oe_highlight"/>
		            </group>
                </form>
            </field>
        </record>
        	
	<record id="view_faktur_pajak_out_tree" model="ir.ui.view">
            <field name="name">wtc.faktur.pajak.out.tree</field>
            <field name="model">wtc.faktur.pajak.out</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Faktur Pajak" create="0" delete="0">                   
                    <field name="name"/>
                    <field name="transaction_id"/>
                    <field name="model_id"/>	
                    <field name="pajak_gabungan"/>       
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="amount_total"/>
                    <field name="untaxed_amount"/>
                    <field name="tax_amount"/>   
                    <field name="thn_penggunaan"/>   
                    <field name="tgl_terbit"/>  
                    <field name="transaction_id"/>	                 	                    
           			<field name="state"/>
                </tree>
            </field>
     </record>
		 <record id="view_faktur_pajak_out_line_search" model="ir.ui.view">
            <field name="name">wtc.faktur.pajak.out.search</field>
            <field name="model">wtc.faktur.pajak.out</field>
            <field name="arch" type="xml">
                <search string="Search Faktur Pajak">
                	<field name='name'/>
        			<field name='partner_id'/>
        			<field name="model_id"/>
        			<field name="transaction_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Form" icon="terp-partner" domain="[]" context="{'group_by':'model_id'}"/>
                        <filter string="Tanggal" icon="terp-go-month" domain="[]" context="{'group_by':'tanggal'}"/>
                        <filter string="Partner" icon="terp-go-month" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="State" icon="terp-go-month" domain="[]" context="{'group_by':'state'}"/>
               	                        	                        	                   
                    </group>        			
                </search>
            </field>
        </record>     
        
     <record id="view_faktur_pajak_out_form" model="ir.ui.view">
            <field name="name">wtc.faktur.pajak.out.form</field>
            <field name="model">wtc.faktur.pajak.out</field>            
            <field name="arch" type="xml">
                <form string="Faktur Pajak" create="0" edit="0" delete="0">   
					<header>
	             		<button name="print_faktur_pajak" groups='wtc_faktur_pajak.group_wtc_faktur_pajak_out_print' attrs="{'invisible': [('state','not in',('close','print'))]}" type="object" icon="gtk-print" string="Print Faktur Pajak" class="oe_highlight" />
						<field name="state" widget="statusbar" statusbar_visible="open,close,print"/>	
	           		</header>
					<sheet>                  	         	
	        			<div class="oe_title">
			        		<h2>
				                <label string="Faktur Pajak"/>    			
				 				<field name="name" class="oe_inline"/>
			 				</h2>
	 					</div>	
	                   	<group col="4">
	                   		<group>
			           			<field name="model_id" options="{'no_open':True,'no_create_edit':True}"/>
			           			<field name="pajak_gabungan"/>                    		                    
			           			<field name="partner_id" options="{'no_open':True,'no_create_edit':True}"/>
			                    <field name="untaxed_amount"/>
			                    <field name="amount_total"/>
			                    <field name="tgl_terbit"/>
			                    <field name="ref"/>
	                   		</group>
	                   		<group>
			                    <field name="transaction_id"/>
								<field name="date"/>                    
			                    <field name="tax_amount"/>  
			                    <field name="cetak_ke"/>
			                    <field name="company_id"/>
			                    <field name="thn_penggunaan"/>   
			                    				                    				                    		                    		                   				                   			
	                   		</group>	                   		
	           			</group>
           			</sheet>
                </form>
             </field>
      </record>

		<record model="ir.actions.act_window" id="wtc_faktur_pajak_out_action">
		    <field name="name">Faktur Pajak</field>
		    <field name="res_model">wtc.faktur.pajak.out</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
       	<menuitem action="wtc_faktur_pajak_out_action" sequence='100' id="menu_wtc_faktur_pajak_out2" parent="wtc_dealer_menu.backoffice_tax_menu" />
	</data>
</openerp>