<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<record id="view_signature_tree" model="ir.ui.view">
            <field name="name">wtc.signature.tree</field>
            <field name="model">wtc.signature</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Signature" create="true" editable="top">                   
                    <field name="name" required='1'/>
                </tree>
            </field>
     </record>
		 <record id="view_signature_line_search" model="ir.ui.view">
            <field name="name">wtc.signature.search</field>
            <field name="model">wtc.signature</field>
            <field name="arch" type="xml">
                <search string="Search Signature">
                    <field name="name"/>
                </search>
            </field>
        </record>     
        
		<record model="ir.actions.act_window" id="wtc_signature_action">
		    <field name="name">Signature</field>
		    <field name="res_model">wtc.signature</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
       	<menuitem action="wtc_signature_action" sequence='400' id="menu_wtc_signature" parent="wtc_dealer_menu.backoffice_tax_menu" />
	</data>
</openerp>