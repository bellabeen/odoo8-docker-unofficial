<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="view_teds_mft_file_tree" model="ir.ui.view">
            <field name="name">teds.mft.file.tree</field>
            <field name="model">teds.mft.file</field>
            <field name="arch" type="xml">
                <tree string="Configuration MFT Server">
                    <field name="host_remote"/>
                    <field name="user_remote"/>
                    <field name="password_remote"/>
                    <field name="folder_path_remote"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        
        <record id="view_teds_mft_file_form" model="ir.ui.view">
            <field name="name">teds.mft.file.form</field>
            <field name="model">teds.mft.file</field>            
            <field name="arch" type="xml">
                <form string="Configuration File">
                    <header>
                	    <button name="ssu_received" string="SSU Received" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <!-- <div class="oe_title">                      
                            <h1>
                                <label string="Configuration MFT Server"/>
                            </h1>
                        </div> -->
                        <group>
                            <field name="host_remote"/>
                            <field name="user_remote"/>
                            <field name="password_remote" password="True"/>
                            <field name="folder_path_remote"/>
                            <field name="active"/>
                        </group>
                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"></field>
                                        <field name="create_date" readonly="1"></field>
                                    </group>
                                    <group>							
                                        <field name="write_uid" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>   	                    
                </form>
            </field>
        </record>
            
        <record model="ir.actions.act_window" id="view_teds_mft_file_action">
            <field name="name">MFT File Configuration</field>
            <field name="res_model">teds.mft.file</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="mft_configuration_folder_menuitem"  sequence="2" parent="wtc_dealer_menu.ma_b2b_menu" action="view_teds_mft_file_action"/>
	</data>
</openerp>