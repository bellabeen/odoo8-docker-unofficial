		<record id="view_b2b_file_ps_report_pivot_search" model="ir.ui.view">
	        <field name="name">b2b.file.ps.report.pivot.search</field>
	        <field name="model">b2b.file.ps.report.pivot</field>
	        <field name="arch" type="xml">
	            <search string="Report PS">
	                <filter name="packed at ahm" string="Packed at AHM" domain="[('status','=','packed at ahm')]"/>
	                <filter name="on intransit" string="On Intransit" domain="[('status','=','on intransit')]"/>
	                <filter name="received by md" string="Received by MD" domain="[('status','=','received by md')]"/>
	                <field name="kode_ps"/>
	                <field name="kode_sparepart"/>
	                <field name="tanggal_ps"/>
	             
	                <group expand="1" string="Group By">
	                    <filter string="Tanggal PS" name="tanggal_ps" context="{'group_by':'tanggal_ps'}"/>
	                    <filter string="Status" context="{'group_by':'status'}" />
	       				<filter string="Qty PS" context="{'group_by':'detail_ps'}" />
	       				<filter string="Qty PO" context="{'group_by':'detail_po'}" />
	                </group>
	            </search>
	        </field>
    	</record>

