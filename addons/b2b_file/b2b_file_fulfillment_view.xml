<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<record id="view_b2b_file_fulfillment_tree" model="ir.ui.view">
       <field name="name">b2b.file.fulfillment.tree</field>
       <field name="model">b2b.file.fulfillment</field>
       <field name="arch" type="xml">
       	 <tree string="B2B File Fulfillment">
             <field name="invoice_id"/>
             <field name="date"/>
             <field name="branch_id"/>
             <field name="division"/>
          </tree>
       </field>
     </record>
     
	<record id="b2b_file_fulfillment_form" model="ir.ui.view">
      <field name="name">b2b.file.fulfillment.form</field>
      <field name="model">b2b.file.fulfillment</field>            
      <field name="arch" type="xml">
         <form string="B2B File Fulfillment">
          <header>
                	<button name="action_confirm" states="draft" string="Confirm" class="oe_highlight" type="object" groups="base.group_user"/>
                	<field name="state" widget="statusbar" statusbar_visible="draft,done" />
                </header>
                
           <sheet>
	       		<div class="oe_title">                      
					<h1>
	     				<label string="B2B File Fulfillment"/>
	 				</h1>
	         	</div>
                 <group>
               		<group col="4">
                		<field name="branch_id" options="{'no_create': True,'no_open':True}" />		                    
			            <field name="division"/>
			            <field name="invoice_id" options="{'no_create': True,'no_open':True}" />
             			<field name="date"/>
             			<field name="supplier_invoice_number"/>
             			<field name="no_invoice"/>
             			<field name="keterangan"/>
               		</group>
               	</group>
               	
               	<notebook >
		                
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
									<field name="confirm_uid" readonly="1"></field>
									<field name="confirm_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
									<field name="cancel_uid" readonly="1"></field>
									<field name="cancel_date" readonly="1"></field>
								</group>
							</group>
						</page>		                 
		            </notebook>	
		            
            </sheet>   	                    
          </form>
       </field>
    </record>
        
    	<record model="ir.actions.act_window" id="b2b_file_fulfillment_action">
		    <field name="name">B2B File Fulfillment</field>
		    <field name="res_model">b2b.file.fulfillment</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
		<menuitem id="b2b_file_fulfillment_menuitem"  parent="wtc_dealer_menu.workshop_report_menu" sequence="7"  action="b2b_file_fulfillment_action"/>
		
       	
	</data>
</openerp>