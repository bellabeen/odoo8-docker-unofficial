<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="b2b_file_monitoring_tree" model="ir.ui.view">
            <field name="name">b2b.file.monitoring.tree</field>
            <field name="model">b2b.file.monitoring</field>
            <field name="arch" type="xml">
                <tree string="Read File">
	                <field name="name"/>
	                <field name="ext"/>
	                <field name="keterangan"/>	
	                <field name="date"/>	
                    <field name="last_check"/>
                </tree>
            </field>
        </record>	

        <record id="view_b2b_file_monitoring_form" model="ir.ui.view">
            <field name="name">b2b.file.monitoring.form</field>
            <field name="model">b2b.file.monitoring</field>
            <field name="arch" type="xml">
                <form string="Read File">
                
                <header>
                    <button name="process_remaining_line" attrs="{'invisible':['|',('state','=','done'),('type','!=','sudah_ada')]}" string="Process Remaining Line" type="object" class="oe_highlight" confirm="Data line yang selisih akan diproses. Apakah anda yakin?" groups="b2b_file.group_button_b2b_file_monitoring_process_line"/>
                    <!-- <button name="process_lot_update" attrs="{'invisible':['|',('state','=','done'),('type','!=','lot_exists')]}" string="Update LOT" type="object" class="oe_highlight" confirm="Data lot akan diubah. Apakah anda yakin?" groups="b2b_file.group_button_b2b_file_monitoring_update_lot"/> -->
                    <button name="move" string="manual move file" attrs="{'invisible':[('state','!=','done')]}" type="object" groups="b2b_file.group_button_b2b_file_monitoring_move_line"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done" />
                </header>
               
				<sheet>
                    <group>
                        <group>
                            <field name="keterangan" readonly="1"/>
                            <field name="name" readonly="1" />
                            <field name="ext" readonly="1" />
                            <field name="date" readonly="1" />

                            <!-- <field name="is_processed" invisible="1" /> -->

                            <field name="qty_1" readonly="1" />	
                            <field name="qty_2" readonly="1" />
                            <field name="type" readonly="1" />	
                            <field name="total_check" readonly="1" />	
                            <field name="last_check" readonly="1" />
                        </group>
                        <group>
		                    <field name="lot_show" attrs="{'invisible':[('lot_show','=',False)]}" readonly="1" />
                            <field name="lot_id" attrs="{'invisible':[('lot_show','=',False)]}" readonly="1" />
                        </group>
                        <group>	
                        </group>
                        <group>
                        </group>
                        
                    </group>
                    <notebook>
                        <page string='Old Line'>
                            <field name='old_line_ids' readonly='1'>
                                <tree>
                                    <field name='nomor' readonly="1" />
                                    <field name='name' readonly="1" />
                                    <!-- <field name='b2b_file_id' readonly="1" /> -->
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name='name' readonly="1" />
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string='New Line'>
                            <field name='new_line_ids' readonly='1'>
                                <tree>
                                    <field name='nomor' readonly="1" />
                                    <field name='name' readonly="1" />
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name='name' readonly="1" />
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet> 
                </form>
            </field>
        </record>

      <record id="action_b2b_file_monitoring" model="ir.actions.act_window">
             <field name="res_model">b2b.file.monitoring</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="name">B2B File Monitoring</field>
       </record>

	    <menuitem id="wtc_b2b_file_monitoring_menuitem"  parent="wtc_dealer_menu.workshop_report_menu" sequence="8"  action="action_b2b_file_monitoring"/>

	
	</data>
</openerp>
