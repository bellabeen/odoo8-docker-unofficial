<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="view_report_asset_wizard" model="ir.ui.view">
		<field name="name">Print Report Asset</field>
		<field name="model">wtc.report.asset.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Report Asset">
	        	<group col="4" colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
					<field name="option"/>     		
	   				<field name="status"/>
	   				<!--<field name="start_date"/>
	   				<field name="end_date"/>-->
	          	</group>
	          	
				<notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
		      		<page string="Branches">
						<field name="branch_ids" colspan="4" nolabel="1"/>
		      		</page>
		      		<page string="Category">
		          		<field name="category_ids" colspan="4" nolabel="1"/>
		          	</page>
	        	</notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
	          	
	        </form>
    	</field>
    </record>
	
    <record id="action_report_asset_wizard" model="ir.actions.act_window">
		<field name="name">Report Asset/Prepaid</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wtc.report.asset.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_report_asset_wizard"/>
		<field name="target">new</field>
    </record>

	<menuitem id="menu_asset_report" parent="wtc_purchase_asset.ga_report_menu" sequence="10" action="action_report_asset_wizard"/>

	</data>
</openerp>