<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="view_wtc_report_stock_stnk_wizard" model="ir.ui.view">
		<field name="name">Laporan Stock STNK</field>
		<field name="model">wtc.report.stock.stnk.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Laporan Stock STNK">
	        	<group col="4" colspan="4">
          	
          	</group>
        
	          	
				<notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
		      		<page string="Branch">
						<field name="branch_ids" options="{'no_show':True,'no_create':True,'no_open':True}" colspan="4" nolabel="1"/>
		      		</page>
		           	<page string="Location">
		          		<field name="lokasi_stnk_ids" options="{'no_show':True,'no_create':True,'no_open':True}" colspan="4" nolabel="1"/>
		          	</page> 
	        	</notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
	          	
	        </form>
    	</field>
    </record>

    <record id="action_wtc_report_stock_unit_wizard" model="ir.actions.act_window">
		<field name="name">Stock STNK</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wtc.report.stock.stnk.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_wtc_report_stock_stnk_wizard"/>
		<field name="target">new</field>
    </record>


 <menuitem id="menu_showroom_wtc_report_stock_stnk"  parent="wtc_dealer_menu.stnk_bpkb_report_menu" sequence="2"  action="action_wtc_report_stock_unit_wizard"/>	
	 
	</data>
</openerp>