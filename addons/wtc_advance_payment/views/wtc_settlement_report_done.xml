<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="settlement_done">
       <style type="text/css">
         h1   {font-size: 18; font-weight:bold; text-align: left; }
         h2   {font-size: 8; font-weight:bold; text-align: left; }
       

         table#t01 {text-align: left;width: 100%; border-left: 0px solid black; border-right: 0px solid black; border-bottom: 0px solid black; black; border-top: 1px solid black;}

         table#t02 {text-align: left;width: 100%; border-left: 1px solid black; border-right: 1px solid black; border-bottom: 1px solid black; black; border-top: 1px solid black;}

         td#td01 {border-left: 1px solid black; border-right: 0px solid black; border-top: 0px solid black; border-bottom: 0px solid black;} 
      
         tr#tr01 {font-size: 10; height: 10%; border-left: 1px solid black; border-right: 1px solid black; border-top: 1px solid black; border-bottom: 1px solid black;} 

         th#th01 {border-left: 1px solid black; border-right: 1px solid black; border-top: 1px solid black; border-bottom: 1px solid black; font-size: 14;}  

         tbody#tbody01 {border-left: 0px solid black; border-right: 0px solid black; border-top: 0px solid black; border-bottom: 1px solid black; font-size: 14;}
    </style>

    <t t-name="report.external_layout_header">
    <t t-foreach="docs" t-as="p">
    <div class="header">
        <div class="row">
          <table width="100.00%" border="1">        
             <tr>
                <td  width="80.00%" style="font-family:Helvetica;">Dicetak oleh <span t-field="user.name"/> pada tanggal <span t-esc="time.strftime('%d/%m/%Y')"/> <span t-esc="time.ctime().split()[3]"/> 
              </td>
                <td width="20.00%" style="font-family: Helvetica;"></td>
            </tr>
          </table>

            <table width="100.00%" border="1">     
             <tr>
                <td  width="65.00%" style="font-family:Helvetica;"><span t-field="p.branch_id.name">
                </span></td>
                <td width="35.00%" style="font-family: Helvetica;">
                  <table border="1" width="100.00%">
                    <tr>
                    <td width="20.00%">No</td>
                    <td width="2.00%">:</td>
                    <td><span t-field="p.name"></span></td>
                    </tr>
                  </table>
                </td>
            </tr>
             <tr>
                <td  width="65.00%" style="font-family:Helvetica;"><span t-field="p.branch_id.street"></span></td>
                <td width="35.00%" style="font-family: Helvetica;">
                <table border="1" width="100.00%">
                    <tr>
                    <td width="20.00%">Tanggal</td>
                    <td width="2.00%">:</td>
                    <td><span t-field="p.date"></span></td>
                    </tr>
                </table>
                </td>
            </tr>      
          </table>    
          <table width="100.00%" border="1">      
            <tr>
                <td  width="80.00%" align="center" style="font-family:Helvetica;">
                  <p>&#160;</p>
                </td>
            </tr>  
             <tr>
                <td  width="80.00%" align="center" style="font-family:Helvetica;">PENYELESAIAN BON SEMENTARA</td>
            </tr>
          </table>   
        </div>   
    </div>
  </t>
</t>

    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
          <div class="page">
           <div class="oe_structure"/>
              <div class="row" >
                <table id="t02">
                  <tr style="font-size: 15px;" >
                      <th id="th01" height="25" width="5.00%"> &#160; No </th>
                      <th id="th01" height="25" width="40.00%">&#160; Rekening  </th>
                      <th id="th01" height="25" width="40.00%">&#160; Keterangan  </th>
                      <th id="th01" height="25" width="25.00%">&#160; Jumlah  </th>
                  </tr>

                   <tbody  style="font-size: 15px;">
                    <tr id="tr01" t-foreach="o.settlement_line" t-as="k">
                      <td id="td01" style="text-align: Center" height="25"><span t-esc="no_urut()"/></td>
                      <td id="td01" height="25">&#160;<span style="font-size: 12;" t-field="k.account_id.name"/></td>
                      <td id="td01" height="25">&#160;<span style="font-size: 12;" t-field="o.description"/></td>
                      <td id="td01" height="25" style="text-align: right; font-size: 12;"><span t-field="k.amount"/></td>
                    </tr>

                     <tr id="tr01">
                      <td id="td01" colspan="3" style="text-align: Center;font-size: 12;" height="25">Total</td>
                      <td id="td01" height="25" style="text-align: right; font-size: 12;"><span style="font-size: 12;" t-field="o.amount_gap"/></td>
                    </tr>

                    <tr id="tr01">
                      <td id="td01" colspan="4" style="text-align: left;font-size: 12;" height="25">Terbilang : ## <span style="font-size: 12;" t-esc="terbilang(amount_total())"/>
                      ##</td>
                    </tr>
                  </tbody>
                  </table>
                  
                  <table border="0" width="100.00%">
                    <tr>
                    <td colspan="2" width="50.00%"><p>&#160;</p></td>
                    </tr>
                    <tr>
                    <td width="50.00%" style="text-align: Center;font-size: 12;">Mengetahui</td>
                    <td width="50.00%" style="text-align: Center;font-size: 12;">Penerima</td>
                    </tr>
                    <tr>
                    <td colspan="2" width="50.00%"><p>&#160;</p></td>
                    </tr>
                    <tr>
                    <td colspan="2" width="50.00%"><p>&#160;</p></td>
                    </tr>
                    <tr>
                    <td colspan="2" width="50.00%"><p>&#160;</p></td>
                    </tr>
                    <tr>
                    <td colspan="2" width="50.00%"><p>&#160;</p></td>
                    </tr>
                    <tr>
                    <td width="50.00%" style="text-align: Center;font-size: 12;">(___________________)</td>
                    <td width="50.00%" style="text-align: Center;font-size: 12;">(___________________)</td>
                    </tr>
                 </table>
          
                </div>  

            <h1></h1>
            <div class="row"></div>              
            <div class="oe_structure"/>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
