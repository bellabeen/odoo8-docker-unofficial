<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="avp_external_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-raw="0" />
        </template>
        <template id="teds_advance_payment">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="wtc_advance_payment.avp_external_layout">
                        <div class="page">
                            <style type="text/css">
                                table.nborder {
                                    width: 100%;
                                }
                                table.wborder {
                                    width: 100%;
                                    height: 100%;
                                    padding: 2px;
                                    border: 1px solid black;
                                    border-collapse: collapse;
                                }
                            </style>
                            <table class="nborder" name="avp_header">
                                <tr>
                                    <td colspan="3" style="width: 100%;">Dicetak oleh <span t-esc="user.name" /> pada tanggal <span t-esc="tanggal()" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 50%; font-weight: bold;"><t t-esc="o.branch_id.name" /></td>
                                    <td style="width: 30%; text-align: right;">&#160;&#160;No&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</td>
                                    <td style="width: 20%;">:&#160;&#160;<span t-esc="o.name" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 50%;"><span t-esc="o.branch_id.street" /></td>
                                    <td style="width: 30%; text-align: right;">&#160;&#160;Tanggal&#160;</td>
                                    <td style="width: 20%;">:&#160;&#160;<span t-esc="o.date" /></td>
                                </tr>
                                <tr>
                                    <td colspan="3" style="width: 100%; text-align: center;">PENGAMBILAN BON SEMENTARA</td>
                                </tr>
                            </table>
                            <table class="nborder">
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black; border-top: 1px solid black;">DIBAYAR KEPADA</td>
                                    <td style="width: 2%; border-top: 1px solid black;">:</td>
                                    <td style="width: 78%; border-right: 1px solid black; border-top: 1px solid black;"><span t-esc="o.user_id.name" />&#160;-&#160;<span t-esc="o.user_id.street" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black;">SISA BS YANG LALU</td>
                                    <td style="width: 2%;">:</td>
                                    <td style="width: 78%; border-right: 1px solid black;"></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black;">KETERANGAN</td>
                                    <td style="width: 2%;">:</td>
                                    <td style="width: 78%; border-right: 1px solid black;"><span t-esc="o.description" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black;">No. Rekening</td>
                                    <td style="width: 2%;">:</td>
                                    <td style="width: 78%; border-right: 1px solid black;"><span t-esc="o.no_rekening_tujuan" /></td>
                                </tr>
                            </table>
                            <table class="wborder">
                                <tr>
                                    <th style="width: 5%; text-align: center; border: 1px solid black;">No</th>
                                    <th style="width: 60%; text-align: center; border: 1px solid black;">Keterangan</th>
                                    <th style="width: 30%; text-align: center; border: 1px solid black;">Jumlah</th>
                                </tr>
                                <t t-set="no" t-value="1"/>
                                <tr>
                                    <td style="padding-left: 2px; text-align: center; border: 1px solid black;"><t t-esc="no" /></td>
                                    <td style="padding-left: 2px; border: 1px solid black;"><t t-esc="o.description" /></td>
                                    <td style="padding-right: 2px; text-align: right; border: 1px solid black;"><t t-esc="'{:,.0f}'.format(o.amount)" /></td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="padding-left: 2px; text-align: center; border: 1px solid black;">TOTAL</td>
                                    <td style="padding-right: 2px; text-align: right;"><t t-esc="'{:,.0f}'.format(o.amount)" /></td>
                                </tr>
                                <tr>
                                    <td colspan="3" style="padding-left: 2px; padding-right: 2px; border-left: 1px solid black; border-right: 1px solid black;">Terbilang: ###&#160;<span t-esc="terbilang(o.amount)" />###</td>
                                </tr>
                            </table>
                            <table class="nborder">
                                <tr>
                                    <td style="width: 15%; padding-left: 3px; border-left: 1px solid black; border-right: 1px solid black;">Disetujui oleh</td>
                                    <td style="width: 17%; padding-left: 3px; border-right: 1px solid black;">Administrasi</td>
                                    <td style="width: 17%; padding-left: 3px; border-right: 1px solid black;">Finance</td>
                                    <td style="width: 17%; padding-left: 3px; border-right: 1px solid black;">Kasir</td>
                                    <td style="width: 17%; padding-left: 3px; border-right: 1px solid black;">Accounting</td>
                                    <td style="width: 17%; padding-left: 3px; border-right: 1px solid black;">Penerima</td>
                                </tr>
                                <tr>
                                    <td style="width: 15%; border-left: 1px solid black; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 15%; border-left: 1px solid black; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 15%; border-left: 1px solid black; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 15%; border-left: 1px solid black; border-right: 1px solid black; border-bottom: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black; border-bottom: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black; border-bottom: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black; border-bottom: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black; border-bottom: 1px solid black;">&#160;</td>
                                    <td style="width: 17%; border-right: 1px solid black; border-bottom: 1px solid black;">&#160;</td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>