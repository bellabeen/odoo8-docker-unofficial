<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="view_report_penjualan_wizard" model="ir.ui.view">
		<field name="name">Print Laporan Penjualan</field>
		<field name="model">wtc.report.penjualan.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Laporan Penjualan">
	        	<group col="4" colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
	            	<field name="options"/>
	            	<field name="sales_koordinator_id" options="{'no_open':True,'no_create_edit':True}"/>
	            	<field name="user_id" options="{'no_open':True,'no_create_edit':True}"/>
	            	<field name="product_ids" widget="many2many_tags" options="{'no_open':True,'no_create_edit':True}"/>
	            	<label for="start_date" string="Date"/>
	   				<div>
	   					<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
	   				</div>
	   				<field name="state"/>
	          	</group>
	          	
				<notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
		      		<page string="Branch">
						<field name="branch_ids" colspan="4" nolabel="1"/>
		      		</page>
		           	<page string="Finco">
		          		<field name="finco_ids" colspan="4" nolabel="1"/>
		          	</page>
	        	</notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
	          	
	        </form>
    	</field>
    </record>

    <record id="action_report_penjualan_wizard" model="ir.actions.act_window">
		<field name="name">Laporan Penjualan</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wtc.report.penjualan.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_report_penjualan_wizard"/>
		<field name="target">new</field>
    </record>

    <record id="action_report_penjualan_salesman_wizard" model="ir.actions.act_window">
    	<field name="name">Laporan Penjualan Salesman</field>
    	<field name="type">ir.actions.act_window</field>
    	<field name="res_model">wtc.report.penjualan.wizard</field>
    	<field name="view_mode">form</field>
    	<field name="view_id" ref="view_report_penjualan_wizard"/>
    	<field name="target">new</field>
    	<field name="context">{'column_filter': True}</field>
    </record>

	<menuitem id="menu_penjualan_report" parent="wtc_dealer_menu.showroom_report_menu" sequence="9" action="action_report_penjualan_wizard"/>

	<menuitem id="menu_penjualan_salesman_report" parent="wtc_dealer_menu.showroom_report_menu" sequence="9" action="action_report_penjualan_salesman_wizard"/>

	</data>
</openerp>