<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record model='ir.ui.view' id='wtc_report_mutasi_detil'>
        <field name='name'>Report Mutasi Detil</field>
        <field name='model'>wtc.report.mutasi.detil</field>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <form string="Laporan Hutang">
                <group col="4" colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
                    <field name="options" required='1' string='Options'/>
                    <field name='division' required='1' string='Division'/>
                    <label for="start_date" string="Tanggal"/>  
                    <div>
                        <field name="start_date" class="oe_inline" required="1"/> - <field name="end_date" class="oe_inline" required="1"/>
                    </div>
                    <field name='state' required='1' string="State"/> 
                    <field name="type_file" required="1"/>
                </group>
                <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}"> 
                    <page string="Branches">
                        <field name="branch_ids" colspan="4" nolabel="1"/>
                    </page>
                    <page string="Product">
                        <field name="product_ids" colspan="4" nolabel="1"/>
                    </page>
                </notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
                
            </form>
        </field>
    </record>

    <record model='ir.actions.act_window' id='mutasi_detil_action'>
        <field name='name'>Mutation Detil</field>
        <field name='res_model'>wtc.report.mutasi.detil</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>form</field>
        <field name="target">new</field>
    </record>

<!--     <menuitem name='Mutasi' id='mutasi_menu'/>
    <menuitem name='Part' id='part_menu' parent='mutasi_menu'/> -->
    <menuitem name='Laporan Mutasi Part (Detail)' id='mutasi_part_menu' parent='wtc_dealer_menu.workshop_report_menu' action='mutasi_detil_action'/>
    <menuitem name='Laporan Mutasi Unit (Detail)' id='mutasi_unit_menu' parent='wtc_dealer_menu.showroom_report_menu' action='mutasi_detil_action'/>

    </data>
</openerp>