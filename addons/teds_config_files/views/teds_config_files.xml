<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>	
  	<record id="view_teds_config_files_tree" model="ir.ui.view">
      <field name="name">view.teds.config.files.tree</field>
      <field name="model">teds.config.files</field>
      <field name="arch" type="xml">
        <tree string="Configuration of Saved Files">
          <field name="host_remote"/>
          <field name="user_remote"/>
          <field name="folder_path_remote"/>
          <field name="folder_path_local"/>
        </tree>
      </field>
    </record>       
  	<record id="view_teds_config_files_form" model="ir.ui.view">
      <field name="name">view.teds.config.files.form</field>
      <field name="model">teds.config.files</field>            
      <field name="arch" type="xml">
        <form string="Configuration of Saved Files">
          <sheet>
         		<group>
              <field name="host_remote"/>
              <field name="user_remote"/>
              <field name="password_remote" password="True"/>
              <field name="folder_path_remote"/>
              <field name="folder_path_local"/>
         		</group>
            <notebook>
              <page string="Audit Trail">
                  <group>
                      <group>
                          <field name="create_uid" readonly="1"></field>
                          <field name="create_date" readonly="1"></field>
                      </group>
                      <group>							
                          <field name="write_uid" readonly="1"></field>
                          <field name="write_date" readonly="1"></field>
                      </group>
                  </group>
              </page>
            </notebook>
          </sheet>   	                    
        </form>
       </field>
    </record>        
  	<record model="ir.actions.act_window" id="view_teds_config_files_action">
	    <field name="name">Configuration Saved Files</field>
	    <field name="res_model">teds.config.files</field>
	    <field name="view_type">form</field>
	    <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Configuration Saved Files" parent="wtc_dealer_menu.ma_branches_menu" id="teds_config_files_menu" action="view_teds_config_files_action" sequence="501"/>
	</data>
</openerp>