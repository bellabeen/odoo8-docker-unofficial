<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="teds_stock_opname_aksesoris_unit_print_validasi">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure"/>
                        <div class="row"> 
                        </div>
                        <div class="col-xs-12">
                            <table style="font-size:10px" width="100%">
                                <tr height="30px">
                                    <th colspan="4" style="font-size:14px"><span t-esc="name(data)"/></th>
                                </tr>
                                <tr>
                                    <th>Branch</th>
                                    <td>: <span t-esc="branch(data)"/></td>

                                    <th>PDI</th>
                                    <td>: <span t-esc="staff_bbn(data)"/></td>
                                </tr>
                                <tr>
                                    <th>Division</th>
                                    <td>: <span t-esc="division(data)"/></td>

                                    <th>ADH</th>
                                    <td>: <span t-esc="adh(data)"/></td>            
                                </tr>
                                <tr>
                                    <th>Tanggal SO</th>
                                    <td>: <span t-esc="tgl_so(data)"/></td>

                                    <th>SOH</th>
                                    <td>: <span t-esc="soh(data)"/></td>
                                </tr>
                            </table>
                            <br/>
                            <p><b>Data Stock Aksesoris</b></p>
                            <table class="table" style="font-size:8px">
                                <tr>
                                    <th>No</th>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Good</th>
                                    <th>Not Good</th>
                                    <th>Total Fisik</th>
                                    <th>Total Unit</th>
                                    <th>(+/- NG dr SO lalu)</th>
                                    <th>Selisih</th>
                                    <th>Selisih SO Lalu</th>
                                </tr>
                                <tr t-foreach="detail_ids(data)" t-as="detail">
                                    <td><span t-esc="no_urut()"/></td>
                                    <td><span t-esc="detail['product']"/></td>
                                    <td><span t-esc="detail['category']"/></td>
                                    <td><span t-esc="detail['qty_good']"/></td>
                                    <td><span t-esc="detail['qty_not_good']"/></td>
                                    <td><span t-esc="detail['total']"/></td>
                                    <td><span t-esc="detail['total_unit']"/></td>
                                    <td><span t-esc="detail['last_not_good']"/></td>
                                    <td><span t-esc="detail['selisih']"/></td>
                                    <td><span t-esc="detail['selisih_so_lalu']"/></td>
                                </tr>
                                <tr>
                                    <td colspan="12"><span t-esc="data['user']"/>, <span t-esc="data['date']"/></td>
                                </tr>
                            </table>  
                        </div>
                        <br/>
                        <div class="col-xs-12">
                             <table class="table table-bordered" style="font-size:10px">
                                <tr>
                                    <td align="center">PIC SO</td>
                                    <td colspan="2" align="center">MENGETAHUI</td>
                                </tr>
                                <tr height="80px">
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th><span t-esc="adh(data)"/></th>
                                    <th><span t-esc="staff_bbn(data)"/></th>
                                    <th><span t-esc="soh(data)"/></th>
                                </tr>
                                <tr>
                                    <td>ADH</td>
                                    <td>PDI</td>
                                    <td>SOH</td>  
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <span t-esc="data['user']"/>, <span t-esc="data['date']"/>
                                    </td>
                                </tr>
                            </table>
                        </div>                  
                    <div class="oe_structure"/>
                </div>
        </t>
    </t>
</template>
</data>
</openerp>
