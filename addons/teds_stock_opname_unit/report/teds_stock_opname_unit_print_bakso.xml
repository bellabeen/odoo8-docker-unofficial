<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="teds_stock_opname_unit_print_bakso">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row"> 
                    </div>
                    <table class="table table-bordered" style="font-size:11px">
                        <tr>
                           <td style="text-align:center"><b>BERITA ACARA STOCK OPNAME UNIT</b></td>
                        </tr>
                        <tr>
                            <td>
                                <table class="table" style="font-size:10px">
                                    <tr>
                                        <th>Branch</th>
                                        <th>: <span t-esc="branch(data)"/></th>
                                        <th>Jam Mulai</th>
                                        <th>: <span t-esc="jam_mulai(data)"/></th>
                                    </tr>
                                    <tr>
                                        <th>Division</th>
                                        <th>: <span t-esc="division(data)"/></th>
                                        <th>Jam Selesai</th> 
                                        <th>: <span t-esc="jam_selesai(data)"/></th>
                                    </tr>
                                    <tr>
                                        <th>Tanggal SO</th>
                                        <th colspan="3">: <span t-esc="tgl_so(data)"/></th>
                                    </tr>
                                    <tr>
                                        <td colspan="4">
                                            Hasil Stock Opname hari ini sebagai berikut: <br/>
                                            <table width="100%" style="font-size:9px">
                                                <tr>
                                                    <td width="32%">
                                                        <table class="table table-bordered" style="font-size:9px;">
                                                            <tr>
                                                                <th rowspan="2" style="text-align:center;">Type</th>
                                                                <th colspan="2" style="text-align:center;">Jumlah</th>
                                                            </tr>
                                                            <tr>
                                                                <th style="text-align:center;">Sistem</th>
                                                                <th style="text-align:center;">Fisik</th>
                                                            </tr>
                                                            <tr t-foreach="tabel_1(data)" t-as="tb1">
                                                                <td><span t-esc="tb1['product_type']"/></td>
                                                                <td><span t-esc="tb1['sistem']"/></td>
                                                                <td><span t-esc="tb1['fisik']"/></td>
                                                            </tr>
                                                            <tr>
                                                                <th>Total</th>
                                                                <th><t t-esc="sum(t1['sistem'] for t1 in tabel_1(data))"/></th>
                                                                <th><t t-esc="sum(t1['fisik'] for t1 in tabel_1(data))"/></th>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                    <td width="1%">
                                                    </td>
                                                    <td width="33%">
                                                        <t t-if="tabel_2(data) != []">
                                                            <table class="table table-bordered" style="font-size:9px;">
                                                                <tr>
                                                                    <th rowspan="2" style="text-align:center;">Type</th>
                                                                    <th colspan="2" style="text-align:center;">Jumlah</th>
                                                                </tr>
                                                                <tr>
                                                                    <th style="text-align:center;">Sistem</th>
                                                                    <th style="text-align:center;">Fisik</th>
                                                                </tr>
                                                                <tr t-foreach="tabel_2(data)" t-as="tb2">
                                                                    <td><span t-esc="tb2['product_type']"/></td>
                                                                    <td><span t-esc="tb2['sistem']"/></td>
                                                                    <td><span t-esc="tb2['fisik']"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Total</th>
                                                                    <th><t t-esc="sum(t2['sistem'] for t2 in tabel_2(data))"/></th>
                                                                    <th><t t-esc="sum(t2['fisik'] for t2 in tabel_2(data))"/></th>
                                                                </tr>
                                                            </table>
                                                        </t>
                                                    </td>
                                                    <td width="1%">
                                                    </td>
                                                    <td width="33%">
                                                        <t t-if="tabel_3(data) != []">
                                                            <table class="table table-bordered" style="font-size:9px;">
                                                                <tr>
                                                                    <th rowspan="2" style="text-align:center;">Type</th>
                                                                    <th colspan="2" style="text-align:center;">Jumlah</th>
                                                                </tr>
                                                                <tr>
                                                                    <th style="text-align:center;">Sistem</th>
                                                                    <th style="text-align:center;">Fisik</th>
                                                                </tr>
                                                                <tr t-foreach="tabel_3(data)" t-as="tb3">
                                                                    <td><span t-esc="tb3['product_type']"/></td>
                                                                    <td><span t-esc="tb3['sistem']"/></td>
                                                                    <td><span t-esc="tb3['fisik']"/></td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Total</th>
                                                                    <th><t t-esc="sum(t3['sistem'] for t3 in tabel_3(data))"/></th>
                                                                    <th><t t-esc="sum(t3['fisik'] for t3 in tabel_3(data))"/></th>
                                                                </tr>
                                                            </table>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5">
                                                        <table class="table table-bordered" style="font-size:11px">
                                                            <tr>
                                                                <th colspan="2" style="text-align:center;">Rekapitulasi</th>
                                                            </tr>
                                                            <tr>
                                                                <th>Total Secara Sistem</th>
                                                                <th><span t-esc="total_sistem(data)"/></th>
                                                            </tr>
                                                            <tr>
                                                                <th>Total Fisik Unit</th>
                                                                <th><span t-esc="total_fisik(data)"/></th>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5">
                                                       <t t-if="nrfs_ids(data) != []">
                                                            <table class="table table-bordered" style="font-size:9px" width="50%">
                                                                <tr>
                                                                    <td colspan="6">Not Ready For Sale</td>
                                                                </tr>
                                                                <tr>
                                                                    <th>Product Type</th>
                                                                    <th>Warna</th>
                                                                    <th>Engine Number</th>
                                                                    <th>Chassis Number</th>
                                                                    <th>Kondisi Fisik</th>
                                                                    <th>Keterangan</th>
                                                                </tr>
                                                                <tr t-foreach="nrfs_ids(data)" t-as="nrfs">
                                                                    <td><span t-esc="nrfs['product_type']"/></td>
                                                                    <td><span t-esc="nrfs['product_warna']"/></td>
                                                                    <td><span t-esc="nrfs['engine_no']"/></td>
                                                                    <td><span t-esc="nrfs['chassis_no']"/></td>
                                                                    <td><span t-esc="nrfs['kondisi_fisik']"/></td>
                                                                    <td><span t-esc="nrfs['keterangan']"/></td>
                                                                </tr>
                                                            </table>
                                                        </t>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5">
                                                        <u><b>PERNYATAAN</b></u><br/>
                                                        Proses stock opname ini telah berjalan dengan baik dan hasil ini telah dinyatakan sah untuk diakui dan telah didukung oleh dokumen yang seharusnya dilampirkan.
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="5">
                                                        <table class="table table-bordered">
                                                            <tr>
                                                                <td><span t-esc="note_bakso(data)"/></td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td align="center" colspan="5">
                                                        <table class="table table-bordered" style="font-size:9px">
                                                            <tr>
                                                                <td colspan="3" align="center"><b>PERSON IN CHARGE YANG BERTUGAS</b></td>
                                                            </tr>
                                                            <tr>
                                                                <td align="center">PIC SO</td>
                                                                <td colspan="2" align="center">MENGETAHUI</td>
                                                            </tr>
                                                            <tr height="50px">
                                                                <td></td>
                                                                <td></td>
                                                                <td></td>
                                                            </tr>
                                                            <tr>
                                                                <td><span t-esc="adh(data)"/> <br/> <b>ADH</b></td>
                                                                <td><span t-esc="staff_bbn(data)"/> <br/> <b>PDI</b></td>
                                                                <td><span t-esc="soh(data)"/> <br/> <b>SOH</b></td>
                                                            </tr>
                                                            <tr>
                                                                <td colspan="3">
                                                                    <span t-esc="data['user']"/>, <span t-esc="data['date']"/>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                <div class="oe_structure"/>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
