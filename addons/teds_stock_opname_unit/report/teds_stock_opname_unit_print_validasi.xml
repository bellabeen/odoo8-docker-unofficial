<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="teds_stock_opname_unit_print_validasi">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div class="oe_structure"/>
                        <div class="row"> 
                        </div>
                        <div class="col-xs-12">
                            <table style="font-size:10px; width:100%; line-height:200%" border="1">
                                <tr height="30px">
                                    <th colspan="4" style="font-size:13px;"><span t-esc="name(data)"/></th>
                                </tr>
                                <tr>
                                    <th width="10%%" style="padding-top:10px">Branch</th>
                                    <td>: <span t-esc="branch(data)"/></td>

                                    <th width="10%%">PDI</th>
                                    <td>: <span t-esc="staff_bbn(data)"/></td>
                                </tr>
                                <tr>
                                    <th>Division</th>
                                    <td>: <span t-esc="division(data)"/></td>

                                    <th>ADH</th>
                                    <td>: <span t-esc="adh(data)"/></td>            
                                </tr>
                                <tr>
                                    <th>Tanggal SO</th>
                                    <td>: <span t-esc="tgl_so(data)"/></td>

                                    <th>SOH</th>
                                    <td>: <span t-esc="soh(data)"/></td>
                                </tr>
                            </table>
                            <p style="padding-top:5px"><b>Data Stock Unit</b></p>
                            <table class="table" style="font-size:8px">
                                <tr>
                                    <th>No</th>
                                    <th>Engine Number</th>
                                    <th>Validasi Engine</th>
                                    <th>Chassis Number</th>
                                    <th>Validasi Chassis</th>
                                    <th>Validasi Fisik</th>
                                    <th>Product Type</th>
                                    <th>Warna</th>
                                    <th>Validasi Warna</th>
                                    <th>Incoming Date</th>
                                    <th>Validasi Taging</th>
                                    <th>Location</th>
                                    <th>Konidisi Fisik</th>
                                    <th>Keterangan</th>
                                </tr>
                                <tr t-foreach="detail_ids(data)" t-as="detail">
                                    <td><span t-esc="no_urut()"/></td>
                                    <td><span t-esc="detail['engine_no']"/></td>
                                    <td><span t-esc="detail['validasi_engine']"/></td>
                                    <td><span t-esc="detail['chassis_no']"/></td>
                                    <td><span t-esc="detail['validasi_chassis']"/></td>
                                    <td><span t-esc="detail['validasi_fisik']"/></td>
                                    <td><span t-esc="detail['product_type']"/></td>
                                    <td><span t-esc="detail['product_warna']"/></td>
                                    <td><span t-esc="detail['validasi_warna']"/></td>
                                    <td><span t-esc="detail['incoming_date']"/></td>
                                    <td><span t-esc="detail['validasi_taging']"/></td>
                                    <td><span t-esc="detail['lokasi']"/></td>
                                    <td><span t-esc="detail['kondisi_fisik']"/></td>
                                    <td><span t-esc="detail['keterangan']"/></td>
                                </tr>
                                <tr>
                                    <td colspan="14"><span t-esc="data['user']"/>, <span t-esc="data['date']"/></td>
                                </tr>
                            </table> 
                        </div> 
                        <div class="col-xs-12">
                             <table class="table table-bordered" style="font-size:10px">
                                <tr>
                                    <td align="center">PIC SO</td>
                                    <td colspan="2" align="center">MENGETAHUI</td>
                                </tr>
                                <tr height="80px">
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th><span t-esc="adh(data)"/></th>
                                    <th><span t-esc="staff_bbn(data)"/></th>
                                    <th><span t-esc="soh(data)"/></th>
                                </tr>
                                <tr>
                                    <td>ADH</td>
                                    <td>PDI</td>
                                    <td>SOH</td>  
                                </tr>
                                <tr>
                                    <td colspan="3">
                                        <span t-esc="data['user']"/>, <span t-esc="data['date']"/>
                                    </td>
                                </tr>
                            </table>
                        </div>                  
                    <div class="oe_structure"/>
                </div>
        </t>
    </t>
</template>
</data>
</openerp>
