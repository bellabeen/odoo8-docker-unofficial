        <menuitem id="teds_po_urgent_menu"
            action="teds_nrfs_po_urgent_action"
            name="Outstanding PO NRFS"
            parent="teds_nrfs.workshop_nrfs_menu"
            sequence="1"
        />
    </data>
</openerp>