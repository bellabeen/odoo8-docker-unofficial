<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
    <!-- NRFS -->
        <record id="teds_nrfs_po_urgent_view_tree" model="ir.ui.view" >
            <field name="name">teds.nrfs.po.urgent.tree</field>
            <field name="model">teds.nrfs</field>
            <field name="arch" type="xml">
            	<tree string="Outstanding PO NRFS" create="false" edit="false" delete="false">
            		<field name="name" />
                    <field name="tgl_nrfs" />
                    <field name="lot_id" />
                    <field name="chassis_no" />
                    <field name="product_id" />
                    <field name="branch_partner_id" />
                    <field name="state" />
            	</tree>
            </field>
        </record>
        <record id="teds_nrfs_po_urgent_view_form" model="ir.ui.view" >
            <field name="name">teds.nrfs.po.urgent.form</field>
            <field name="model">teds.nrfs</field>
            <field name="arch" type="xml">
            	<form string="Outstanding PO NRFS" create="false" delete="false">
            		<header>
                        <button name="action_confirm_md_sparepart" string="Confirm MD" type="object" class="oe_highlight" attrs="{'invisible': ['|',('is_p2p_md','!=',False),('is_po_urgent','!=',False)]}" groups="teds_nrfs.teds_nrfs_confirm_md_group_button_read" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,rfa,approved,confirmed,in_progress,done" readonly="1" />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" attrs="{'invisible': [('name','=',False)]}" class="oe_inline" />
                            </h1>
                        </div>
						<group>
                            <group>
                                <field name="branch_id" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="lot_id" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="chassis_no" readonly="1" />
                                <field name="product_id" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="no_shipping_list" readonly="1" />
                                <field name="origin" readonly="1" />
                                <field name="tgl_terima_unit" readonly="1" />
                            </group>
                            <group>
                                <field name="tgl_nrfs" readonly="1" />
                                <field name="pemeriksa_id" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="tipe_nrfs" required="1" readonly="1" />
                                <field name="ekspedisi_id" required="1" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="nopol_ekspedisi" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="driver_ekspedisi" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="kapal_ekspedisi" readonly="1" />
                            </group>
                            <group string="Estimasi Penanganan" name="est_penanganan">
                                <field name="branch_partner_id" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="tgl_selesai_est" readonly="1" />
                                <field name="tgl_selesai_actual" readonly="1" />
                            </group>
                            <group string="PO Urgent" name="po_urgent" attrs="{'invisible': [('is_po_urgent','=',False)]}">
                                <field name="is_po_urgent" invisible="1" />
                                <field name="no_po_urg" readonly="1" />
                                <field name="tgl_po_urg" readonly="1" />
                                <field name="is_sparepart_pesan" invisible="1" />
                                <field name="is_p2p_md" invisible="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="line_ids" nolabel="1" context="{'default_rel_partner_id': branch_partner_id}">
                                    <tree create="false" delete="false">
                                        <field name="rel_partner_id" invisible="1" />
                                        <field name="part_id" readonly="1" />
                                        <field name="description" readonly="1" />
                                        <field name="qty" readonly="1" />
                                        <field name="total_stock" readonly="1" />
                                        <field name="total_stock_md" readonly="1" />
                                        <field name="total_stock_all" readonly="1" />
                                        <field name="penanganan_vendor_id" invisible="1" />
                                        <field name="is_sparepart_pesan" invisible="1" />
                                        <field name="penanganan_id" required="1" />
                                        <field name="is_po_urgent" invisible="1" />
                                        <field name="no_distribusi" />
                                    </tree>
                                    <form create="false" delete="false">
                                        <sheet>
                                            <div>
                                                <label for="part_id" />
                                                <h1 style="margin-top: 0%; margin-right: 15px;">
                                                    <field name="part_id" readonly="1" options="{'no_open':True, 'no_create': True}" />
                                                </h1>
                                            </div>
                                            <group>
                                                <group>
                                                    <field name="rel_partner_id" readonly="1" options="{'no_open':True, 'no_create': True}" />
                                                    <field name="qty" readonly="1" />
                                                    <field name="total_stock" readonly="1" />
                                                    <div attrs="{'invisible':[('is_stock_ok','=',False)]}" colspan="2" style="margin-top: 1px; margin-bottom: 1px;">
                                                        <span class="label label-success">Info</span>
                                                        <span style="font-weight: bold; color: #006400;">
                                                            &#160;Stok sparepart tersedia
                                                        </span>
                                                    </div>
                                                    <div attrs="{'invisible':[('is_stock_ok','!=',False)]}" colspan="2" style="margin-top: 1px; margin-bottom: 1px;">
                                                        <span class="label label-danger">Info</span>
                                                        <span style="font-weight: bold; color: red;">
                                                            &#160;Stok sparepart tidak tersedia
                                                        </span>
                                                    </div>
                                                    <field name="is_stock_ok" invisible="1" />
                                                    <field name="total_stock_md" readonly="1" />
                                                    <field name="total_stock_all" readonly="1" />
                                                    <field name="penanganan_vendor_id" invisible="1" />
                                                    <field name="is_sparepart_pesan" invisible="1" />
                                                    <field name="penanganan_id" required="1" options="{'no_open':True, 'no_create': True}" />
                                                    <field name="is_po_urgent" invisible="1" />
                                                    <field name="no_po_urg" readonly="1" />
                                                    <field name="tgl_po_urg" readonly="1" />
                                                </group>
                                                <group>
                                                    <field name="gejala_ids" readonly="1" options="{'no_open':True, 'no_create': True}" widget="many2many_tags" />
                                                    <field name="penyebab_ids" readonly="1" options="{'no_open':True, 'no_create': True}" widget="many2many_tags" />
                                                    <field name="service_ids" readonly="1" options="{'no_open':True, 'no_create': True}" widget="many2many_tags" />
                                                    <field name="description" invisible="1" />
                                                    <field name="no_distribusi" />
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Info Stok">
                                                    <field name="stock_ids" readonly="1">
                                                        <tree>
                                                            <field name="branch_id" readonly="1" options="{'no_open':True, 'no_create': True}" />
                                                            <field name="qty_stock" readonly="1" sum="Total" />
                                                            <field name="qty_intransit_in" readonly="1" sum="Total" />
                                                        </tree>
                                                        <form>
                                                            <sheet>
                                                                <group>
                                                                    <group>
                                                                        <field name="branch_id" readonly="1" options="{'no_open':True, 'no_create': True}" />
                                                                    </group>
                                                                    <group>
                                                                        <field name="qty_stock" readonly="1" />
                                                                        <field name="qty_intransit_in" readonly="1" />
                                                                    </group>
                                                                </group>
                                                            </sheet>
                                                        </form>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Approval">
                                <field name="approval_history_ids" readonly="1">
                                    <tree string="Approval">
                                        <field name="type" />
                                        <field name="pelaksana_date" />
                                        <field name="pelaksana_uid" />
                                        <field name="reason" />
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group colspan="4" col="4">
                                                <field name="pelaksana_uid" readonly="1" options="{'no_create':True, 'no_open':True}" />
                                                <field name="type" readonly="1" />
                                                <field name="pelaksana_date" readonly="1" />
                                                <field name="reason" readonly="1" />
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1" />
                                        <field name="create_date" readonly="1" />
                                        <field name="confirm_uid" readonly="1" />
                                        <field name="confirm_date" readonly="1" />
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1" />
                                        <field name="write_date" readonly="1" />
                                        <field name="cancel_uid" readonly="1" attrs="{'invisible': [('cancel_uid','=',False)]}" />
                                        <field name="cancel_date" readonly="1" attrs="{'invisible': [('cancel_date','=',False)]}" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
            		</sheet>
            	</form>
            </field>
        </record>
        <record id="teds_nrfs_po_urgent_action" model="ir.actions.act_window">
            <field name="name">Outstanding PO NRFS</field>
            <field name="res_model">teds.nrfs</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'readonly_by_pass': 1}</field>
            <field name="domain">[
                ('state','in',['confirmed']),
                ('is_sparepart_pesan','!=',False)
            ]</field>
        </record>
        <record id="teds_nrfs_po_urgent_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="teds_nrfs_po_urgent_view_tree"/>
            <field name="act_window_id" ref="teds_nrfs_po_urgent_action"/>
        </record>
        <record id="teds_nrfs_po_urgent_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="teds_nrfs_po_urgent_view_form"/>
            <field name="act_window_id" ref="teds_nrfs_po_urgent_action"/>
        </record>

