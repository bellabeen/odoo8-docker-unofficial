<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
    <!-- Reject NRFS -->
        <record id="teds_nrfs_reject_view_form" model="ir.ui.view">
            <field name="name">teds.nrfs.reject.form</field>
            <field name="model">teds.nrfs.reject.wizard</field>
            <field name="arch" type="xml">
                <form string="Alasan Reject">
                    <group>
                        <field name="nrfs_id" invisible="1" />
                        <field name="reject_reason" required="1" />
                    </group>
                    <footer>
                        <button name="action_reject" string="Reject" type="object" class="oe_highlight"/>
                        or
                        <button string="Discard" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    <!-- Cancel Approve NRFS -->
        <record id="teds_nrfs_cancel_approve_view_form" model="ir.ui.view">
            <field name="name">teds.nrfs.cancel.approve.form</field>
            <field name="model">teds.nrfs.cancel.approve.wizard</field>
            <field name="arch" type="xml">
                <form string="Alasan Cancel Approve">
                    <group>
                        <field name="nrfs_id" invisible="1" />
                        <field name="cancel_reason" required="1" />
                    </group>
                    <footer>
                        <button name="action_cancel_approve" string="Cancel Approve" type="object" class="oe_highlight"/>
                        or
                        <button string="Discard" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    <!-- NRFS -->
        <record id="teds_nrfs_view_tree" model="ir.ui.view" >
            <field name="name">teds.nrfs.tree</field>
            <field name="model">teds.nrfs</field>
            <field name="arch" type="xml">
            	<tree string="Outstanding NRFS" create="false" delete="false">
            		<field name="name" />
                    <field name="tgl_nrfs" />
                    <field name="lot_id" />
                    <field name="chassis_no" />
                    <field name="product_id" />
                    <field name="branch_partner_id" />
                    <field name="state" />
            	</tree>
            </field>
        </record>
        <record id="teds_nrfs_view_form" model="ir.ui.view" >
            <field name="name">teds.nrfs.form</field>
            <field name="model">teds.nrfs</field>
            <field name="arch" type="xml">
            	<form string="Outstanding NRFS" create="false" delete="false">
            		<header>
                        <button name="action_cancel" string="Cancel" states="draft" type="object" />
                        <button name="action_rfa" string="RFA" states="draft" type="object" class="oe_highlight" groups="teds_nrfs.teds_nrfs_rfa_group_button_read" />
                        <button name="action_cancel_rfa" string="Cancel RFA" states="rfa" type="object" groups="teds_nrfs.teds_nrfs_rfa_group_button_read"/>
                        <button name="action_approve" string="Approve" type="object" states="rfa" class="oe_highlight" groups="teds_nrfs.teds_nrfs_approve_group_button_read" />
                        <button name="action_reject_form" string="Reject" type="object" states="rfa" groups="teds_nrfs.teds_nrfs_approve_group_button_read" />
                        <button name="action_cancel_approve_form" string="Cancel Approval" type="object" states="approved" groups="teds_nrfs.teds_nrfs_approve_group_button_read" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,rfa,approved,confirmed,in_progress,done" readonly="1" />
                    </header>
            		<sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1" attrs="{'invisible': [('name','=',False)]}" class="oe_inline" />
                            </h1>
                        </div>
						<group>
                            <group>
                                <field name="branch_id" required="1" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="lot_id" required="1" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="chassis_no" required="1" readonly="1" />
                                <field name="product_id" required="1" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="no_shipping_list" required="1" readonly="1" />
                                <field name="origin" readonly="1" />
                                <field name="tgl_terima_unit" required="1" readonly="1" />
                            </group>
                            <group>
                                <field name="tgl_nrfs" readonly="1" />
                                <field name="pemeriksa_id" required="1" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}" />
                                <field name="tipe_nrfs" required="1" readonly="1" />
                                <field name="ekspedisi_id" required="1" readonly="1" options="{'no_create': True, 'no_open': True}" />
                                <field name="nopol_ekspedisi" required="1" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_open': True}" context="{'default_partner_id': ekspedisi_id}" />
                                <field name="driver_ekspedisi" required="1" attrs="{'readonly': [('state','!=','draft')]}" options="{'no_open': True}" context="{'default_partner_id': ekspedisi_id}" />
                                <field name="kapal_ekspedisi" attrs="{'readonly': [('state','!=','draft')]}" />
                            </group>
                            <group string="Estimasi Penanganan" name="est_penanganan">
                                <field name="branch_partner_id" required="1" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}" />
                                <field name="tgl_selesai_est" readonly="1" attrs="{'readonly': [('state','!=','draft')]}" />
                                <field name="tgl_selesai_actual" readonly="1" />
                            </group>
                            <group string="PO Urgent" name="po_urgent" attrs="{'invisible': [('is_po_urgent','=',False)]}">
                                <field name="is_po_urgent" invisible="1" />
                                <field name="no_po_urg" readonly="1" />
                                <field name="tgl_po_urg" readonly="1" />
                                <field name="nama_file_ppo_urg" readonly="1" attrs="{'invisible': [('nama_file_ppo_urg','=',False)]}" />
                                <field name="tgl_kirim_ppo_urg" readonly="1" attrs="{'invisible': [('tgl_kirim_ppo_urg','=',False)]}" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="line_ids" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}" context="{'default_rel_partner_id': branch_partner_id}">
                                    <tree editable="top">
                                        <field name="rel_partner_id" invisible="1" />
                                        <field name="part_id" required="1" options="{'no_open':True, 'no_create': True}" />
                                        <field name="description" readonly="1" />
                                        <field name="qty" required="1" />
                                        <field name="gejala_ids" required="1" options="{'no_open':True, 'no_create': True}" widget="many2many_tags" />
                                        <field name="penyebab_ids" required="1" options="{'no_open':True, 'no_create': True}" widget="many2many_tags" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Approval">
                                <field name="approval_history_ids" readonly="1">
                                    <tree string="Approval">
                                        <field name="type" />
                                        <field name="pelaksana_date" />
                                        <field name="pelaksana_uid" />
                                        <field name="reason" />
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group colspan="4" col="4">
                                                <field name="pelaksana_uid" readonly="1" options="{'no_create':True, 'no_open':True}" />
                                                <field name="type" readonly="1" />
                                                <field name="pelaksana_date" readonly="1" />
                                                <field name="reason" readonly="1" />
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="History MFT NRFS" groups="wtc_branch.group_sys_admin">
                                <field name="mft_nrfs_history_ids" readonly="1">
                                    <tree>
                                        <field name="nama_file_nrfs" />
                                        <field name="tgl_kirim_nrfs" />
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group colspan="4" col="4">
                                                <field name="nama_file_nrfs" readonly="1" />
                                                <field name="tgl_kirim_nrfs" readonly="1" />
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="History WO">
                                <field name="work_order_ids" readonly="1">
                                    <tree>
                                        <field name="name" />
                                        <field name="date" />
                                        <field name="date_confirm" />
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name" readonly="1" />
                                                </group>
                                                <group>
                                                    <field name="date" readonly="1" />
                                                    <field name="date_confirm" readonly="1" />
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1" />
                                        <field name="create_date" readonly="1" />
                                        <field name="confirm_uid" readonly="1" />
                                        <field name="confirm_date" readonly="1" />
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1" />
                                        <field name="write_date" readonly="1" />
                                        <field name="cancel_uid" readonly="1" attrs="{'invisible': [('cancel_uid','=',False)]}" />
                                        <field name="cancel_date" readonly="1" attrs="{'invisible': [('cancel_date','=',False)]}" />
                                    </group>
                                </group>
                            </page>
                        </notebook>
            		</sheet>
            	</form>
            </field>
        </record>
        <!-- TODO belum ada search view, tergantung user -->
        <record id="teds_nrfs_md_action" model="ir.actions.act_window">
            <field name="name">Outstanding NRFS</field>
            <field name="res_model">teds.nrfs</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'readonly_by_pass': 1}</field>
            <field name="domain">[]</field>
        </record>
        <record id="teds_nrfs_md_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="teds_nrfs_view_tree"/>
            <field name="act_window_id" ref="teds_nrfs_md_action"/>
        </record>
        <record id="teds_nrfs_md_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="teds_nrfs_view_form"/>
            <field name="act_window_id" ref="teds_nrfs_md_action"/>
        </record>
        <menuitem id="teds_nrfs_md_menu"
            action="teds_nrfs_md_action"
            name="Outstanding NRFS"
            parent="teds_nrfs.showroom_nrfs_menu"
            sequence="1"
        />
    </data>
</openerp>