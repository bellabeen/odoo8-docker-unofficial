<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <record model='ir.ui.view' id='teds_report_sales_activity_plan_form'>
        <field name='name'>teds_report_sales_activity_plan_form</field>
        <field name='model'>teds.report.sales.activity.plan</field>
        <field name='type'>form</field>
        <field name='arch' type='xml'>
            <form string='Report Sales Activity Plan'>
                <group col="4" colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
                    <label for="start_date" string="Tanggal"/>  
                    <div>
                        <field name="start_date" class="oe_inline" required='1'/> - <field name="end_date" class="oe_inline" required='1'/>
                    </div>
                </group>
                <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}"> 
                    <page string="Branches">
                        <field name="branch_ids" colspan="4" nolabel="1"/>
                    </page>
                </notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record model='ir.actions.act_window' id='teds_report_sales_activity_plan_action'>
        <field name='name'>Report Sales Activity Plan</field>
        <field name='res_model'>teds.report.sales.activity.plan</field>
        <field name='view_type'>form</field>
        <field name='view_mode'>form</field>
        <field name='target'>new</field>
    </record>
    

    <menuitem name='Reports' id='teds_report_sales_activity_plan_menu' parent='wtc_dealer_menu.marketing_top_menu' sequence='20'/>
    <menuitem name='Report Sales Activity Plan' id='teds_report_sales_activity_plan_submenu' parent='teds_report_sales_activity_plan_menu'  action="teds_report_sales_activity_plan_action"/>
        
    </data>
</openerp>