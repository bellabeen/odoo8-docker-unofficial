<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_so_stnk_bakso_wizard" model="ir.ui.view">
			<field name="name">teds.so.stnk.bakso.wizard</field>
			<field name="model">teds.stock.opname.stnk.bakso.wizard</field>
			<field name="arch" type="xml">
				<form string="Berita Acara SO">
					<sheet>
						<group>
							<field name="opname_id" readonly="1" options="{'no_open':True,'no_create':True}"/>
							<field name="note_bakso"/>
						</group>
						<footer>
		                    <button name="action_submit_bakso" string="Print" type="object" class="oe_highlight" />
		                    <button string="Close" class="oe_link" special="cancel" />
		                </footer>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_teds_stock_opname_stnk_tree" model="ir.ui.view">
			<field name="name">teds.stock.opname.stnk.tree</field>
			<field name="model">teds.stock.opname.stnk</field>
			<field name="arch" type="xml">
				<tree string="Stock Opname STNK">
					<field name="name"/>
					<field name="branch_id"/>
					<field name="date"/>
					<field name="generate_date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		<record id="view_teds_stock_opname_stnk_form" model="ir.ui.view">
			<field name="name">teds.stock.opname.stnk.form</field>
			<field name="model">teds.stock.opname.stnk</field>
			<field name="arch" type="xml">
				<form string="Stock Opname STNK">
					<header>
	                	<button name="action_generate_stock" attrs="{'invisible':['|',('create_date','=',False),('generate_date','!=',False)]}" string="Generate Stock" class="oe_highlight" type="object" groups="teds_stock_opname.group_teds_so_stnk_generate_stock_button"/>

	                	<button name="action_post" attrs="{'invisible':['|',('state','!=','draft'),('generate_date','=',False)]}" string="Post" class="oe_highlight" type="object" confirm="Harap pastikan kembali validasi STNK sudah sesuai antara fisik dan sitem ! Untuk STNK yang tidak tercatat dalam sistem wajib diisi pada kolom STNK Tidak Tercatat Sistem !!!" groups="teds_stock_opname.group_teds_so_stnk_posted_button"/>

	                	<button name="action_print_validasi" states="posted" string="Print Validasi" class="oe_highlight" type="object"/>

	                	<button name="action_bakso" states="posted" string="Berita Acara SO" type="object"/>

	                	<button name="action_download_excel" type="object" string="Download Excel" states="posted"/>
	                	<field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
	                </header>
					<div class="oe_title">                      
							<h1>
							<field name="name" readonly="1"/>
						</h1>
					</div>
					<group>
						<group>
							<field name="branch_id" options="{'no_open':True,'no_create':True}" attrs="{'readonly':[('create_date','!=',False)]}" required="1"/>
							<field name="create_date" invisible="1"/>
							<field name="staff_bbn" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="adh" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="soh" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
						</group>
						<group>
							<field name="date" readonly="1"/>
							<field name="division" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="generate_date" readonly="1" attrs="{'invisible':[('generate_date','=',False)]}"/>
						</group>
					</group>
					<notebook>
						<page string="Data Stock STNK">
							<field name="detail_ids" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
								<tree create="false" delete="false" editable="top">
									<field name="customer_stnk_id" readonly="1" options="{'no_open':True,'no_create':True}"/>
									<field name="validasi_ceklis_fisik_stnk" attrs="{'required':[('validasi_ceklis_fisik_stnk','!=',False)]}"/>
									<field name="validasi_nama_stnk" attrs="{'readonly':['|',('validasi_ceklis_fisik_stnk','=',False),('validasi_ceklis_fisik_stnk','!=','Fisik Ada')],'required':[('validasi_ceklis_fisik_stnk','!=',False)]}"/>
									<field name="tgl_penerimaan" readonly="1"/>
									<field name="lokasi_stnk" readonly="1"/>
									<field name="lot_id" readonly="1" options="{'no_open':True,'no_create':True}"/>
									<field name="validasi_no_engine" attrs="{'readonly':['|',('validasi_ceklis_fisik_stnk','=',False),('validasi_ceklis_fisik_stnk','!=','Fisik Ada')],'required':[('validasi_ceklis_fisik_stnk','!=',False)]}"/>
									<field name="no_polisi" readonly="1"/>
									<field name="validasi_no_polisi" attrs="{'readonly':['|',('validasi_ceklis_fisik_stnk','=',False),('validasi_ceklis_fisik_stnk','!=','Fisik Ada')],'required':[('validasi_ceklis_fisik_stnk','!=',False)]}"/>
									<field name="keterangan" attrs="{'required':[('validasi_ceklis_fisik_stnk','in',('Fisik di HO','Fisik di MD','Revisi Biro Jasa','Sudah Penyerahan ke Konsumen','Hilang / Fisik tidak diketahui'))]}"/>
									<field name="umur" readonly="1"/>
								</tree>
							</field>
						</page>
						<page string="STNK Tidak Tercatat Sistem" attrs="{'invisible':[('generate_date','=',False)]}">
							<field name="other_stnk_ids" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
								<tree editable="top">
									<field name="nama_stnk" required="1"/>
									<field name="no_engine" required="1"/>
									<field name="keterangan"/>
								</tree>
							</field>
						</page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"/>
									<field name="create_date" readonly="1"/>
									<field name="post_uid" readonly="1" attrs="{'invisible':[('post_uid','=',False)]}"/>
									<field name="post_date" readonly="1" attrs="{'invisible':[('post_date','=',False)]}"/>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>		                 
					</notebook>
				</form>
			</field>
		</record>

		<record id="action_teds_stock_opname_stnk" model="ir.actions.act_window">
        	<field name="name">STNK</field>
			<field name="res_model">teds.stock.opname.stnk</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<!-- Print Validasi -->
		<report 
            string="Print Validasi SO STNK" 
            id="action_teds_stock_opname_stnk_print_validasi" 
            model="teds.stock.opname.stnk" 
            report_type="qweb-pdf"
            name="teds_stock_opname.teds_stock_opname_stnk_print_validasi" 
            file="teds_stock_opname.teds_stock_opname_stnk_print_validasi" 
            menu="False"/>
		
		<!-- Print Bakso -->
		<report 
            string="Print Bakso STNK" 
            id="action_teds_stock_opname_stnk_print_bakso" 
            model="teds.stock.opname.stnk.bakso.wizard" 
            report_type="qweb-pdf"
            name="teds_stock_opname.teds_stock_opname_stnk_print_bakso" 
            file="teds_stock_opname.teds_stock_opname_stnk_print_bakso" 
            menu="False"/>

		<menuitem id="teds_stock_opname_stnk_menuitem" action="action_teds_stock_opname_stnk" parent="stock_opname_sub_menu" sequence="1"/>
	</data>
</openerp>