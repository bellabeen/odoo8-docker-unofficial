<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<record model='ir.ui.view' id='wtc_check_reconcile_tree_view'>
		<field name='name'>wtc.check.reconcile.tree</field>
		<field name='model'>wtc.check.reconcile</field>
		<field name='arch' type='xml'>
			<tree string="List Reconcile">
				<field name='move_line_id'/>
				<field name='branch_id'/>
			</tree>
		</field>
	</record>
	
	<record model='ir.ui.view'  id='wtc_check_reconcile_form_view'>
		<field name='name'>wtc.check.reconcile.form</field>
		<field name='model'>wtc.check.reconcile</field>
		<field name='arch' type='xml'>
    		<form string="Check Reconcile">
				<group col='4'>
					<field name='branch_id' on_change="onchange_branch_id_account_id(branch_id,account_id) " options="{'no_open':True,'no_create':True}"/>
					<field name='account_id' on_change='onchange_branch_id_account_id(branch_id,account_id)' options="{'no_open':True,'no_create':True}"/>
					<field name='move_line_id' on_change="onchange_move_line(move_line_id)" options="{'no_open':True,'no_create':True}"/>
				</group>
                <separator string="Reconcile Entries"/>
                <field name="check_reconcile_line">
					<tree string="" editable="false" edit="false" create="false" delete="false">
						<field name="name"/>
                        <field name="journal"/>
                        <field name="date" string='Date'/> 
                        <field name='ref'/>
                        <field name='partner'/>
                        <field name='debit'/>
                        <field name='credit'/>                                   
					</tree>
                </field>
			</form>
		</field>
	</record>
	
	<record model='ir.actions.act_window' id='check_reconcile_action'>
		<field name='name'>Check Reconcile</field>
		<field name='res_model'>wtc.check.reconcile</field>
		<field name='view_type'>form</field>
		<field name='view_mode'>form</field>
	</record>
	
	
	<menuitem name='Check Reconcile' id='check_reconcile_menu' parent='wtc_dealer_menu.backoffice_nontrade_menu' action='check_reconcile_action'/>
	
	</data>
</openerp>