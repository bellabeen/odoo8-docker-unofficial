<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		
	    <record model="ir.ui.view" id="view_wtc_other_payable_form">
            <field name="name">wtc.account.voucher.other.payable.form</field>
            <field name="model">wtc.account.voucher</field>
            <field name="arch" type="xml">
                <form string="Hutang Lain">
                <header>
                	 <button name="validate_or_rfa" groups='wtc_account_voucher.group_wtc_account_voucher_rfa' string="RFA" states="draft" class="oe_highlight" type="object"/>

                    <button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" states="waiting_for_approval" groups='wtc_account_voucher.group_wtc_account_voucher_cancel_approval' string="Cancel Approval" type="action" context="{'model_name':'wtc.account.voucher','update_value':{'approval_state':'b','state':'draft'}}"/>

                    <button name="approval_approve" groups='wtc_account_voucher.group_wtc_account_voucher_approve_approval' states="waiting_for_approval" string="Approve" type="object" class="oe_highlight"/>

                    <button name="%(wtc_approval.wtc_cancel_approval_wizard)d"  states="approved" string="Cancel Approval" type="action"  groups="wtc_account_voucher.group_wtc_account_voucher_cancel_after_approval" context="{'model_name':'wtc.account.voucher','update_value':{'approval_state':'b','state':'draft'}}"/>

                    <button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'wtc.account.voucher','update_value':{'approval_state':'r','state':'draft'}}"/>


                    <button name="print_wizard_kwitansi"  attrs="{'invisible': ['|',('kwitansi','!=',False),('state','!=','posted')]}" type="object" icon="gtk-print" string="Print Kwitansi" class="oe_highlight" />
                    
                    <button name="proforma_voucher" string="Validate" states="approved" class="oe_highlight" type='object'/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,posted" statusbar_colors='{"proforma":"blue"}'/>
                </header>
	                <sheet>
	                 <div class="oe_title">                      
	       				<h1>
				            <label string="Hutang Lain"/>
				 			<field name="number" class="oe_inline" readonly="1"/>	
    			        </h1>
                    </div>
	                 <group col="2" colspan="2">
	                 	<group>
                    		<field name="branch_id" on_change="onchange_branch(branch_id)" required="True" options="{'no_open':True,'no_create_edit':True}" attrs="{'readonly': [('state','!=','draft')]}"/>
                    	    <field name="partner_type" on_change='onchange_partner_type(partner_type)' required='1' context="{'partner_type':partner_type}"/> 
                        </group>
                    	<group>
                    		<field name="division"  on_change="onchange_division(division)" required="True" attrs="{'readonly': [('state','!=','draft')]}"/>
                    	</group>
	                    <group>
                            <field name="type" invisible="True"/>
                            <field name="company_id" widget="selection" groups="base.group_multi_company"/>
                            <field name="partner_id" required="True" domain="[('customer','=',True)]"
                                string="Customer" context="{'search_default_customer':1, 'show_address': 1}"
                                options="{'no_open':True,'no_create_edit':True,'always_reload': True}"/>
                            <field name="amount" string="Paid Amount" required="True"/>
                            <field name="journal_id" options="{'no_open':True,'no_create_edit':True}" domain="[('type','in',('bank','cash','edc'))]" string='Payment Method' on_change="onchange_journal_id(journal_id)"/>
                            <field name="account_id" domain="[('type','in', ['liquidity', 'receivable'])]" invisible="True"/>
                            <field name="date_due" invisible='1'/>
							<field name="journal_type" invisible="1"/>
                        </group>
                        <group>
                        	<field name="date" readonly='1'/>
                            <field name="name"/>
                            <field name="currency_id" invisible="1"/>
                            <field name='kwitansi' on_change='onchange_kwitansi(kwitansi)' 
                               attrs="{'readonly': [('state','!=','draft')]}"/>
                        </group>
	                  </group>
	                 <notebook>
                        <page string="Other Payable Lines">
                            <field name="line_cr_ids">
                                <tree string="Other Payable Lines" editable="bottom">                                   
                                    <field name="account_id" on_change="name_payable_onchange(account_id,parent.branch_id,parent.division)" options="{'no_open':True,'no_create_edit':True}" domain="[('user_type.report_type','=','income'),('type','!=','view')]" />
                                    <field name="name" required="True"/>
                                    <field name="amount" sum="Total"/>
                                </tree>
                          </field>
                          <group>
                                <field name="narration" placeholder="Internal Notes" nolabel="1"/>
                                <group class="oe_subtotal_footer oe_right">
                                    
                                </group>
                            </group>
                        </page>
                        
						<page string="EDC" attrs="{'invisible':[('journal_type','!=','edc')]}">
							<group>
								<field name="card_no" attrs="{'required':[('journal_type','=','edc')],'readonly':[('state','!=','draft')]}"/>
								<field name="card_name" attrs="{'required':[('journal_type','=','edc')],'readonly':[('state','!=','draft')]}"/>
								<field name="approval_code" attrs="{'required':[('journal_type','=','edc')],'readonly':[('state','!=','draft')]}"/>
								<field name="percentage" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="amount_edc" attrs="{'required':[('journal_type','=','edc')]}"/>						
							</group>	
						</page>	
                        <page string="Journal Items" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="4">
                                <field name="period_id"/>
                            </group>
                            <field name="move_ids" readonly="1">
                               <tree string="Journal Items">
                                	<field name='branch_id'/>
                                	<field name='division'/>
                                    <field name="move_id"/>
                                    <field name="ref"/>
                                    <field name="date"/>
                                    <field name="partner_id"/>
                                    <field name="account_id"/>
                                    <field name="name"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="state"/>
                                    <field name="reconcile_id"/>
                                    <field name="amount_currency"/>
                               </tree>
                            </field>
                        </page>
                        <page string="Approval">
                            <field name="approval_ids">
                                <tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
                                    <field name="group_id" />
                                    <field name="branch_id"/>
                                    <field name="division"/>
                                    <field name="limit"/>
                                    <field name="sts"/>
                                    <field name="reason"/>
                                    <field name="pelaksana_id"/>
                                    <field name="tanggal"/>
                                </tree>
                            </field>
                        </page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
									<field name="confirm_uid" readonly="1"></field>
									<field name="confirm_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
									<field name="cancel_uid" readonly="1"></field>
									<field name="cancel_date" readonly="1"></field>
								</group>
							</group>
						</page>                        
                    </notebook>
                    
	             	</sheet>
                   
                </form>
            </field>
        </record>
		
 		<record id="view_wtc_hutang_lain_search" model="ir.ui.view">
            <field name="name">wtc.account.voucher</field>
            <field name="model">wtc.account.voucher</field>
            <field name="arch" type="xml">
                <search string="Search Hutang Lain">
                    <field name="number"/>
                    <field name='division'/>
                    <field name="branch_id"/> 
                    <field name="partner_id"/>
					<filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />
					<filter string="Waiting for Approval" name="state_wfa" domain="[('state','=','waiting_for_approval')]" />
					<filter string="Approved" name="state_approved" domain="[('state','=','approved')]" />
					<filter string="Posted" name="state_posted" domain="[('state','=','posted')]" />                    
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter string="Tanggal" icon="terp-go-month" domain="[]" context="{'group_by':'date'}"/>                    
                    </group>
                </search>
            </field>
        </record>	
	<record id="action_wtc_other_payable" model="ir.actions.act_window">
            <field name="name">Hutang Lain</field>
            <field name="res_model">wtc.account.voucher</field>
            <field name="view_type">form</field>
            <field name="domain">[ ('type','=','hutang_lain')]</field>
            <field name="context">{'default_type':'receipt', 'type':'hutang_lain','hutang_lain':'yes',"search_default_state_draft":1,"search_default_state_wfa":1,"search_default_state_approved":1}</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="view_wtc_hutang_lain_search"/>
            <field name="target">current</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to register an other payable. 
              </p><p>
                When the other payable is confirmed, you can record the
                supplier payment related to this other payable.
              </p>
            </field>
        </record>
	
		<record id="action_wtc_other_payable_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="act_window_id" ref="action_wtc_other_payable"/>
        </record>
        
         <record id="action_wtc_hutang_lain_form" model="ir.actions.act_window.view">
            <field eval="22" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wtc_other_payable_form"/>
            <field name="act_window_id" ref="action_wtc_other_payable"/>
        </record>

		<menuitem id="wtc_other_payable_menuitem_custom_backoffice" 
		parent="wtc_dealer_menu.backoffice_nontrade_menu" 
		sequence="42" action="action_wtc_other_payable"/>
	</data>
</openerp>				
			        
