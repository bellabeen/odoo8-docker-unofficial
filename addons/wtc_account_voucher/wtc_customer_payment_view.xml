<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
            	
        <record model="ir.ui.view" id="view_wtc_voucher_payment_tree">
            <field name="name">wtc.account.voucher.tree</field>
            <field name="model">wtc.account.voucher</field>
            <field name="arch" type="xml">
                <tree string="Voucher Entries">
                	<field name="branch_id"></field>
                	<field name="division"/>
					<field name="inter_branch_id"/>                	
                    <field name="date"/>
                    <field name="number"/>
                    <field name="partner_id"/>
                    <field name="journal_id" groups="account.group_account_user"/>
                    <field name="period_id" invisible="context.get('visible', True)"/>
                    <field name="type" invisible="context.get('visible', True)"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_wtc_voucher_filter_customer_pay" model="ir.ui.view">
            <field name="name">wtc.account.voucher.customer.pay.select</field>
            <field name="model">wtc.account.voucher</field>
            <field name="arch" type="xml">
                <search string="Search Vouchers">
                    <field name="number" string="Voucher"/>
                	<field name="branch_id"/>
                	<field name="inter_branch_id"/>
                    <field name="date"/>
                    <filter icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft Vouchers"/>
                    <filter icon="terp-camera_test" string="Posted" domain="[('state','=','posted')]" help="Posted Vouchers"/>
                    <field name="partner_id" string="Customer" filter_domain="[('partner_id','child_of',self)]"/>
                    <field name="journal_id" widget="selection" context="{'journal_id': self, 'set_visible':False}" domain="[('type','in',('bank','cash','edc'))]"/> <!-- Keep widget=selection on this field to pass numeric `self` value, which is not the case for regular m2o widgets! -->
                    <field name="period_id"/>
					<filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />
					<filter string="Waiting for Approval" name="state_wfa" domain="[('state','=','waiting_for_approval')]" />
					<filter string="Approved" name="state_approved" domain="[('state','=','approved')]" />
					<filter string="Posted" name="state_posted" domain="[('state','=','posted')]" />                      
                    <group expand="0" string="Group By">
                        <filter string="Customer" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Journal" icon="terp-folder-orange" domain="[]" context="{'group_by':'journal_id'}"/>
                        <filter string="Period" icon="terp-go-month" domain="[]" context="{'group_by':'period_id','visible':True}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
						<filter string="Branch" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'branch_id'}"/>
						<filter string="Inter Branch" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'inter_branch_id'}"/>                       
                    </group>
                </search>
            </field>
        </record>
                
        <!-- Customer Payment -->
        <record model="ir.ui.view" id="view_wtc_vendor_receipt_form">
            <field name="name">wtc.account.voucher.receipt.form</field>
            <field name="model">wtc.account.voucher</field>
            <field name="arch" type="xml">
                <form string="Receipt">
                <header invisible="context.get('line_type', False)">
					<button name='proforma_voucher' groups='wtc_account_voucher.group_wtc_account_voucher_customer_confirm_after_approval' class="oe_highlight" states='approved' type='object' string='Confirm'></button>	            		
					<button name="%(wtc_kwitansi.print_new_kwitansi)d" type="action" class="oe_highlight" string="Print" icon="gtk-print" attrs="{'invisible': [('state','!=','posted')]}"/>					
					<button name="validate_or_rfa" groups='wtc_account_voucher.group_wtc_account_voucher_rfa' string="Validate/RFA" states="draft" class="oe_highlight" type="object"/>
					<button name="approval_approve" groups='wtc_account_voucher.group_wtc_account_voucher_approve_approval' states="waiting_for_approval" string="Approve" type="object" class="oe_highlight"/>
					<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'wtc.account.voucher','update_value':{'approval_state':'r','state':'draft'}}"/>
					<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" states="waiting_for_approval" groups='wtc_account_voucher.group_wtc_account_voucher_cancel_approval' string="Cancel Approval" type="action" context="{'model_name':'wtc.account.voucher','update_value':{'approval_state':'b','state':'draft'}}"/>
					<button name="%(wtc_approval.wtc_cancel_approval_wizard)d"  states="approved" string="Cancel Approval" type="action"  groups="wtc_account_voucher.group_wtc_account_voucher_cancel_after_approval" context="{'model_name':'wtc.account.voucher','update_value':{'approval_state':'b','state':'draft'}}"/>	 																
								                	
					<button name="cancel_voucher" string="Cancel Receipt" states="draft,proforma" confirm="Apa anda yakin ingin membatalkan transaksi ini ?"/>                    
	             	<button name="print_wizard_kwitansi"  attrs="{'invisible': ['|',('kwitansi','!=',False),('state','!=','posted')]}" type="object" icon="gtk-print" string="Print Kwitansi" class="oe_highlight" />
                    <button name="action_cancel_draft" groups='wtc_account_voucher.group_wtc_account_voucher_to_draft' type="object" states="cancel" string="Set to Draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,posted" statusbar_colors='{"proforma":"blue"}'/>
                </header>
                <sheet>
                    <h1 attrs="{'invisible': [('number','=',False)]}"><field name="number"/></h1>
                    <group>
                        <group>
                            <field name="branch_id" options="{'no_open':True,'no_create_edit':True}" attrs="{'readonly': ['|',('state','!=','draft'),('number','!=',False)]}" required="1" on_change="onchange_branch(branch_id)"/>
                        </group>
                        <group>
                            <field name="division"  on_change="onchange_division(division)" attrs="{'readonly': [('state','!=','draft')]}" required="1"/>
                            <field name="inter_branch_id" on_change="onchange_inter_branch(inter_branch_id)" attrs="{'readonly': [('state','!=','draft')]}" string="Terima Untuk" options="{'no_open':True,'no_create':True}" />
                        </group>
                        <group>
		    				<field name='partner_type' on_change='onchange_partner_type(partner_type)' required='1' context="{'partner_type':partner_type}"/>                        	
                            <field name="partner_id" domain="[('customer','=',True)]" required="1" string="Customer"/>
                            <field name="amount" class="oe_inline"
                                string="Paid Amount"
                                widget="monetary"/>
                            <field name="journal_id"
                                domain="[('type','in',['bank', 'cash', 'edc']),('branch_id','=',branch_id)]"
                                widget="selection"
                                string="Payment Method" on_change='onchange_journal_id(journal_id)'/>
							<field name="approval_state" attrs="{'invisible': [('total_debit','=',0)]}"/>
							<field name="total_debit" invisible='1'/>
							<field name="journal_type" invisible="1"/>  		                      
                        </group>
                        <group>
                            <field name="date" readonly='1'/>
                            <field name="name" colspan="2" placeholder="e.g. Invoice SAJ/0042"/>
				    		<field name='kwitansi' on_change='onchange_kwitansi(kwitansi)' attrs="{'readonly': [('state','!=','draft')]}"/>
				    		<field name="cetak_ke" readonly='1'/>  
                            <field name="company_id" widget="selection" invisible='1' groups="base.group_multi_company"/>
							<field name="currency_id" invisible='1'/>
                            <field name="account_id" invisible='1'
                                widget="selection"/>
                            <field name="type" invisible="True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Information" groups="base.group_user">
		                    <label for="line_cr_ids" invisible="context.get('line_type', False)"/>
		                    <field name="line_cr_ids" context="{'journal_id':journal_id, 'type':type, 'partner_id':partner_id, 'branch_id':inter_branch_id,'division':division}">
		                        <tree string="Invoices and outstanding transactions" editable="bottom" colors="gray:amount==0">
		                            <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id, 'branch_id':parent.inter_branch_id, 'division':parent.division}"
		                                on_change="onchange_move_line_id(move_line_id,parent.amount,parent.currency_id,parent.journal_id)"
		                                 domain="[('kwitansi','=',kwitansi),('account_id.type','=','receivable'),('debit','!=',0), ('reconcile_id','=', False),('partner_id','=',parent.partner_id),('branch_id','=',parent.inter_branch_id),('division','=',parent.division)]"
		                                 required="1"/>
		                            <field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
		                            <field name="date_original" readonly="1"/>
		                            <field name='kwitansi' invisible='1'/>
		                            <field name="date_due" readonly="1"/>
		                            <field name="amount_original" readonly="1"/>
		                            <field name="amount_unreconciled" readonly="1"/>
		                            <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)" />
		                            <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)" string="Allocation"/>
		                        </tree>
		                    </field>			    	
					    	<label for="line_dr_ids"/>
		                    <field name="line_dr_ids" context="{'journal_id':journal_id, 'partner_id':partner_id, 'branch_id':branch_id, 'division':division}">
		                        <tree string="Debit" editable="bottom" colors="gray:amount==0">
		                            <field name="move_line_id" context="{'journal_id':parent.journal_id, 'partner_id':parent.partner_id, 'branch_id':parent.branch_id, 'division':parent.division}"
		                                on_change="onchange_move_line_id(move_line_id,parent.amount,parent.currency_id,parent.journal_id)"
		                                domain="[('account_id.type','=','payable'),('credit','!=',0), ('reconcile_id','=', False), ('partner_id','=',parent.partner_id),('branch_id','=',parent.branch_id),('division','=',parent.division)]"
		                                required="1"/>
		                            <field name="account_id"  groups="base.group_no_one" domain="[('type','=','receivable')]"/>
		                            <field name="date_original" readonly="1"/>
		                            <field name="date_due" readonly="1"/>
		                            <field name="amount_original" readonly="1"/>
		                            <field name="amount_unreconciled" readonly="1"/>
		                            <field name="reconcile" on_change="onchange_reconcile(reconcile, amount, amount_unreconciled, context)"/>
		                            <field name="amount" sum="Total Allocation" on_change="onchange_amount(amount, amount_unreconciled, context)" string="Allocation"/>
		                        </tree>
		                    </field>
					    	<label for="line_wo_ids"/>
		                    <field name="line_wo_ids" context="{'journal_id':journal_id, 'partner_id':partner_id, 'branch_id':branch_id, 'division':division}">
		                        <tree string="Writeoff" editable="bottom" colors="gray:amount==0">
		                            <field name="account_id" on_change="writeoff_account_onchange(account_id,parent.branch_id,parent.division)"/>
									<field name='name' required='1'/>
		                            <field name="amount" sum="Total Writeoff" string="Amount"/>
		                        </tree>
		                    </field>		                    
                            <group col="3">
                                <group string="Internal Notes">
                                    <field name="narration" colspan="2" nolabel="1"/>
                                </group>
                                <group>
                                    <field name="writeoff_amount" widget="monetary" />
                                    <field name="pembulatan" attrs="{'readonly':[('state','!=','draft')]}"/>
                                </group>
                            </group>
                        </page>
						<page string="EDC" attrs="{'invisible':[('journal_type','!=','edc')]}">
							<group>
								<field name="card_no" attrs="{'required':[('journal_type','=','edc')],'readonly':[('state','!=','draft')]}"/>
								<field name="card_name" attrs="{'required':[('journal_type','=','edc')],'readonly':[('state','!=','draft')]}"/>
								<field name="approval_code" attrs="{'required':[('journal_type','=','edc')],'readonly':[('state','!=','draft')]}"/>
								<field name="percentage" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="amount_edc" attrs="{'required':[('journal_type','=','edc')]}"/>						
							</group>	
						</page>                        
                        <page string="Journal Items" attrs="{'invisible': [('state','!=','posted')]}">
                            <group col="4">
                                <field name="period_id"/>
                            </group>
                            <field name="move_ids" readonly="1">
                                <tree string="Journal Items">
                                	<field name='branch_id'/>
                                	<field name='division'/>
                                    <field name="move_id"/>
                                    <field name="ref"/>
                                    <field name="date"/>
                                    <field name="partner_id"/>
                                    <field name="account_id"/>
                                    <field name="name"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                    <field name="state"/>
                                    <field name="reconcile_id"/>
                                    <field name="amount_currency"/>
                                </tree>
                            </field>
                        </page>
						<page string="Approval">
							<field name="approval_ids">
								<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
									<field name="group_id" />
									<field name="branch_id"/>
									<field name="division"/>
									<field name="limit"/>
									<field name="sts"/>
									<field name="reason"/>
									<field name="pelaksana_id"/>
									<field name="tanggal"/>
								</tree>
							</field>
						</page>  
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
									<field name="confirm_uid" readonly="1"></field>
									<field name="confirm_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
									<field name="cancel_uid" readonly="1"></field>
									<field name="cancel_date" readonly="1"></field>
								</group>
							</group>
						</page>							                      
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_wtc_vendor_receipt" model="ir.actions.act_window">
            <field name="name">Customer Payments</field>
            <field name="res_model">wtc.account.voucher</field>
            <field name="view_type">form</field>
            <field name="domain">[('type','=','receipt')]</field>
            <field name="context">{'type':'receipt',"search_default_state_draft":1,"search_default_state_wfa":1,"search_default_state_approved":1}</field>
            <field name="search_view_id" ref="view_wtc_voucher_filter_customer_pay"/>
            <field name="target">current</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to register a new payment. 
              </p><p>
                Enter the customer and the payment method and then, either
                create manually a payment record or Odoo will propose to you
                automatically the reconciliation of this payment with the open
                invoices or sales receipts.
              </p>
            </field>
        </record>
        <record id="action_wtc_vendor_receipt_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_wtc_voucher_payment_tree"/>
            <field name="act_window_id" ref="action_wtc_vendor_receipt"/>
        </record>
        <record id="action_wtc_vendor_receipt_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_wtc_vendor_receipt_form"/>
            <field name="act_window_id" ref="action_wtc_vendor_receipt"/>
        </record>

       	<menuitem action="wtc_account_voucher.action_wtc_vendor_receipt" icon="STOCK_JUSTIFY_FILL" id="menu_action_vendor_receipt_backoffice"  parent="wtc_dealer_menu.backoffice_bankandcash_menu" sequence="30"/>	
        <menuitem action="wtc_account_voucher.action_wtc_vendor_receipt" icon="STOCK_JUSTIFY_FILL" id="menu_action_vendor_receipt_showroom"  parent="wtc_dealer_menu.showroom_sales_menu" sequence="5"/>
        <menuitem action="wtc_account_voucher.action_wtc_vendor_receipt" icon="STOCK_JUSTIFY_FILL" id="menu_action_vendor_receipt_workshop"  parent="wtc_dealer_menu.workshop_sales_menu" sequence="6"/>
                
    </data>
</openerp>
