<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_report_stnk_bpkb" model="ir.ui.view">
      <field name="name">Print Report STNK BPKB</field>
      <field name="model">report.stnk.bpkb</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Report Track STNK dan BPKB">
          <group col="4" colspan="4"  attrs="{'invisible':[('state_x','=','get')]}">
          	<field name="option" required='1'/>
            <field name="lot_ids" widget="many2many_tags" options="{'no_open':True,'no_create_edit':True}"/>
            <label for="start_date" string="Periode" attrs="{'invisible':[('option','not in',('track','lead_time'))]}"/>
            <div attrs="{'invisible':[('option','not in',('track','lead_time'))]}">
              <field name="start_date" class="oe_inline"/>
              <field name="end_date" class="oe_inline"/>
            </div>
            <field name="status_lead_time" attrs="{'invisible':[('option','!=','lead_time')]}"/>
          </group>
          
          <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
	          <page string="Branchs">
	          	 <field name="branch_ids" colspan="4" nolabel="1"/>
	          </page>
	          <page string="Birojasa">
	         	  <field name="birojasa_ids" colspan="4" nolabel="1"/>
	          </page>
	          <page string="Finco">
	          	 <field name="finco_ids" colspan="4" nolabel="1"/>
	          </page>                    
	           <page string="Lokasi STNK">
	        	  	<field name="loc_stnk_ids" colspan="4" nolabel="1"/>
	          </page> 
	           <page string="Lokasi BPKB">
	          		<field name="loc_bpkb_ids" colspan="4" nolabel="1"/>
	          </page>    
	           <page string="Customer">
	       		   	<field name="partner_ids" colspan="4" nolabel="1"/>
	          </page>                    	
        </notebook>
        <field invisible="1" name="state_x"/>                
        <newline/>    
        <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
            <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
            <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
            <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
        </group>
        <footer>
            <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
            <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
            <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
        </footer>
	          	
        </form>
      </field>
    </record>

    <record id="action_report_stnk_bpkb_wizard" model="ir.actions.act_window">
      <field name="name">Report STNK BPKB</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">report.stnk.bpkb</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_report_stnk_bpkb"/>
      <field name="target">new</field>
    </record>

	 <menuitem id="menu_report_stnk_bpkb"  parent="wtc_dealer_menu.stnk_bpkb_report_menu" sequence="1"  action="action_report_stnk_bpkb_wizard"/>	

  </data>
</openerp>