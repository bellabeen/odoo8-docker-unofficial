<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_teds_report_pajak_progressive_wizard" model="ir.ui.view">
            <field name="name">teds.repor.pajak.progressive.wizard</field>
            <field name="model">teds.report.pajak.progressive.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Pajak Progressive">
                    <group>
                        <group attrs="{'invisible':[('state_x','=','get')]}">
                            <label for="start_date" string="Periode"/>
                            <div>
                                <field name="start_date" placeholder="Start date" class="oe_inline"/>
                                <field name="end_date" placeholder="End date" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <notebook attrs="{'invisible':[('state_x','=','get')]}">
                        <page string="Branch">
                            <field name="branch_ids" colspan="4" nolabel="1" required="1" />
                        </page>
                    </notebook>
                    <field invisible="1" name="state_x"/>                
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="file_excel" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer>
                        <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                        <!-- <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" /> -->
                        <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                    </footer>
                    
                </form>
            </field>
        </record>

        <record id="actions_teds_report_pajak_progressive_wizard" model="ir.actions.act_window">
            <field name="name">Laporan Pajak Progressive</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">teds.report.pajak.progressive.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="teds_report_pajak_progressive_wizard_menuitem"  parent="wtc_dealer_menu.stnk_bpkb_report_menu" sequence="10"  action="actions_teds_report_pajak_progressive_wizard"/> 
         
    </data>
</openerp>