<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record model="ir.ui.view" id="wtc_start_stop_wo_form_view">
		    <field name="name">wtc.start.stop.wo.form</field>
		    <field name="model">wtc.start.stop.wo</field>
		    <field name="arch" type="xml">
		    	<form string="Start Stop WO">
		    		<group col="4">
		    			<field name="mekanik_id" required="True" options="{'no_open':True,'no_create':True}"/>
		    			<field name='employee_id' invisible="1"/>
		    			<field name="work_order_id" on_change="onchange_wo(work_order_id)" domain="[('id','=',0)]" options="{'no_open':True,'no_create':True}" readonly="1"/>
		    			<field name="start"/>
						<field name="end_break"/>
				    	<field name="date_break"/>
						<field name="finish"/>
					</group>
					<group>
					</group>
					<group></group>
					<group col="4">
						<button name="btn_start" type="object" string="Start" class="oe_highlight" attrs="{'invisible': [('start','!=',False)]}"/>
						<button name="btn_break" type="object" string="Break" class="oe_highlight" attrs="{'invisible': ['|',('date_break','!=',False),('start','=',False)]}"/>
						<button name="btn_end_break" type="object" string="End Break" class="oe_highlight" attrs="{'invisible': ['|',('end_break','!=',False),('date_break','=',False)]}"/>
						<button name="btn_finish" type="object" string="Finish" class="oe_highlight" attrs="{'invisible': ['|',('date_break','!=',False),('start','=',False),'|',('end_break','=',False)]}"/>
					</group>
					<notebook>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>
					</notebook>					
		    	</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="wtc_action_start_stop_wo_form">
		    <field name="name">Start Stop WO</field>
		    <field name="res_model">wtc.start.stop.wo</field>
		    <field name="view_type">form</field>
    		<field name="view_mode">form</field>
		</record>
		
		<menuitem name="Start Stop Work Order" parent="wtc_dealer_menu.workshop_sales_menu" sequence="3" id="wtc_menu_start_stop_wo_form" action="wtc_action_start_stop_wo_form"/>
		
		<record model="ir.ui.view" id="wtc_work_order_form_view">
		    <field name="name">work.order.form</field>
		    <field name="model">wtc.work.order</field>
		    <field name="inherit_id" ref="wtc_work_order.view_wtc_work_order_form"/>
		    <field name="arch" type="xml">
		    	<xpath expr="//field[@name='state']" position="after">
					<field name="state_wo" widget="statusbar" statusbar_visible="in_progress,break,finish" statusbar_colors='{"in_progress":"red","break":"blue"}'/>
				</xpath>
		    </field>
		</record>
		
	</data>
</openerp>