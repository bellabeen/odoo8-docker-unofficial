<?xml version="1.0"?>
<openerp>
	<data>
		<!-- Dealer SPK Form -->
	  	<record id="view_teds_spk_dgi_form" model="ir.ui.view" >
		    <field name="name">teds.spk.dgi.form</field>
		    <field name="model">dealer.spk</field>
		    <field name="inherit_id" ref="dealer_sale_order.spk_dealer_form"/>
		    <field name="arch" type="xml">
				<xpath expr="//div[@class='oe_title']" position="after">
                    <field name="md_reference_spk" readonly="1"/>
                    <field name="md_reference_prospect" readonly="1"/>
                    <field name="md_reference_lsng" invisible="1"/>
				</xpath>
 				<xpath expr="//notebook" position="inside">
 					<page string="Tracking DGI Log" attrs="{'invisible':[('note_log','=',False)]}">
 						<field name="note_log" readonly="1"/>
 					</page>
 				</xpath>
		    </field>
		</record>

		<!-- Search Filter SPK -->
	    <record id="dealer_spk_dealer_dgi_filter" model="ir.ui.view">
            <field name="name">dealer.spk.dgi.filter</field>
            <field name="model">dealer.spk</field>
		    <field name="inherit_id" ref="dealer_sale_order.dealer_spk_dealer_filter"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
                    <field name="md_reference_spk"/>
                    <field name="md_reference_prospect"/>
                    <field name="md_reference_lsng"/>
            	</field>
            </field>
        </record>

        <!-- Sale Order Form -->
        <record id="view_teds_dealer_sale_order_dgi_form" model="ir.ui.view" >
		    <field name="name">teds.dealer.sale.order.dgi.form</field>
		    <field name="model">dealer.sale.order</field>
		    <field name="inherit_id" ref="dealer_sale_order.sale_order_dealer_form"/>
		    <field name="arch" type="xml">
				<field name="is_cod" position="after">
					<field name="md_reference_spk" string="No SPK MD" readonly="1"/>
					<field name="md_reference_prospect" string="No Prospect MD" readonly="1"/>
				</field>
		    </field>
		</record>


        <!-- Search Filter Sale Order -->
        <record id="dealer_sale_order_dgi_filter" model="ir.ui.view">
            <field name="name">dealer.sale.order.dgi.filter</field>
            <field name="model">dealer.sale.order</field>
		    <field name="inherit_id" ref="dealer_sale_order.dealer_sale_order_filter"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
            		<field name="md_reference_spk"/>
 					<field name="md_reference_prospect"/>
            	</field>
            </field>
        </record>
        
        <!-- Get Order DGI from dso -->
        <record id="action_teds_dso_dgi_get_order_wizard" model="ir.actions.server">
            <field name="name">Get Order (DGI)</field>
            <field name="model_id" ref="dealer_sale_order.model_dealer_sale_order"/>
            <field name="code">
                if context.get('active_ids'):
                action = {
                    "type": "ir.actions.act_window",
                    "view_mode": "form",
                    "res_model": "teds.b2b.dgi.branch.config",
                    "target": "new",
                    "context":{'default_type_dgi':'H1'},
                }            
            </field>
        </record>

        <record id="teds_dso_dgi_get_order_tree" model="ir.values">
            <field name="name">Get Order</field>
            <field name="model_id" ref="dealer_sale_order.model_dealer_sale_order" />
            <field name="model">dealer.sale.order</field>
            <field name="key" >action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,' +str(ref('action_teds_dso_dgi_get_order_wizard'))"/>
        </record>
	</data>
</openerp>