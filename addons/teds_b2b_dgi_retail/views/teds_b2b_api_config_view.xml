<?xml version="1.0"?>
<openerp>
	<data>
	  	<record id="view_teds_b2b_api_config_is_dgi_form" model="ir.ui.view" >
		    <field name="name">teds.b2b.api.config.is.dgi.form</field>
		    <field name="model">teds.b2b.api.config</field>
		    <field name="inherit_id" ref="teds_b2b_api_configuration.view_teds_b2b_api_config_form"/>
		    <field name="arch" type="xml">
		    	<field name="name" position="after">
		    		<field name="is_dgi"/>
		    	</field>
		    	<field name="code" position="before">
		    		<field name="branch_id" attrs="{'invisible':[('is_dgi','=',False)]}"/>
		    	</field>
		    	<xpath expr="//page[@string='Tokens']" position="after">
		    		<page string="Branches" attrs="{'invisible':[('is_dgi','=',False)]}">
		    			<field name="branch_ids">
		    				<tree editable="bottom">
		    					<field name="branch_id" options="{'no_open':True,'no_create':True}" required="1"/>
		    				</tree>
		    			</field>
		    		</page>
		    	</xpath>
		    </field>
		</record>

		<!-- Branch -->
		<record id="wtc_branch_md_refrence_view" model="ir.ui.view">
            <field name="name">wtx.branch.md.refrence</field>
            <field name="model">wtc.branch</field>
            <field name="inherit_id" ref="wtc_branch.wtc_branch_form_view"/>
            <field name="arch" type="xml">
            	<field name="ahm_code" position="after">
            		<field name="md_reference"/>
            		<field name="is_allow_dgi_prsp"/>
            		<field name="is_pos_dgi"/>
            	</field>
            </field>
        </record>
        
        <!-- Branch Config -->
		<record id="wtc_branch_config_b2b_dgi_view" model="ir.ui.view">
            <field name="name">wtc.branch.config.b2b.dgi.view</field>
            <field name="model">wtc.branch.config</field>
            <field name="inherit_id" ref="wtc_branch.wtc_branch_config_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group" position="after">
                    <group string="Config B2B DGI">
                        <field name="config_dgi_id" options="{'no_open':True,'no_create':True}"/>
                        <field name="config_dgi_h23_id" options="{'no_open':True,'no_create':True}"/>
                    </group>
                </xpath>
                
            </field>
        </record>

        <!-- Wizard Get Order DSO-->
        <record id="view_teds_b2b_dgi_branch_config_order_wizard" model="ir.ui.view" >
		    <field name="name">teds.b2b.dgi.branch.config.order.wizard</field>
		    <field name="model">teds.b2b.dgi.branch.config</field>
		    <field name="arch" type="xml">
		    	<form>
		    		<sheet>
		    			<group>
		    				<field name="branch_id" options="{'no_open':True,'no_create':True}" required="1"/>
		    				<field name="config_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'invisible':['|',('is_pos_dgi','=',False),('type_dgi','!=','H1')]}" domain="[('branch_id','=',branch_id)]"/>
		    				<field name="type_dgi" invisible="1"/>
		    				<field name="is_pos_dgi" invisible="1"/>
		    				<field name="date" string="Tanggal Order" required="1"/>
		    				<field name="no_prospect" string="ID Prospect" attrs="{'invisible':[('type_dgi','!=','H1')]}"/>
		    				<field name="no_spk" string="ID SPK" attrs="{'invisible':[('type_dgi','!=','H1')]}"/>
		    				<field name="type_h23" string="Type" attrs="{'invisible':[('type_dgi','!=','H23')],'required':[('type_dgi','=','H23')]}"/>
		    				<field name="no_wo" string="ID PKB" attrs="{'invisible':[('type_dgi','!=','H23')],'required':[('type_dgi','=','H23')]}"/>
		    			</group>
		    			<footer>
	     	                <button name="action_execute_order" string="Execute" type="object" class="oe_highlight" />
	   						<button string="Cancel" class="oe_link" special="cancel" />
						</footer>
		    		</sheet>
		    	</form>
		    </field>
		</record>
		

	</data>
</openerp>