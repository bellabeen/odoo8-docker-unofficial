<?xml version="1.0"?>
<openerp>
	<data>
	  	<record id="view_teds_work_order_log_note_dgi_form" model="ir.ui.view" >
		    <field name="name">teds.work.order.log.note.dgi.form</field>
		    <field name="model">wtc.work.order</field>
		    <field name="inherit_id" ref="wtc_work_order.view_wtc_work_order_form"/>
		    <field name="arch" type="xml">
				<xpath expr="//div[@class='oe_title']" position="after">
					<field name="md_reference_pkb" readonly="1"/>
					<field name="md_reference_sa" readonly="1"/>
				</xpath>
 				<xpath expr="//notebook" position="inside">
 					<page string="Tracking DGI Log" attrs="{'invisible':[('note_log','=',False)]}">
 						<field name="note_log" readonly="1"/>
 					</page>
 				</xpath>
		    </field>
		</record>

		<!-- Search Filter Work Order -->
	    <record id="dealer_wo_dealer_dgi_filter" model="ir.ui.view">
            <field name="name">dealer.spk.dgi.filter</field>
            <field name="model">wtc.work.order</field>
		    <field name="inherit_id" ref="wtc_work_order.view_wtc_work_order_search"/>
            <field name="arch" type="xml">
            	<field name="name" position="after">
                    <field name="md_reference_pkb"/>
                    <field name="md_reference_sa"/>
            	</field>
            </field>
        </record>

        <!-- Get Wordk Order DGI from wo -->
        <record id="action_teds_dso_dgi_get_work_order_wizard" model="ir.actions.server">
            <field name="name">Get Order (DGI)</field>
            <field name="model_id" ref="wtc_work_order.model_wtc_work_order"/>
            <field name="code">
                if context.get('active_ids'):
                action = {
                    "type": "ir.actions.act_window",
                    "view_mode": "form",
                    "res_model": "teds.b2b.dgi.branch.config",
                    "target": "new",
                    "context":{'default_type_dgi':'H23'},
                }            
            </field>
        </record>

        <record id="teds_dso_dgi_get_work_order_tree" model="ir.values">
            <field name="name">Get Work Order</field>
            <field name="model_id" ref="wtc_work_order.model_wtc_work_order" />
            <field name="model">wtc.work.order</field>
            <field name="key" >action</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.server,' +str(ref('action_teds_dso_dgi_get_work_order_wizard'))"/>
        </record>

	</data>
</openerp>