<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<!-- Type -->
    	<record id="view_teds_report_google_drive_type_tree" model="ir.ui.view">
            <field name="name">teds.report.google.drive.type.tree</field>
            <field name="model">teds.report.google.drive.type</field>
            <field name="arch" type="xml">
            	<tree editable="top">
            		<field name="name" required="1"/>
            	</tree>
            </field>
        </record>

        <record id="action_teds_report_google_drive_type" model="ir.actions.act_window">
            <field name="name">Google Drive Type</field>
            <field name="res_model">teds.report.google.drive.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- Report Google Drive -->
    	<record id="view_teds_report_google_drive_tree" model="ir.ui.view">
            <field name="name">teds.report.google.drive.tree</field>
            <field name="model">teds.report.google.drive</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="tipe"/>
                    <field name="date"/>
                    <field name="gdrive_file_id"/>
                </tree>
            </field>
        </record>
        
        <record id="view_teds_report_google_drive_form" model="ir.ui.view">
            <field name="name">teds.report.google.drive.form</field>
            <field name="model">teds.report.google.drive</field>
            <field name="arch" type="xml">
            	<form>
                    <header>
                        <button name="send_file_report_unit" type="object" string="Stock Unit"/>
                        <button name="send_file_report_unit_type" type="object" string="Stock Unit Type"/>
                        <button name="send_file_report_penjualan" type="object" string="Penjualan Unit"/>
                    </header>
                    <sheet>
                        <group>
                    		<field name="name" readonly="1"/>
                    		<field name="tipe" readonly="1"/>
                    		<field name="date" readonly="1"/>
                            <field name="gdrive_file_id" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"></field>
                                        <field name="create_date" readonly="1"></field>
                                    </group>
                                    <group>							
                                        <field name="write_uid" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="action_teds_report_google_drive" model="ir.actions.act_window">
            <field name="name">Google Drive History</field>
            <field name="res_model">teds.report.google.drive</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Config Report -->
    	<record id="view_teds_report_google_drive_config_tree" model="ir.ui.view">
            <field name="name">teds.report.google.drive.config.tree</field>
            <field name="model">teds.report.google.drive.config</field>
            <field name="arch" type="xml">
            	<tree>
            		<field name="name"/>
            	</tree>
            </field>
        </record>
        
        <record id="view_teds_report_google_drive_config_form" model="ir.ui.view">
            <field name="name">teds.report.google.drive.config.form</field>
            <field name="model">teds.report.google.drive.config</field>
            <field name="arch" type="xml">
        		<form>
            		<sheet>
            			<group>
            				<field name="name" required="1"/>
            				<field name="pickle_file" required="1"/>
							<field name="credential_file" required="1"/>
						</group>
						<notebook>
							<page string="Detail">
								<field name="detail_ids">
									<tree editable="top">
										<field name="tipe" required="1"/>
										<field name="folder" required="1"/>
									</tree>
								</field>
							</page>
						</notebook>
            		</sheet>
            	</form>
            </field>
        </record>

        <record id="action_teds_report_google_drive_config" model="ir.actions.act_window">
            <field name="name">Google Drive Config</field>
            <field name="res_model">teds.report.google.drive.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id='teds_gogole_drive_report_menuitem' parent='wtc_dealer_menu.ma_branches_menu' sequence='500' name="Google Drive Report"/>
   
        <menuitem id='teds_report_google_drive_type_menuitem' parent='teds_gogole_drive_report_menuitem' action='action_teds_report_google_drive_type' sequence='1'/>

        <menuitem id='teds_report_google_drive_config_menuitem' parent='teds_gogole_drive_report_menuitem' action='action_teds_report_google_drive_config' sequence='2'/>
   
        <menuitem id='teds_report_google_drive_menuitem' parent='teds_gogole_drive_report_menuitem' action='action_teds_report_google_drive' sequence='3'/>

    </data>
</openerp>