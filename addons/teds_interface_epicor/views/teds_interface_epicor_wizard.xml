<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_interface_epicor_wizard_form" model="ir.ui.view">
    		<field name="name">teds.interface.epicor.wizard.form</field>            
    		<field name="model">teds.interface.epicor.wizard</field>            
    		<field name="arch" type="xml">
    			<form string="Interface Epicor">
                    <sheet>
                        <group colspan="4" col="4" attrs="{'invisible':[('state_x','=','get')]}">
        					<field name="options" required="1"/>
                            <field name="date" readonly="1"/>
                            <field name="jedate" required="1"/>
                        </group>
                        <field invisible="1" name="state_x"/>                
                        <newline/>    
                        <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                           <separator colspan="4" string="Generated File Success..." attrs="{'invisible':['|',('options','!=','generate_file'),('state_x','=','choose')]}"/>
                           <separator colspan="4" string="Remove Name File Success..." attrs="{'invisible':['|',('options','!=','clear_file'),('state_x','=','choose')]}"/>
                            
                        </group> 
                        <footer>
                            <button name="generate_file" string="Generate" type="object" class="oe_highlight" attrs="{'invisible':[('state_x','=','get')]}"/>
                            <label string=" or " attrs="{'invisible':[('state_x','=','get')]}"/>
                            <button string="Cancel" special="cancel" class="btn btn-default" attrs="{'invisible':[('state_x','=','get')]}"/>
                        </footer>
                    </sheet>
    			</form>
    		</field>
    	</record>

        <record id="action_teds_interface_epicor_wizard" model="ir.actions.act_window">
            <field name="name">Generate File CSV Epicor</field> 
            <field name="res_model">teds.interface.epicor.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_teds_interface_epicor_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="teds_interface_epicor_wizard_menuitem" parent="wtc_dealer_menu.ma_branches_menu"  action="action_teds_interface_epicor_wizard" sequence="201"/> 

    </data>
</openerp>