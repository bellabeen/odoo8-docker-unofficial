<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_interface_epicor_tree" model="ir.ui.view">
    		<field name="name">teds.interface.epicor.tree</field>            
    		<field name="model">teds.interface.epicor</field>            
    		<field name="arch" type="xml">
    			<tree string="Interface Epicor">
					<field name="nama_file"/>
    				<field name="journal_num"/>
    				<field name="account"/>
					<field name="seq_value_2"/>
					<field name="trans_amt"/>
					<field name="jedate"/>
    			</tree>
    		</field>
    	</record>
    	
    	<record id="view_teds_interface_epicor_form" model="ir.ui.view">
    		<field name="name">teds.interface.epicor.form</field>            
    		<field name="model">teds.interface.epicor</field>            
    		<field name="arch" type="xml">
    			<form string="Interface Epicor">
    				<header>
    					<button string="auto" name="action_generate_account_move" type="object"/>
    					<button string="auto_file" name="action_generate_file" type="object"/>
    				</header>
    				<sheet>
    					<div class="oe_title">
    						<h1><field name="nama_file" readonly="1"/></h1>
    					</div>
    					<group>
    						<group>
			    				<field name="journal_num" readonly="1"/>
			    				<field name="account" readonly="1"/>
								<field name="seq_value_2" readonly="1"/>
								<field name="trans_amt" readonly="1"/>
								<field name="jedate" readonly="1"/>
								<field name="description" readonly="1"/>
								<field name="comment_text" readonly="1"/>
								<field name="gl_description" readonly="1"/>
							</group>
							<group>
								<field name="gl_jedate" readonly="1"/>
								<field name="gl_comment_text" readonly="1"/>
								<field name="serial_faktur_pajak_c" readonly="1"/>
								<field name="transaction_type_c" readonly="1"/>
								<field name="supplier_c" readonly="1"/>
								<field name="customer_c" readonly="1"/>
								<field name="invoice_nbr_c" readonly="1"/>
                                <field name="id_rec_c" readonly="1"/> 
							</group>
						</group>
    				</sheet>
    			</form>
    		</field>
    	</record>

    	<record id="action_teds_interface_epicor" model="ir.actions.act_window">
            <field name="res_model">teds.interface.epicor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="name">Interface Epicor</field>
       	</record>
       
       	<menuitem id="teds_interface_epicor_submenu" parent="wtc_dealer_menu.ma_branches_menu" action="action_teds_interface_epicor" sequence="200"/>
	</data>
</openerp>