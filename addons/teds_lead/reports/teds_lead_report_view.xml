<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="teds_lead_report_wizard_view_form" model="ir.ui.view">
            <field name="name">teds.lead.report.wizard.form</field>
            <field name="model">teds.lead.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Laporan Buku Tamu">
                    <!-- <group> -->
                    <group attrs="{'invisible':[('state_x','=','get')]}">
                        <label for="start_date" string="Periode"/>
                        <div>
                            <!-- TODO rapikan ini -->
                            <field name="start_date" required="1" placeholder="Start date" />
                            <field name="end_date" required="1" placeholder="End date" />
                        </div>
                        <field name="state" string="Status"/>
                        <field name="data_source" required="1"/>
                    </group>
                        <!-- <group name="crm_inherit">
                        
                        </group> -->
                    <!-- </group> -->
                    <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
                        <page string="Dealer">
                            <field name="branch_ids" colspan="4" nolabel="1" options="{'no_create': True, 'no_open': True}">
                                <tree editable="bottom">
                                    <field name="code" />
                                    <field name="name" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field invisible="1" name="state_x"/>                
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer>
                        <button name="export_to_xls" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                        <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="teds_lead_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Laporan Buku Tamu</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">teds.lead.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="teds_lead_report_wizard_view_form"/>
            <field name="target">new</field>
        </record>
        <menuitem id="teds_lead_report_wizard_menu" 
            parent="wtc_dealer_menu.showroom_report_menu"
            sequence="102"
            action="teds_lead_report_wizard_action"/> 
    </data>
</openerp>