<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_teds_lead_activity_first_view_form" model="ir.ui.view">
            <field name="name">view.teds.lead.activity.first.form</field>
            <field name="model">teds.lead.activity</field>
            <field name="arch" type="xml">
                <form string="Activity">
                    <sheet>
                        <group col="4">
                            <field name="date" required="1"/>
                            <field name="name" string="Stage" options="{'no_create':True, 'no_open': True}" required="1" domain="[('type','=','lead')]"/>
                        </group>
                        <footer>
                            <button name="action_add_activity" string="Add Activity" type="object" class="oe_highlight"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_teds_lead_activity_second_form" model="ir.ui.view">
            <field name="name">view.lead.activity.form.second</field>
            <field name="model">teds.lead.activity</field>
            <field name="arch" type="xml">
                <form string="Activity">
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="date" readonly="1"/>
                            <field name="name" string="Stage" options="{'no_create':True, 'no_open': True}" readonly="1"/>
                        </group>
                        <group>
                            <group>
                                <field name="minat" required="1"/>
                                <field name="stage_result_id" required="1" options="{'no_open':True,'no_create':True}"/>
                            </group>
                            <group>
                                <field name="remark" />
                            </group>
                        </group>

                        <group attrs="{'invisible':[('minat','in',('lose',False))]}">
                            <group>
                                <field name="no_ktp" attrs="{'required':[('minat','=','hot')]}"/>
                                <label for="tempat_tgl_lahir" string="Tempat/Tgl Lahir" />
                                <div> 
                                    <field name="tempat_tgl_lahir" attrs="{'required':[('minat','=','hot')]}"/>
                                    <field name="tgl_lahir" attrs="{'required':[('minat','=','hot')]}"/>
                                </div>
                                <field name="product_id" options="{'no_open':True,'no_create':True}" required="1"/>
                                <field name="payment_type" attrs="{'invisible':[('minat','not in',('medium', 'hot'))], 'required':[('minat','in',('hot','medium'))]}"/>
                                <field name="finco_id" options="{'no_open':True,'no_create':True}" attrs="{'invisible':['|',('minat','=','cold'),('payment_type','!=','2')],'required':[('payment_type','=','2')]}"/>
                                <field name="tenor" attrs="{'required':[('minat','=','hot')],'invisible':['|',('payment_type','!=','2'),('minat','!=','hot')]}"/>
                                <field name="cicilan" attrs="{'required':[('minat','=','hot')],'invisible':['|',('payment_type','!=','2'),('minat','!=','hot')]}"/>
                            </group>
                            <group>
                                <field name="mobile" required="1"/>
                                <field name="jenis_kelamin_id" required="1" options="{'no_open': True,'no_create': True}"/>
                                <field name="pekerjaan_id" options="{'no_open': True,'no_create': True}" attrs="{'invisible':[('minat','not in',('medium', 'hot'))], 'required':[('minat','in',('hot','medium'))]}"/>
                                <field name="motor_sekarang" attrs="{'invisible':[('minat','not in',('medium', 'hot'))]}"/>
                                <field name="date_jatuh_tempo" attrs="{'invisible':['|',('minat','=','cold'),('payment_type','!=','2')],'required':[('payment_type','=','2')]}"/>
                                <field name="uang_muka" attrs="{'invisible':['|',('minat','=','cold'),('payment_type','!=','2')],'required':[('payment_type','=','2')]}"/>
                                <field name="tgl_uang_muka" attrs="{'required':[('minat','=','hot')],'invisible':['|',('payment_type','!=','2'),('minat','!=','hot')]}"/>

                            </group>
                            <group string="Alamat Sesuai KTP">
                                <field name="street" placeholder="Alamat..." required="1"/>
                                <label for="rt" string="RT/RW"/>
                                <div>                               
                                    <field name="rt" placeholder="RT" style="width: 25%%" required="1"/>
                                    <field name="rw" placeholder="RW" style="width: 25%%" required="1"/>
                                </div>
                                <field name="state_id" string="Provinsi" options="{'no_open': True,'no_create': True}" required="1" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/>
                                <field name="kabupaten_id" string="Kab / Kota" options="{'no_open': True,'no_create': True}" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/>
                                <label for="kecamatan_id" string="Kecamatan"/>
                                <div>
                                    <field name="kecamatan_id" placeholder="Kecamatan" options="{'no_open': True,'no_create': True}" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/>
                                    <field name="kecamatan" placeholder="Kecamatan" attrs="{'required':[('kecamatan_id','!=',False)]}"/>
                                </div> 
                                <label for="zip_code_id" string="Kelurahan"/>
                                <div>                   
                                    <field name="zip_code_id" placeholder="Kelurahan" options="{'no_open': True,'no_create': True}" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/> 
                                    <field name="kelurahan" placeholder="Kelurahan" attrs="{'required':[('zip_code_id','!=',False)]}"/>
                                </div>
                                <field name="kode_pos" string="Kode Pos" attrs="{'required':[('zip_code_id','!=',False)]}"/>
                            </group>
                            <group string="Alamat Domisili / Survei">
                                <field name="is_sesuai_ktp" string="Sesuai alamat KTP" required="1"/>
                                <field name="street_domisili" placeholder="Alamat..." required='1'/>
                                <label for="rt_domisili" string="RT/RW"/>
                                <div>                               
                                    <field name="rt_domisili" placeholder="RT" style="width: 25%%" required="1"/>
                                    <field name="rw_domisili" placeholder="RW" style="width: 25%%" required="1"/>
                                </div>
                                <field name="state_domisili_id" string="Provinsi" options="{'no_open': True,'no_create': True}" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/>
                                <field name="kabupaten_domisili_id" string="Kab / Kota" options="{'no_open': True,'no_create': True}" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/>
                                <label for="kecamatan_domisili_id" string="Kecamatan" />
                                <div>
                                    <field name="kecamatan_domisili_id" placeholder="Kecamatan" options="{'no_open': True,'no_create': True}" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/>
                                    <field name="kecamatan_domisili" placeholder="Kecamatan" attrs="{'required':[('kecamatan_domisili_id','!=',False)]}"/>  
                                </div> 
                                <label for="zip_code_domisili_id" string="Kelurahan"/>
                                <div>                   
                                    <field name="zip_code_domisili_id" placeholder="Kelurahan" options="{'no_open': True,'no_create': True}" attrs="{'required':[('minat','in',('medium', 'hot'))]}"/> 
                                    <field name="kelurahan_domisili" placeholder="Kelurahan" attrs="{'required':[('zip_code_domisili_id','!=',False)]}"/>
                                </div>
                                <field name="kode_pos_domisili" string="Kode Pos" attrs="{'required':[('zip_code_domisili_id','!=',False)]}"/>
                            </group>
                        </group>                        
                        <footer>
                            <button name="action_add_only" string="Add Only" type="object" class="oe_highlight"/>
                            <button name="action_add_and_next_activity" string="Add and Next Activity" type="object"/>
                            <button string="Cancel" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>