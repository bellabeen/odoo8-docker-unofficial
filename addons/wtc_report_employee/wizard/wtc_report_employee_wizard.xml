<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="view_report_employee_wizard" model="ir.ui.view">
		<field name="name">Print Report Employee</field>
		<field name="model">wtc.report.employee.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Report Employee">
	        	<group col="4" colspan="4">
	   				<field name="status" on_change="status_date_change(status,date)"/>
	   				<field name="date" on_change="status_date_change(status,date)"/>
	          	</group>
	          	
				<notebook colspan="5">
		      		<page string="Branches">
						<field name="branch_ids" colspan="4" nolabel="1"/>
		      		</page>
		      		<page string="Job Title">
		          		<field name="job_ids" colspan="4" nolabel="1"/>
		          	</page>
	        	</notebook>
	          	<footer>
	            	<button name="xls_export" string="Export" type="object" icon="gtk-execute" context="{'xls_export':1}" class="oe_highlight"/>
	            	or <button string="Cancel" class="oe_link" special="cancel"/>
	          	</footer>
	          	
	        </form>
    	</field>
    </record>
	
    <record id="action_report_employee_wizard" model="ir.actions.act_window">
		<field name="name">Report Employee</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wtc.report.employee.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_report_employee_wizard"/>
		<field name="target">new</field>
    </record>

	<menuitem id="menu_employee_report" parent="hr.menu_hr_main" sequence="10" action="action_report_employee_wizard"/>

	</data>
</openerp>