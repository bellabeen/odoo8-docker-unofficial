<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  
	    	
	<record id="wtc_approval_p2p_purchase_form_view" model="ir.ui.view">
		<field name="name">wtc.p2p.purchase.order.approval.form</field>
		<field name="model">wtc.p2p.purchase.order</field>
		<field name="inherit_id" ref="wtc_p2p_purchase_form_view"/>
		<field name="arch" type="xml">
			<field name="state" position="before">
				<button name="wkf_request_approval" groups='wtc_p2p.group_wtc_p2p_purchase_order_rfa' attrs="{'invisible': ['|',('state','in',('approved','cancel','draft','waiting_for_approval','confirmed','reject')),('is_branch','=',False)]}" string="RFA" type="object" class="oe_highlight"/>
				<button name="wkf_approval" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" string="Approve" type="object" class="oe_highlight"/>
				<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" string="Reject" type="action"
					context="{'model_name':'wtc.p2p.purchase.order','update_value':{'approval_state':'r','state':'draft'}}"/>
				<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" 
				string="Cancel Approval" groups='wtc_p2p.group_wtc_p2p_purchase_order_cancel_approval' type="action" context="{'model_name':'wtc.p2p.purchase.order','update_value':{'approval_state':'b','state':'draft'}}"/>																		
																															 			
			</field>
			<field name="purchase_order_type_id" position="after">
				<field name="approval_state"/>
			</field>								
			<xpath expr="//page[@string='Order Line']" position="after">
				<page string="Approval">
					<field name="approval_ids">
						<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
							<field name="group_id" />
							<field name="branch_id"/>
							<field name="division"/>
							<field name="limit"/>
							<field name="sts"/>
							<field name="reason"/>
							<field name="pelaksana_id"/>
							<field name="tanggal"/>
						</tree>
					</field>
				</page> 				
			</xpath>
		</field>
	</record>
	  

	          
 	</data>
 </openerp>
       		
       		
	