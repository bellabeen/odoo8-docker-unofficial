<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
        <record id="view_wtc_p2p_product_tree" model="ir.ui.view">
            <field name="name">wtc.p2p.product.line.tree</field>
            <field name="model">wtc.p2p.product</field>
            <field eval="1" name="priority"/>
            <field name="arch" type="xml">
                <tree string="P2P Product" create="true" editable="top">
                	<field name="product_id" required="1" options='{"no_create": True,"no_open":True}'/>               	
                    <field name="name" readonly='1'/>
                    <field name="start_date" required="1"/>
                    <field name="end_date" required="1"/>
                    <field name="categ_id"/>
                    <field name="division"/>
                </tree>
            </field>
        </record>    	
 
		<record model="ir.ui.view" id="wtc_p2p_product_form_view">
		    <field name="name">wtc.p2p.product.form</field>
		    <field name="model">wtc.p2p.product</field>
		    <field name="arch" type="xml">
		        <form string="P2P Product">	        	
		        	<sheet>
			        	<div class="oe_title">
			        		<h2>
				                <label string="P2P Product"/>    			
				 				<field name="name" class="oe_inline" readonly='1'/>
			 				</h2>
			        	</div>       
						<group>   
							<group colspan="2">
								<field name="product_id" required="1" options="{'no_create': True,'no_open': True}"  />
							</group>            
	                    	<group>
	                    		<field name="categ_id"/>
                    			<field name="start_date" required="1" />
                    			<field name="end_date" required="1" ></field>
							</group>  
						</group>	
						
						<notebook colspan="5">
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>			                    
		                </notebook>				
		           </sheet>
		        </form>
		    </field>
		</record>

 		<record id="view_wtc_p2p_product_filter" model="ir.ui.view">
            <field name="name">p2p.config.list.select</field>
            <field name="model">wtc.p2p.product</field>
            <field name="arch" type="xml">
                <search string="Search P2P Product">
                    <field name="name"/>
                    <field name="product_id"/> 
                </search>
            </field>
        </record>		
		<record model="ir.actions.act_window" id="wtc_p2p_product_action">
		    <field name="name">P2P Product</field>
		    <field name="res_model">wtc.p2p.product</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_wtc_p2p_product_filter"/>
		</record>
					
		<menuitem id="p2p_product_submenu" name="P2P Product" parent="wtc_dealer_menu.p2p_configuration_menu"  action="wtc_p2p_product_action" sequence="20"/>    	
    </data>
</openerp>
    