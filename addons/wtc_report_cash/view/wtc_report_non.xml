<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<template id="wtc_report_non">
<t t-name="report.external_layout_header">
    <div class="header">
        <div class="row">
        <table id="t01">
          <tr style="font-size: 10px;">
              <td>PT. TUNAS DWIPA MATRA</td>
          </tr>
          <tr style="font-size: 10px; font-weight:bold;">
             <td>LAPORAN PENERIMAAN DAN PENGELUARAN HARIAN</td>
          </tr>                                             
        </table> 
        
        <table style="width: 50%;">
          <tr style="font-size: 9px;">
              <td>Option</td>
              <td>:</td>
              <td><span t-esc="data['option']"/></td>
          </tr>   
          <tr style="font-size: 9px;">
              <td>Tanggal</td>
              <td>:</td>
              <td><span t-esc="data['start_date']"/> s/d <span t-esc="data['end_date']"/></td>
          </tr>
          </table>                                                      
        </div>   
    </div>
</t>
    

     <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
                <div class="page">
                 <style type="text/css">
                         h1   {font-size: 3; font-weight:bold;text-decoration:underline;}
                         table#t01 {text-align: left;width: 50%; border-left: 0px solid black; border-right: 0px solid black;}

                         table#t02 {text-align: left;width: 20%; border-left: 0px solid black; border-right: 0px solid black;}
                         
                  </style>

             
                    <div class="oe_structure"/>
                    <div class="row"> </div> 
                    <table class="table table-condensed">
                        <thead>
                           <tr style="border-bottom: 1px solid black; font-size: 8px; background-color:yellow;">
                                <th style="font-weight: 10; text-align: center;" width="2.00%">No</th>
                                <th width="10.00%">Kode Cabang</th>
                                <th width="11.00%">Tanggal</th>
                                <th width="8.00%">Jam</th>
                                <th width="10.00%">No Kwitansi</th>
                                <th width="10.00%">Rek</th>
                                <th width="17.00%">Keterangan</th>
                                <th width="12.00%">Saldo Awal</th>
                                <th width="10.00%">Tunai</th>
                                <th width="14.00%">Bank Checks</th>
                                <th width="12.00%">Total</th>
                          </tr>
                        </thead>                       
                        
                         <tbody>
                            <tr t-foreach="looping(data)" style="page-break-inside: avoid !important; font-size: 8px;" t-as="line">
                                <td><span t-esc="no_urut()"/></td>
                                <td><span t-esc="line['branch_code']"/></td>
                                <td><span t-esc="line['tanggal']"/></td>
                                <td><span t-esc="line['jam']"/></td>
                                <td><span t-esc="line['kwitansi_name']"/></td>
                                <td><span t-esc="line['account_code']"/></td>
                                <td><span t-esc="line['keterangan']"/></td>
                                <td><span t-esc="formatLang(line['saldo_awal'], digits=2)"/></td>
                                <td><span t-esc="formatLang(line['tunai'], digits=2)"/></td>
                                <td><span t-esc="formatLang(line['bank_check'], digits=2)"/></td>
                                <td><span t-esc="formatLang(line['total'], digits=2)"/></td>
                            </tr>
                        </tbody>  
                        <tr style="border-bottom: 1px solid black; font-size: 8px; background-color:yellow;">
                                <td></td>
                                <td></td>
                                <td style="font-size: 8px; font-weight:bold;">Total</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><span t-esc="formatLang(total_saldo(data), digits=2)"/></td>
                                <td><span t-esc="formatLang(total_tunai(data), digits=2)"/></td>
                                <td><span t-esc="formatLang(total_bank_and_checks(data), digits=2)"/></td>
                                <td><span t-esc="formatLang(total_total(data), digits=2)"/></td>
                            </tr>
                        <tfoot>
                        </tfoot>                                                                      
                    </table>   
                                      
                  <div class="oe_structure" > 
                         <table style="width: 70%;">
                           <tr style="font-size: 10px;">
                             <td><h1></h1></td>
                             <td><h1></h1></td>
                             <td><h1></h1></td>
                          </tr> 
                          <tr>
                              <td><h1></h1></td>
                              <td><h1></h1></td>
                              <td><h1></h1></td>
                          </tr>  
                           <tr style="font-size: 10px;">
                              <td align="center">_________________</td>
                              <td align="center">_________________</td>
                              <td align="center">_________________</td>
                          </tr>  
                          <tr style="font-size: 10px;">
                              <td align="center">Pembuat</td>
                              <td align="center">Admin</td>
                              <td align="center">Kacab</td>
                          </tr> 
                           <tr style="font-size: 10px;">
                              <td align="center"> <span t-esc="usr()"/>,<span t-esc="tgl()"/></td>
                              <td align="center">(...............................)</td>
                              <td align="center">(...............................)</td>
                          </tr>                                            
                        </table>   
                    </div>
                </div>
            
        </t>
    </t>
</template>
</data>
</openerp>