<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
  
    <record id="view_report_cash" model="ir.ui.view">
      <field name="name">Print Report Cash</field>
      <field name="model">wtc.report.cash</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Laporan Cash">
          <group attrs="{'invisible':[('state_x','=','get')]}">
            <field name="option" required="1"/>
            <field name="status" attrs="{'invisible':[('option','not in',('Outstanding EDC','cash_reconcile'))],'required':[('option','=','cash_reconcile')]}"/>
            <field name="journal_id"  attrs="{'invisible':[('option','!=','Petty Cash')],'required':[('option','=','Petty Cash')]}"></field>        
          </group>
          <group col="4" attrs="{'invisible':['|',('state_x','=','get'),'&amp;',('option','=','cash_reconcile'),('status','=','outstanding')]}">
          <label for="start_date" string="Tanggal"/>  
    <div>
    <field name="start_date" required="1" class="oe_inline"/> s/d <field name="end_date" class="oe_inline"/>
    </div>   
          </group>
          
          <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
            <page string="Branchs" attrs="{'invisible':[('option','=','Petty Cash')]}"> 
               <field name="branch_ids" colspan="4" nolabel="1"/>
            </page>   
            <page string="Jornals"  attrs="{'invisible':[('option','=','Petty Cash')]}">
              <field name="journal_ids" colspan="4" nolabel="1"/>
            </page>                           
        </notebook>
        <field invisible="1" name="state_x"/>                
        <newline/>    
        <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
            <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
            <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
            <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
        </group>
        <footer>
          
            <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
            <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />

          
            <button name="print_pdf_report" attrs="{'invisible':[('state_x','=','get')]}" string="Print PDF" type="object" class="oe_highlight"/>

            <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
        </footer>
        </form>
      </field>
    </record>

    <record id="action_report_cash_wizard" model="ir.actions.act_window">
      <field name="name">Cash</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wtc.report.cash</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_report_cash"/>
      <field name="target">new</field>
    </record>

   <menuitem id="menu_report_cash"  parent="wtc_dealer_menu.backoffice_report_menu" sequence="3"  action="action_report_cash_wizard"/>  


      <report 
            string="Non Patty Cash" 
            id="menu_report_cash2" 
            model="wtc.report.cash" 
            report_type="qweb-pdf"
            name="wtc_report_cash.wtc_report_non" 
            file="wtc_report_cash.wtc_report_non" 
            menu="False"/>

       <report 
            string="Patty Cash" 
            id="menu_report_cash3" 
            model="wtc.report.cash" 
            report_type="qweb-pdf"
            name="wtc_report_cash.wtc_report_pettycash_pdf" 
            file="wtc_report_cash.wtc_report_pettycash_pdf" 
            menu="False"/>


  </data>
</openerp>
