<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_teds_insentive_salesman_report_wizard" model="ir.ui.view">
			<field name="name">teds.insentive.salesman.report.wizard</field>
			<field name="model">teds.insentive.salesman.report.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Report Insentive">
					<group attrs="{'invisible':[('state_x','=','get')]}">
						<field name="job_title" required="1"/>
						<label for="bulan" string="Periode"/> 
						<div>
							<field name="bulan" class="oe_inline" placeholder="Bulan" required="1"/> - 
							<field name="tahun" class="oe_inline" placeholder="Tahun" required="1"/>
						</div>
					</group>
                	<field invisible="1" name="state_x"/>                
                	<newline/>    
                	<group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
	                    <separator colspan="4" string="Excel Export Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                </group> 
	                <footer>
	                    <button name="excel_report" string="Export Data" type="object" class="oe_highlight" attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <label string=" or " attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <button string="Cancel" special="cancel" class="btn btn-default" attrs="{'invisible':[('state_x','=','get')]}"/>
	                </footer>
				</form>
			</field>
		</record>

		<record id="action_teds_insentive_salesman_report_wizard" model="ir.actions.act_window">
			<field name="name">Report Insentive</field> 
			<field name="res_model">teds.insentive.salesman.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_teds_insentive_salesman_report_wizard"/>
			<field name="target">new</field>
		</record>

	  	<menuitem id="teds_insentive_salesman_report_wizard_menuitem" action="action_teds_insentive_salesman_report_wizard" parent="wtc_dealer_menu.showroom_report_menu" sequence="100"/>
	</data>
</openerp>
