<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="view_teds_part_hotline_cancel_tree" model="ir.ui.view" >
            <field name="name">teds.part.hotline.cancel.tree</field>
            <field name="model">teds.part.hotline.cancel</field>
            <field name="arch" type="xml">
            	<tree string="Part Hotline">
            		<field name="name"/>
            		<field name="branch_id"/>
            		<field name="division"/>
            		<field name="hotline_id"/>
            		<field name="date"/>
            		<field name="state"/>
            	</tree>
            </field>
        </record>
        
        <record id="view_teds_part_hotline_cancel_form" model="ir.ui.view" >
            <field name="name">teds.part.hotline.cancel.form</field>
            <field name="model">teds.part.hotline.cancel</field>
            <field name="arch" type="xml">
            	<form string="Part Hotline">
            		<header>
            			<button name="action_rfa" string="RFA" type="object" class="oe_highlight" states="draft"/>
            			<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" string="Cancel Approval" type="action" context="{'model_name':'teds.part.hotline.cancel','update_value':{'approval_state':'b','state':'draft'}}"/>
            			<button name="action_approved" string="Approve" type="object" class="oe_highlight" states="waiting_for_approval"/>
            			<button name="action_confirm" string="Confirm" type="object" class="oe_highlight" states="approved"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval,approved,confirmed"/>
                    </header>
            		<sheet>
						<div class="oe_title">                      
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                            	<field name="branch_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'readonly':[('create_date','!=',False)]}"/>
                            	<field name="hotline_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'readonly':[('state','!=','draft')]}" domain="[('branch_id','=',branch_id),('state','=','approved')]"/>
                            	<field name="approval_state" readonly="1"/>
                            </group>
                            <group>
                            	<field name="division" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            	<field name="date" readonly="1"/>
                            	<field name="reason" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            	<field name="create_date" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
							<page string="Approval">
                                <field name="approval_ids">
                                    <tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
                                        <field name="group_id" />
                                        <field name="branch_id"/>
                                        <field name="division"/>
                                        <field name="sts"/>
                                        <field name="reason"/>
                                        <field name="pelaksana_id"/>
                                        <field name="tanggal"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"></field>
                                        <field name="create_date" readonly="1"></field>
                                        <field name="confirm_uid" attrs="{'invisible':[('confirm_uid','=',False)]}" readonly="1"/>
                                        <field name="confirm_date" attrs="{'invisible':[('confirm_date','=',False)]}" readonly="1"/>
                                    </group>
                                    <group>                         
                                        <field name="write_uid" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
            		</sheet>
            	</form>
            </field>
        </record>

         <record id="teds_part_hotline_cancel_filter" model="ir.ui.view">
            <field name="name">teds.part.hotline.cancel.filter</field>
            <field name="model">teds.part.hotline.cancel</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="hotline_id"/>
                    <field name='name'/>
                    <field name="branch_id"/>
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />
                    <filter string="Waiting for Approval" name="state_waiting_for_approval" domain="[('state','=','waiting_for_approval')]" />
                    <filter string="Approved" name="state_approved" domain="[('state','=','approved')]"/>
                    <filter string="Confirmed" name="state_confirmed" domain="[('state','=','confirmed')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Branch" context="{'group_by':'branch_id'}"/>
                    </group>     
                </search>
            </field>
        </record>

         <record id="action_teds_part_hotline_cancel" model="ir.actions.act_window">
            <field name="name">Part Hotline Cancel</field>
            <field name="res_model">teds.part.hotline.cancel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_state_draft':1,'search_default_state_waiting_for_approval':1,'search_default_state_approved':1}</field>
        </record>

        <menuitem id="teds_part_hotline_cancel_menuitem" parent="wtc_cancel_work_order.workshop_cancellation_menu" action="action_teds_part_hotline_cancel" sequence="10"/>

    </data>
</openerp>
