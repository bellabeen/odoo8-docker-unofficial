<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="view_teds_part_hotline_change_product_form" model="ir.ui.view" >
            <field name="name">teds.part.hotline.change.product.form</field>
            <field name="model">teds.part.hotline</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Detail Part">
                        <field name="part_detail_ids" nolabel="1" widget="one2many_list">
                            <tree editable="top" create="false" delete="false">
                                <field name="hotline_id" readonly="1"/>
                                <field name="product_id" options="{'no_open':True,'no_create':True}" required="1"/>
                                <field name="name"/>
                                <field name="qty" required="1"/>
                                <field name="qty_spl" required="1"/>
                                <field name="no_po"/>
                                <field name="qty_wo" required="1"/>
                                <field name="no_wo"/>
                                <field name="price" invisible="1"/>
                                <field name="price_show" readonly="1"/>
                                <field name="tax_id" invisible="1"/>
                                <field name="price_tax" invisible="1"/>
                                <field name="tax_show_id" widget="many2many_tags" readonly="1"/>
                                <field name="subtotal" readonly="1"/>
                                <field name="state" readonly="1" invisible="1"/>
                                <field name="status_po" required="1"/>
                                <field name="status_wo" required="1"/>
                                <field name="is_available" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button name="action_change_product_form" string="Confirm" type="object" class="oe_highlight" /> 
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="view_teds_part_hotline_lot_form" model="ir.ui.view" >
            <field name="name">teds.part.hotline.lot.form</field>
            <field name="model">stock.production.lot</field>
            <field name="arch" type="xml">
                <form string="Form">
                    <group col="4">
                        <field name="name" string="Engine No" on_change="name_onchange(product_id,name)" attrs="{'readonly':[('create_date','!=',False)]}"/>
                        <field name="chassis_no" on_change="chassis_onchange(chassis_no)" attrs="{'readonly':[('create_date','!=',False)]}"/>
                        <field name="no_polisi" on_change="no_pol_onchange(no_polisi)"/>
                        <field name="nama_buku" on_change="nama_buku_onchange(nama_buku)"/>
                    </group>
                    <group col="4">
                        <field name="product_id" attrs="{'readonly':[('create_date','!=',False)]}"/>
                        <field name="customer_id" required="True" context="{'form_view_ref':'wtc_work_order.wtc_customer_form_wizard_view'}"/>
                        <field name="kode_buku" on_change="kode_buku_onchange(kode_buku)"/>
                        <field name="state" invisible="1"/>
                        <field name="branch_id" invisible="1"/>
                        <field name="create_date" invisible="1"/>
                    </group>
                </form>
            </field>
        </record>

		<record id="view_teds_part_hotline_tree" model="ir.ui.view">
    		<field name="name">teds.part.hotline.tree</field>            
    		<field name="model">teds.part.hotline</field>            
            <field name="priority">1</field>
            <field name="arch" type="xml">
    			<tree>
    				<field name="branch_id"/>
    				<field name="name"/>
    				<field name="lot_id"/>
    				<field name="customer_id"/>
    				<field name="pembawa"/>
    				<field name="no_telp"/>
    				<field name="state"/>
    			</tree>
    		</field>
    	</record>
    	
    	<record id="view_teds_part_hotline_form" model="ir.ui.view">
    		<field name="name">teds.part.hotline.form</field>            
    		<field name="model">teds.part.hotline</field>
            <field name="priority">1</field>
    		<field name="arch" type="xml">
    			<form>
                    <header>
                        <button name="action_check_available_part" string="Check Available" type="object" class="oe_highlight" attrs="{'invisible':[('is_check_available','!=',False)]}" groups="teds_part_hotline.group_button_check_available_part_hotline"/>
                        <button name="action_rfa" string="RFA" type="object" class="oe_highlight" attrs="{'invisible':['|',('state','!=','draft'),('is_check_available','=',False)]}" groups="teds_part_hotline.group_button_rfa_part_hotline"/>
                        <button name="action_approved" string="Approve" type="object" class="oe_highlight" states="waiting_for_approval" groups="teds_part_hotline.group_button_approved_part_hotline"/>
                        <button string="Cancel Approval" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" type="action" context="{'model_name':'teds.part.hotline','update_value':{'approval_state':'b','state':'draft'}}"/>
                        <button name="action_print_form" string="Print" type="object" attrs="{'invisible':[('state','in',('draft','cancel'))]}"/>
                        <button name="action_reset_po" string="Reset PO" type="object" attrs="{'invisible':[('status_po','!=','done')]}" groups="teds_part_hotline.group_button_reset_po_part_hotline"/>
                        <button name="action_reset_wo" string="Reset WO" type="object" attrs="{'invisible':[('status_wo','!=','done')]}" groups="teds_part_hotline.group_button_reset_wo_part_hotline"/>
                        <button name="action_change_product" string="Change Product" type="object" attrs="{'invisible':[('state','!=','approved')]}" groups="teds_part_hotline.group_button_change_product_part_hotline"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval,approved,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">                      
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="create_date" invisible="1"/>
                                <field name="branch_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'readonly':[('create_date','!=',False)]}"/>
                                <field name="lot_id" domain="[('state','in',['paid','workshop','sold_offtr','sold','stock'])]" context="{'form_view_ref':'teds_part_hotline.view_teds_part_hotline_lot_form','default_state':'workshop','default_branch_id':branch_id}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="chassis_no"/>
                                <field name="no_polisi"/>
                                <field name="customer_id" context="{'form_view_ref':'wtc_work_order.wtc_customer_form_wizard_view'}" required="1" readonly="1"/>
                                <field name="is_check_available" invisible="1"/>
                                <field name="approval_state" readonly="1"/>
                                <field name="status_po" attrs="{'invisible':[('state','not in',('approved','done'))]}" readonly="1"/>
                                <field name="tgl_order_po" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="division" readonly="1"/>
                                <field name="jenis_po" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="pembawa" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="no_telp" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="is_exception" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="status_wo" attrs="{'invisible':[('state','not in',('approved','done'))]}" readonly="1"/>

                            </group>
                        </group>
                        <notebook>
                            <page string="Detail Part">
                                <field name="part_detail_ids" nolabel="1" widget="one2many_list" attrs="{
                                    'readonly':[('state','!=','draft')]
                                    }">
                                    <tree editable="top">
                                        <field name="product_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="name"/>
                                        <field name="qty" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="qty_spl" readonly="1"/>
                                        <field name="qty_wo" readonly="1"/>
                                        <field name="price" invisible="1"/>
                                        <field name="price_show" readonly="1"/>
                                        <field name="tax_id" invisible="1"/>
                                        <field name="price_tax" invisible="1"/>
                                        <field name="tax_show_id" widget="many2many_tags" readonly="1"/>
                                        <field name="subtotal" readonly="1"/>
                                        <field name="state" readonly="1" invisible="1"/>
                                        <field name="status_po" invisible="1"/>
                                        <field name="status_wo" invisible="1"/>
                                        <field name="is_available" readonly="1"/>
                                    </tree>
                                </field>
                                
                                <group>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="amount_untaxed"/>
                                        <field name="amount_tax"/>
                                        <field name="amount_total" class="oe_subtotal_footer_separator"/>
                                    </group>   
                                </group>       
                                <label for="minimal_dp" string="Minimal DP"/>
                                <div>
                                    <field name="minimal_dp" readonly="1"/>
                                </div>
                                <group string="Alokasi DP">
                                    <field name="alokasi_dp_ids" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                        <tree editable="top">
                                            <field name="hl_id" options="{'no_open':True,'no_create':True}" required="1" domain="[('branch_id','=',parent.branch_id),('partner_id','=',parent.customer_id),('division','=','Sparepart'),('account_id.type','=','payable'),('reconcile_id','=',False),('credit','>',0)]"/>
                                            <field name="amount_hl_original" invisible="1"/>
                                            <field name="amount_hl_balance" invisible="1"/>
                                            <field name="amount_hl_original_show" readonly="1"/>
                                            <field name="amount_hl_balance_show" readonly="1"/>
                                            <field name="amount_hl_allocation" required="1" sum='Total'/>
                                        </tree>
                                    </field>
                                </group>
                                <group string="Stock Available">
                                    <field name="part_hotline_available_ids" readonly="1" nolabel="1">
                                        <tree>
                                            <field name="branch_id"/>
                                            <field name="name"/>
                                            <field name="product_id"/>
                                            <field name="qty"/>
                                            <field name="aging"/>
                                        </tree>
                                        <form>
                                            <sheet>
                                                <group>
                                                    <field name="branch_id" options="{'no_open':True,'no_create':True}"/>
                                                    <field name="name"/>
                                                    <field name="product_id" options="{'no_open':True,'no_create':True}"/>
                                                    <field name="qty"/>
                                                    <field name="aging"/>
                                                </group>
                                            </sheet>
                                        </form>
                                    </field>
                                </group>
                            </page>
                            <page string="Approval">
                                <field name="approval_ids">
                                    <tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
                                        <field name="group_id" />
                                        <field name="branch_id"/>
                                        <field name="division"/>
                                        <field name="sts"/>
                                        <field name="reason"/>
                                        <field name="pelaksana_id"/>
                                        <field name="tanggal"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"></field>
                                        <field name="create_date" readonly="1"></field>
                                        <field name="cancel_uid" readonly="1" attrs="{'invisible':[('cancel_uid','=',False)]}"/>
                                        <field name="cancel_date" readonly="1" attrs="{'invisible':[('cancel_date','=',False)]}"/>
                                    </group>
                                    <group>                         
                                        <field name="write_uid" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
    			</form>
    		</field>
    	</record>

        <record id="teds_part_hotline_filter" model="ir.ui.view">
            <field name="name">teds.part.hotline.filter</field>
            <field name="model">teds.part.hotline</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="customer_id"/>
                    <field name='name'/>
                    <field name="lot_id"/>
                    <field name='pembawa'/>
                    <field name="branch_id"/>  
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />
                    <filter string="Waiting for Approval" name="state_waiting_for_approval" domain="[('state','=','waiting_for_approval')]" />
                    <filter string="Approved" name="state_approved" domain="[('state','=','approved')]"/>
                    <filter string="Done" name="state_done" domain="[('state','=','done')]"/>
                    <field name="part_detail_ids" filter_domain="[('part_detail_ids.product_id', '=', self)]" string="Product"/>
                    <group expand="1" string="Group By">
                        <filter string="Branch" context="{'group_by':'branch_id'}"/>
                    </group>     
                </search>
            </field>
        </record>     
        
        <record id="action_teds_part_hotline" model="ir.actions.act_window">
            <field name="name">Part Hotline</field>
            <field name="res_model">teds.part.hotline</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_state_draft':1,'search_default_state_waiting_for_approval':1,'search_default_state_approved':1}</field>
        </record>
       
        <report 
            string="Print Part Hotline" 
            id="action_teds_part_hotline_print_pdf" 
            model="teds.part.hotline" 
            report_type="qweb-pdf"
            name="teds_part_hotline.teds_part_hotline_print_pdf" 
            file="teds_part_hotline.teds_part_hotline_print_pdf" 
            menu="False"/>
        
        <menuitem id="teds_part_hotline_menuitem" parent="wtc_dealer_menu.workshop_sales_menu" action="action_teds_part_hotline" sequence="50"/>

    </data>
</openerp>