<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="teds_part_hotline_print_pdf">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row"> 
                    </div>
                    <div class="col-xs-12" align="center">
                        <p><h2>Pemesanan Part Hotline</h2></p>
                    </div>                  
                    <div class="col-xs-12">
                        <div class="col-xs-6">
                            <table style="font-size:10px; width:100%; line-height:200%; padding:20px">
                                <tr>
                                    <th width="20%">Branch</th>
                                    <th width="2%">:</th>
                                    <td width="78%"><span t-esc="data['branch_id']"/></td>
                                </tr>
                                <tr>
                                    <th width="20%">No Hotline</th>
                                    <th width="2%">:</th>
                                    <td width="78%"><span t-esc="data['no_hotline']"/></td>
                                </tr>
                               <tr>
                                    <th width="20%">Customer</th>
                                    <th width="2%">:</th>
                                    <td width="78%"><span t-esc="data['customer']"/></td>
                                </tr>
                                <tr>
                                    <th width="20%">Mobile</th>
                                    <th width="2%">:</th>
                                    <td width="78%"><span t-esc="data['mobile']"/></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-xs-6">
                            <table style="font-size:10px; width:100%; line-height:200%; padding:20px">
                                <tr>
                                    <th width="20%">Date</th>
                                    <th width="2%">:</th>
                                    <td width="78%"><span t-esc="data['date']"/></td>
                                </tr>
                                <tr>
                                    <th width="20%">No Mesin</th>
                                    <th width="2%">:</th>
                                    <td width="78%"><span t-esc="data['no_mesin']"/></td>
                                </tr>
                                <tr>
                                    <th width="20%">Alokasi DP</th>
                                    <th width="2%">:</th>
                                    <td width="78%">
                                        <table style="font-size:10px; width:100%; padding:15px;">
                                            <tr t-foreach="data['dp_ids']" style="page-break-inside: avoid !important;" t-as="dp">
                                                <td width="50%"><span t-esc="dp['name']"/></td>
                                                <td width="50%"><span t-esc="'{0:,.2f}'.format(dp['amount'])"/></td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    <div class="col-xs-12">
                        <table class="table table-bordered" style="font-size:10px; padding:15px;line-height:200%;">
                            <tr>
                                <th>Product</th>
                                <th>Qty</th>
                                <th>Price</th>
                                <th>Taxes</th>
                                <th>Subtotal</th>
                            </tr>
                            <tr t-foreach="data['detail']" style="page-break-inside: avoid !important;font-size: 9px;" t-as="detail">
                                <td><span t-esc="detail['product']"/></td>
                                <td><span t-esc="detail['qty']"/></td>
                                <td><span t-esc="'{0:,.2f}'.format(detail['price'])"/></td>
                                <td><span t-esc="detail['tax']"/></td>
                                <td><span t-esc="'{0:,.2f}'.format(detail['subtotal'])"/></td>
                            </tr>
                            <tr>
                                <td colspan="4" align="right"><b>Untaxed Amount</b></td>
                                <td><span t-esc="'{0:,.2f}'.format(data['amount_untaxed'])"/></td>
                            </tr>
                            <tr>
                                <td colspan="4" align="right"><b>Taxes</b></td>
                                <td><span t-esc="'{0:,.2f}'.format(data['amount_tax'])"/></td>
                            </tr>
                            <tr>
                                <td colspan="4" align="right"><b>Total</b></td>
                                <td><span t-esc="'{0:,.2f}'.format(data['amount_total'])"/></td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-xs-12" style="font-size:10px">
                        <table style="font-size:10px; width:100%; line-height:200%; padding:20px">
                            <tr>
                                <th colspan="2">Ketentuan:</th>
                            </tr>
                            <tr>
                                <td>1.</td>
                                <td>Pembayaran DP harus 50% dari total pesanan total.</td>
                            </tr>
                            <tr>
                                <td>2.</td>
                                <td>Jika part sudah datang ke dealer dan tidak diambil oleh konsumen selama 1 bulan dari part datang,</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>Maka DP hangus dan pesanan part akan masuk ke stock regular.</td>
                            </tr>
                            <tr>
                                <td>3.</td>
                                <td>Harga dapat berubah sewaktu-waktu tanpa pemberitahuan terlebih dahulu.</td>
                            </tr>
                        </table>
                    </div>
                    
                    <div class="col-xs-10" style="font-size:10px">
                        <table class="table table-bordered">
                            <tr>
                                <td align="center">Dibuat Oleh</td>
                                <td colspan="2" align="center">Mengetahui</td>
                                <td align="center">Disetujui Oleh</td>
                            </tr>
                            <tr>
                                <td height="50"></td>
                                <td height="50"></td>
                                <td height="50"></td>
                                <td height="50"></td>
                            </tr>
                            <tr>
                                <td height="20"></td>
                                <td height="20"></td>
                                <td height="20"></td>
                                <td height="20"></td>
                            </tr>
                            <tr>
                                <td align="center">Frontdesk</td>
                                <td align="center">Partman</td>
                                <td align="center">SA/Kamek</td>
                                <td align="center">Konsumen</td>
                            </tr>
                        </table>
                        <p><span t-esc="data['today']"/>, <span t-esc="data['user']"/></p>
                    </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
