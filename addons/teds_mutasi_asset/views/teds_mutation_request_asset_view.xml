<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="view_teds_mutation_request_asset_tree" model="ir.ui.view" >
            <field name="name">teds.mutation.request.asset.tree</field>
            <field name="model">teds.mutation.request.asset</field>
            <field name="arch" type="xml">
            	<tree>
            		<field name="name"/>
            		<field name="branch_id"/>
            		<field name="branch_request_id"/>
            		<field name="date"/>
            		<field name="state"/>
            	</tree>
            </field>
        </record>
		
		<record id="view_teds_mutation_request_asset_form" model="ir.ui.view" >
            <field name="name">teds.mutation.request.asset.form</field>
            <field name="model">teds.mutation.request.asset</field>
            <field name="arch" type="xml">
            	<form>
 					<header>
	                	<button name="action_rfa" states="draft" string="RFA" class="oe_highlight" type="object"/>
                        <button name="action_approved" states="waiting_for_approval" string="Approve" class="oe_highlight" type="object" groups="teds_mutasi_asset.group_teds_mutasi_request_asset_approved"/>
                        <button string="Cancel Approval" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" type="action" context="{'model_name':'teds.mutation.request.asset','update_value':{'approval_state':'b','state':'draft'}}" groups="teds_mutasi_asset.group_teds_mutasi_request_asset_cancel_approve_rfa"/>
                        <button name="action_confirm" states="approved" string="Confirm" class="oe_highlight" type="object" groups="teds_mutasi_asset.group_teds_mutasi_request_asset_confirm"/>
                        <button name="%(wtc_approval.wtc_cancel_approval_wizard)d" states="approved" string="Cancel Approval" type="action" context="{'model_name':'teds.mutation.request.asset','update_value':{'approval_state':'b','state':'draft'}}" groups="teds_mutasi_asset.group_teds_mutasi_request_asset_cancel_approve"/>
	                	<field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval,approved,open,done"/>
                	</header>
            		<sheet>
            			<div class="oe_title">                      
		                    <h1>
		                        <field name="name" readonly="1"/>
		                    </h1>
	                    </div>
            			<group>
            				<group>
            					<field name="branch_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'readonly':[('name','!=',False)]}"/>
            					<field name="branch_request_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="pic_asset_id" options="{'no_open':True,'no_create':True}" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="division"/>
                                <field name="date" readonly="1"/>
            					<field name="approval_state" readonly="1"/>
            				</group>
            			</group>
                        <notebook>
                            <page string="Asset Detail">
                                <field name="detail_ids" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom">
                                        <field name="asset_id" options="{'no_open':True,'no_create':True}" required="1"/>
                                        <field name="code" readonly="1"/>
                                        <field name="category_id" options="{'no_open':True,'no_create':True}" readonly="1"/>
                                        <field name="amount" readonly="1"/>
                                        <field name="akumulasi_penyusutan" readonly="1"/>
                                        <field name="nilai_buku" readonly="1"/>
                                        <field name="lokasi_asset_id" options="{'no_open':True,'no_create':True}" readonly="1"/>
                                        <field name="keterangan" required="1"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Approval">
                                <field name="approval_ids">
                                    <tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
                                        <field name="group_id" />
                                        <field name="branch_id"/>
                                        <field name="division"/>
                                        <field name="sts"/>
                                        <field name="reason"/>
                                        <field name="pelaksana_id"/>
                                        <field name="tanggal"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"/>
                                        <field name="create_date" readonly="1"/>
                                        <field name="confirm_uid" readonly="1" attrs="{'invisible':[('confirm_uid','=',False)]}"/>
                                        <field name="confirm_date" readonly="1" attrs="{'invisible':[('confirm_date','=',False)]}"/>
                                    </group>
                                    <group>                         
                                        <field name="write_uid" readonly="1"/>
                                        <field name="write_date" readonly="1"/>
                                    </group>
                                </group>
                            </page>             
                        </notebook>
            		</sheet>
            	</form>
            </field>
        </record>

        <!-- Search -->
        <record id="view_teds_mutation_request_asset_filter" model="ir.ui.view">
            <field name="name">teds.mutation.request.asset.filter</field>
            <field name="model">teds.mutation.request.asset</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="branch_id"/>
                    <field name="branch_request_id"/>
                    <field name="pic_asset_id"/>
                    <field name="date"/>
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />
                    <filter string="Waiting for Approval" name="state_waiting_for_approval" domain="[('state','=','waiting_for_approval')]"/>
                    <filter string="Approved" name="state_approved" domain="[('state','=','approved')]"/>
                    <filter string="Open" name="state_open" domain="[('state','=','open')]"/>
                    <filter string="Done" name="state_done" domain="[('state','=','done')]"/>

                    <group expand="1" string="Group By">
                        <filter string="Branch" name="gby_branch" context="{'group_by':'branch_id'}"/>
                        <filter string="Branch Request" name="gby_branch_request" context="{'group_by':'branch_request_id'}"/>
                        <filter string="State" name="gby_response_state" context="{'group_by':'state'}"/>
                    </group>                       

                </search>
            </field>
        </record> 
        
        <record id="action_teds_mutation_request_asset" model="ir.actions.act_window">
            <field name="name">Mutation Request Asset</field>
            <field name="res_model">teds.mutation.request.asset</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'readonly_by_pass': 1,'search_default_state_draft':1,'search_default_state_waiting_for_approval':1,'search_default_state_approved':1,'search_default_state_open':1}</field>
        </record>

        <menuitem id="teds_mutation_request_asset_menuitem" parent="wtc_dealer_menu.ga_purchase_menu" sequence="100" action="action_teds_mutation_request_asset" name="Mutation Request"/>
    </data>
</openerp>