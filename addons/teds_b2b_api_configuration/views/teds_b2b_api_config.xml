<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record id="view_teds_b2b_api_config_tree" model="ir.ui.view">
            <field name="name">teds.b2b.api.config.tree</field>
            <field name="model">teds.b2b.api.config</field>
            <field name="arch" type="xml">
                <tree string="Api Config">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="base_url"/>
                </tree>
            </field>
        </record>
        
        <record id="view_teds_b2b_api_config_form" model="ir.ui.view">
            <field name="name">teds.b2b.api.config.form</field>
            <field name="model">teds.b2b.api.config</field>
            <field name="arch" type="xml">
                <form string="Api Config">
                    <header name="header">
                    </header>
                    <sheet>
                        <div class="oe_title">                      
                            <h1>
                                <field name="name" placeholder="Nama Config" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="group_left">
                                <field name="base_url" required="1"/>
                                <field name="code" required="1"/>
                            </group>
                            <group name="group_right">
                                <field name="verify"/>
                                <field name="api_key"/>
                                <field name="api_secret"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tokens">
                                <field name="token_ids" readonly="1">
                                    <tree>
                                        <field name="token"/>
                                        <field name="expired_on"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" options="{'no_open':True,'no_create':True}" readonly="1"></field>
                                        <field name="create_date" readonly="1"></field>
                                    </group>
                                    <group>                         
                                        <field name="write_uid" options="{'no_open':True,'no_create':True}" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_teds_b2b_api_config" model="ir.actions.act_window">
            <field name="name">B2b API Config</field>
            <field name="res_model">teds.b2b.api.config</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="teds_b2b_api_config_menuitem" parent="teds_b2b_api_top_menu" action="action_teds_b2b_api_config" sequence="2"/>

    </data>
</openerp>