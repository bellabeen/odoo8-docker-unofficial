<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record id="view_teds_b2b_api_url_tree" model="ir.ui.view">
            <field name="name">teds.b2b.api.url.tree</field>
            <field name="model">teds.b2b.api.url</field>
            <field name="arch" type="xml">
                <tree string="Api URL">
                    <field name="config_id" options="{'no_open':True,'no_create':True}"/>
                    <field name="type"/>
                    <field name="url"/>
                    <field name="is_relative"/>
                </tree>
            </field>
        </record>
        
        <record id="view_teds_b2b_api_url_form" model="ir.ui.view">
            <field name="name">teds.b2b.api.url.form</field>
            <field name="model">teds.b2b.api.url</field>
            <field name="arch" type="xml">
                <form string="Api URL">
                    <sheet>
                        <group>
                            <group>
                                <field name="config_id" options="{'no_open':True,'no_create':True}" required="1"/>
                                <field name="type" required="1"/>
                            </group>
                            <group>
                                <field name="url" required="1"/>
                                <field name="is_relative"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" options="{'no_open':True,'no_create':True}" readonly="1"></field>
                                        <field name="create_date" readonly="1"></field>
                                    </group>
                                    <group>                         
                                        <field name="write_uid" options="{'no_open':True,'no_create':True}" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_teds_b2b_api_url" model="ir.actions.act_window">
            <field name="name">B2b API URL</field>
            <field name="res_model">teds.b2b.api.url</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id="teds_b2b_api_url_menuitem" parent="teds_b2b_api_top_menu" action="action_teds_b2b_api_url" sequence="3"/>

    </data>
</openerp>