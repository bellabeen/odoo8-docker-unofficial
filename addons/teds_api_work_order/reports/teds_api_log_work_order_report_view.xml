<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_teds_api_log_work_order_report" model="ir.ui.view">
            <field name="name">teds.api.log.work.order.report.form</field>
            <field name="model">teds.api.log.work.order.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Laporan Error B2B WO">
                    <group colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
                        <label for="start_date" string="Periode" />
                        <div>
                            <field name="start_date" required="1" placeholder="Start Date" class="oe_inline" /> - <field name="end_date" required="1" placeholder="End Date" class="oe_inline" />
                        </div>
                    </group>
                    <notebook attrs="{'invisible':[('state_x','=','get')]}">
                        <page string="Dealer" >
                            <field name="branch_ids" colspan="4" nolabel="1" required="1" />
                        </page>
                    </notebook>
                    <field invisible="1" name="state_x"/>                
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="report_file" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer attrs="{'invisible':[('state_x','=','get')]}" >
                        <button name="generate_report" string="Download" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link" />
                    </footer>  
                </form>
            </field>
        </record>
        
        <record id="action_teds_api_log_work_order_report" model="ir.actions.act_window">
            <field name="name">Laporan Error B2B WO</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">teds.api.log.work.order.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_teds_api_log_work_order_report"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_teds_api_log_work_order_report"  parent="wtc_dealer_menu.workshop_report_menu" sequence="108" action="action_teds_api_log_work_order_report"/>
    </data>
</openerp>
