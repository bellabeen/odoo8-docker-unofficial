<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="teds_penerimaan_bpkb_print">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row"> 
                    </div>
                    <div class="col-xs-12">
                        <table class="table table-bordered">
                            <tr>
                                <td>
                                    <table style="font-size:12px; width:100%; line-height:200%; padding:20px">
                                        <tr>
                                            <th>PT.TUNAS DWIPA MATRA</th>
                                            <th>REQUEST BPKB</th>
                                        </tr>
                                        <tr>
                                            <td><span t-esc="o.branch_id.name"/></td>
                                            <td>No : <span t-esc="o.name"/></td>
                                        </tr>
                                        <tr>
                                            <td><span t-esc="o.branch_id.street"/></td>
                                        </tr>
                                    </table>
                                    <hr/>
                                    <table style="font-size:10px; width:100%; line-height:200%; padding:20px">
                                        <tr>
                                            <th>Cabang</th>
                                            <td>: <span t-esc="o.branch_id.name"/></td>

                                            <th>Tanggal Request</th>
                                            <td>: <span t-esc="o.date"/></td>
                                        </tr>
                                        <tr>
                                            <th>Lokasi Asal</th>
                                            <td>: <span t-esc="o.source_location_id.name"/></td>
                                            
                                            <th>Pengiriman By</th>
                                            <td>: <span t-esc="o.pengiriman_by"/></td>

                                        </tr>
                                        <tr>
                                            <th>Lokasi Tujuan</th>
                                            <td>: <span t-esc="o.destination_location_id.name"/></td>
                                            <t t-if="o.no_resi">
                                                <th>No Resi</th>
                                                <td>: <span t-esc="o.no_resi"/></td>
                                            </t>
                                            <t t-if="o.nama_kurir">
                                                <th>Nama Kurir</th>
                                                <td>: <span t-esc="o.nama_kurir"/></td>
                                            </t>
                                        </tr>
                                        <tr>
                                            <th>No Mutasi</th>
                                            <td>: <span t-esc="o.mutasi_id.name"/></td>
                                        </tr>
                                    </table>
                                    <br/>
                                    <table class="table table-bordered" style="font-size:10px">
                                        <tr>
                                            <th>No</th>
                                            <th>No Mesin</th>
                                            <th>No Rangka</th>
                                            <th>Atas Nama</th>
                                            <th>No BPKB</th>
                                        </tr>
                                        <tr t-foreach="o.detail_ids" style="page-break-inside: avoid !important;" t-as="detail">
                                            <td><span t-esc="no_urut()"/></td>
                                            <td><span t-esc="detail.lot_id.name"/></td>
                                            <td><span t-esc="detail.lot_id.chassis_no"/></td>
                                            <td><span t-esc="detail.customer_bpkb_id.name"/></td>
                                            <td><span t-esc="detail.no_bpkb"/></td>
                                        </tr>
                                        <tr>
                                            <td colspan="6"><span t-esc="usr()"/>, <span t-esc="tgl()"/></td>
                                        </tr>
                                    </table>
                                    <br/>
                                    Penerima
                                    <p></p><br/>
                                    <p></p><br/>
                                    <p></p><br/>

                                    (......................)

                                </td>
                            </tr>
                        </table>
                    </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </t>
</template>
</data>
</openerp>
