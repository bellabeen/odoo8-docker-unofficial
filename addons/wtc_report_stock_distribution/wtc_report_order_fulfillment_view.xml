<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="view_report_order_fulfillment_wizard" model="ir.ui.view">
		<field name="name">Laporan Order Fulfillment</field>
		<field name="model">wtc.report.order.fulfillment.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Laporan Order Fulfillment" create="false" edit="false">
	        	<group col="4" colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
	            	 <field name="options" required="1"/>
            		 <field name="trx_type" required="1"/>
            <field name="division"/>		
            <label for="start_date" string="Tanggal"/>
            <div>
              <field name="start_date" class="oe_inline"/> s/d <field name="end_date" class="oe_inline"/>
            </div>
	          	</group>
	          
				<notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
		      		<page string="Branches">
						<field name="branch_ids" colspan="4" nolabel="1"/>
		      		</page>
		           
	        	</notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
	          	
	        </form>
    	</field>
    </record>

    <record id="action_report_order_fulfillment_wizard" model="ir.actions.act_window">
		<field name="name">Laporan Order Fulfillment</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wtc.report.order.fulfillment.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_report_order_fulfillment_wizard"/>
		<field name="target">new</field>
    </record>

	 <menuitem id="menu_report_order_fulfillment_wizard" parent="wtc_dealer_menu.showroom_report_menu" sequence="4"  action="action_report_order_fulfillment_wizard"/>
	</data>
</openerp>