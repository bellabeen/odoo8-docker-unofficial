<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wtc_wip_report_view" model="ir.ui.view">
            <field name="name">WO WIP</field>
            <field name="model">wtc.wo.wip.report</field>
            <field name="arch" type="xml">
               <form string="WO WIP Report" create="false" edit="false">
               		<separator string="Branches" attrs="{'invisible':[('state_x','=','get')]}" />
	               	<field name="branch_ids" colspan="4" nolabel="1" attrs="{'invisible':[('state_x','=','get')]}" />
                    <field invisible="1" name="state_x"/>                
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer>
                        <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                        <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                        <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="wtc_wo_wip_report_action" model="ir.actions.act_window">
             <field name="name">WIP Work Order</field>
             <field name="res_model">wtc.wo.wip.report</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="wtc_wip_report_view"/>
             <field name="target">new</field>
        </record>
        
           <menuitem id="wtc_wo_wip_report_menu" 
            action="wtc_wo_wip_report_action" 
            parent="wtc_dealer_menu.workshop_report_menu"
            sequence="3"/>            
    </data>
</openerp>
