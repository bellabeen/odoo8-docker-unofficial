<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_report_trial_balance" model="ir.ui.view">
      <field name="name">Print Report Buku Besar</field>
      <field name="model">wtc.report.trial.balance</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Laporan Buku Besar">
          <group attrs="{'invisible':[('state_x','=','get')]}">
          	<field name="option" required="1"/>
            <field name="period_id" options="{'no_open':True,'no_create_edit':True}" required="1" on_change="period_change(period_id)"/>
        	  <label for="start_date" string="Tgl Posting"/>	
      			<div>
      				<field name="start_date" class="oe_inline" on_change="date_change(period_id,start_date,end_date)"/> - <field name="end_date" class="oe_inline" on_change="date_change(period_id,start_date,end_date)"/>
      			</div>   
			     <field name="status"/>         
          </group>
          
          <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
	          <page string="Branchs">
	          	 <field name="branch_ids" colspan="4" nolabel="1"/>
	          </page>
	          <page string="Account">	         	  
	          	<field name="account_ids" colspan="4" nolabel="1"/>
	          </page>   
	          <page string="Journal" attrs="{'invisible':[('option','!=','import_sun')]}">
	         	  <field name="journal_ids" colspan="4" nolabel="1"/>
	          </page> 	                          	
        </notebook>
        <newline/>  

        <field invisible="1" name="state_x"/> 
        <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
            <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
            <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
            <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
        </group>

          <footer>
            <button name="excel_report" string="Export" type="object" class="oe_highlight" attrs="{'invisible':[('state_x','=','get')]}"/>
            <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
            <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
          </footer>
        </form>
      </field>
    </record>

    <record id="action_report_trial_balance_wizard" model="ir.actions.act_window">
      <field name="name">Trial Balance</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wtc.report.trial.balance</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_report_trial_balance"/>
      <field name="target">new</field>
    </record>

	 <menuitem id="menu_report_trial_balance"  parent="wtc_dealer_menu.backoffice_report_menu" sequence="1"  action="action_report_trial_balance_wizard"/>	

  </data>
</openerp>