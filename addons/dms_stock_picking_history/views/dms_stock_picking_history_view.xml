<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record id="view_dms_stock_picking_history_tree" model="ir.ui.view">
            <field name="name">dms.stock.picking.history.tree</field>
            <field name="model">dms.stock.picking.history</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="picking_id"/>
                    <field name="no_po_dms"/>
                    <field name="distribution_id"/>
                    <field name="origin"/>
                    <field name="division"/>
                    <field name="date"/>
                    <field name="state"/>
                    <field name="status_api" string="Status Api Spl"/>
                </tree>
            </field>
        </record>

        <record id="view_dms_stock_picking_history_form" model="ir.ui.view">
            <field name="name">dms.stock.picking.history.form</field>
            <field name="model">dms.stock.picking.history</field>
            <field name="arch" type="xml">
                <form create="false" edit="false" delete="false">
                    <header>
                        <button name="get_data_stock_picking" type="object" string="Get Stock Picking"/>
                        <button name="api_stock_picking_unfield_unit" type="object" string="Api Stock Picking"/>
                        <button name="api_stock_picking_unfield_supply" type="object" string="Api Stock Picking Supply"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="picking_id" readonly="1" options="{'no_open':True,'no_create':True}"/>
                                <field name="distribution_id" readonly="1" options="{'no_open':True,'no_create':True}"/>
                                <field name="no_po_dms" readonly="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="1"/>
                                <field name="origin" readonly="1"/>
                                <field name="no_invoice" readonly="1" attrs="{'invisible':[('no_invoice','=',False)]}"/>
                                <field name="tgl_invoice" readonly="1" attrs="{'invisible':[('tgl_invoice','=',False)]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="actions_dms_stock_picking_history" model="ir.actions.act_window">
            <field name="name">Unfield Picking History</field>
            <field name="res_model">dms.stock.picking.history</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <menuitem id='dms_stock_picking_history_menuitem' parent='wtc_dealer_menu.ma_branches_menu' action='actions_dms_stock_picking_history' sequence='105'/>
    </data>
</openerp>