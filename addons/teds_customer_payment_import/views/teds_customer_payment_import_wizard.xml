<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_customer_payment_import_wizard" model="ir.ui.view">
    		<field name="name">teds.customer.payment.import.wizard</field>            
    		<field name="model">teds.customer.payment.import.wizard</field>            
    		<field name="arch" type="xml">
    			<form>
    				<sheet>
    					<group attrs="{'invisible':[('state_x','!=','choose')]}">
    						<group>
	    						<field name="branch_id" required="1" options="{'no_open':True,'no_create':True}"/>
    							<field name="partner_id" required="1" options="{'no_open':True,'no_create':True}"/>
    							<field name="move_line_id" required="1" options="{'no_open':True,'no_create':True}"/>
    							<field name="amount_unreconcile" invisible="1"/>
    							<field name="amount_unreconcile_show"/>
    							<field name="journal_id" required="1" widget="selection"/>
    						</group>
    						<group>
    							<field name="division" required="1"/>
    							<field name="file_import" required="1"/>
    							<field name="state_x" invisible="1"/>
    						</group>
    					</group>
    					<newline/>    
	                	<group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
		                    <separator colspan="4" string="Excel Export Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
		                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
		                    <field name="file_export" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
		                </group> 
		                <footer>
		                    <button name="excel_report" string="Import Data" type="object" class="oe_highlight" attrs="{'invisible':[('state_x','=','get')]}"/>
		                    <label string=" or " attrs="{'invisible':[('state_x','=','get')]}"/>
		                    <button string="Cancel" special="cancel" class="oe_link" attrs="{'invisible':[('state_x','=','get')]}"/>
		                </footer>
    				</sheet>
    			</form>
    		</field>
    	</record>

	    <record id="action_teds_customer_payment_import_wizard" model="ir.actions.act_window">
	        <field name="name">Advance FIF (Import)</field>
	        <field name="type">ir.actions.act_window</field>
	        <field name="res_model">teds.customer.payment.import.wizard</field>
	        <field name="view_type">form</field>
	        <field name="view_mode">form</field>
	        <field name="view_id" ref="view_teds_customer_payment_import_wizard"/>
	        <field name="target">new</field>
	    </record>

    	<menuitem id="teds_customer_payment_import_wizard_menuitem" parent="wtc_dealer_menu.backoffice_bankandcash_menu" sequence="100" action="action_teds_customer_payment_import_wizard"/>

    </data>
</openerp>