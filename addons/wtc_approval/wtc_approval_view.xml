			            <group>
			                <field name="reason"/>
			            </group>
			            <footer>
			                <button name="wtc_cancel_approval" string="Cancel" type="object" class="oe_highlight"/>
			                or
			                <button string="Cancel" class="oe_link" special="cancel" />
			            </footer>
			        </form>
			    </field>
			</record>
			
			
		<record model="ir.actions.act_window" id="wtc_cancel_approval_wizard">
		    <field name="name">Cancel Approval</field>
