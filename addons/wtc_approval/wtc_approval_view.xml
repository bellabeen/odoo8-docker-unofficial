		<record model="ir.actions.act_window" id="wtc_approval_action">
		    <field name="name">Matrix Approval Biaya</field>
		    <field name="res_model">wtc.approval.matrixbiaya</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_approval_filter"/>		    
		</record>

		<record model="ir.ui.view" id="wtc_approval_line_tree_view2">
		    <field name="name">wtc.approval.line.tree</field>
		    <field name="model">wtc.approval.line</field>
		    <field name="arch" type="xml" >
		    		        	
		        <tree string="Approval Matrix Biaya" create="0" >
		        	<field name="transaction_no"/>
		        	<field name="form_id"/>
		        	<field name="branch_id"/>
		        	<field name="division"/>
		        	<field name="group_id"/>
		        	<field name="value"/>
		        	<field name="tanggal"/>
		        	<field name="sts" />
		        	<button name="wtc_get_transaction" context="{'portal':'portal'}" type="object" string="Indext" icon="gtk-index"/>

		        </tree>
		     </field>
		</record>

		
		<record model="ir.ui.view" id="wtc_master_approval_header_tree_view">
		    <field name="name">wtc.master.approval.tree</field>
		    <field name="model">wtc.approval.matrixbiaya.header</field>
		    <field name="arch" type="xml">
		        <tree string="Approval Matrix Biaya">
		        	<field name="form_id"/>
		        	<field name="branch_id"/>
		        	<field name="division"/>
		        </tree>
		     </field>
		</record>
		
		<record id="wtc_master_approval_header_form_view" model="ir.ui.view">
		     <field name="name">wtc.master.approval.view</field>
		     <field name="model">wtc.approval.matrixbiaya.header</field>
		     <field name="priority" eval="30"/>
		     <field name="arch" type="xml">
		     	<form string="Form Approval Matrix Biaya">
		     	<sheet>
		         	<group>
		         		<group>
			             	<field name="branch_id"/>	
			             	<field name="form_id"/>				             			             			         			
		         		</group>
		         		<group>
			             	<field name="division"/>	
		         		</group>
		            </group>
		          	<notebook>
                        <page string="Approval Lines">
                            <field name="approval_line"  nolabel="1" widget="one2many_list">
                                <tree string="Approval Lines" editable="bottom">
                                    <field name="limit" />
                                    <field name="group_id" />
                                    
                                </tree>
                          </field>
                        </page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>	                        
                    </notebook>
		        </sheet>
	                <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>		        
		        </form>
		   	 </field>																														
		</record> 	

		<record model="ir.actions.act_window" id="wtc_approval_portal_action">
		    <field name="name">Portal Approval Matrix Biaya</field>
		    <field name="res_model">wtc.approval.line</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree</field>
		    <field name="domain">[('sts','=','1'),('is_mygroup','=',True)]</field>
		</record>	
		
	
		<record model="ir.actions.act_window" id="wtc_approval_portal_header_action">
            <field name="name">Approval</field>
            <field name="res_model">wtc.approval.matrixbiaya.header</field>
        </record>
		
		
<menuitem id="master_approval_menu" name="Approval Matrix Biaya" sequence="2" parent="wtc_dealer_menu.ma_approval_menu" action="wtc_approval_portal_header_action"/> 
<menuitem id="approval_portal_menu" name="Approval" parent="mail.mail_feeds_main" sequence="50"/> 
<menuitem id="approval_portal" name="Approval Portal" parent="approval_portal_menu"  action="wtc_approval_portal_action" sequence="50"/>
   	
    	          
 	</data>
 </openerp>
       		
       		
	