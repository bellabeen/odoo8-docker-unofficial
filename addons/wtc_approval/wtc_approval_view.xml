    <data>   	
		<record model="ir.ui.view" id="wtc_approval_reject_wizard_form_view">
		    <field name="name">wtc.approval.reject.wizard.form</field>
		    <field name="model">wtc.approval.reject</field>
		    <field name="arch" type="xml">
		        <form string="REASON" version="7.0">
		            <group>
		                <field name="reason"/>
		            </group>
		            <footer>
		                <button name="wtc_approval_reject" string="Reject Approval" type="object" class="oe_highlight"/>
		                or
		                <button string="Discard" class="oe_link" special="cancel" />
		            </footer>
		        </form>
		    </field>
		</record>
			
		<record model="ir.actions.act_window" id="wtc_approval_reject_wizard_action">
		    <field name="name">Reason Reject</field>
		    <field name="res_model">wtc.approval.reject</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">form</field>
		    <field name="target">new</field>
		</record>
		
		<record model="ir.ui.view" id="wtc_cancel_approval_wizard_form_view">
