<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   	
 		<record id="view_approval_filter_config" model="ir.ui.view">
            <field name="name">approval.list.select.config</field>
            <field name="model">wtc.approval.config</field>
            <field name="arch" type="xml">
                <search string="Search Approval">
                    <field name="form_id" string="Form"/>
                    <field name="type"/> 
                    <field name="code"/> 
                    <field name="name"/> 
                </search>
            </field>
        </record>    	    
		<record model="ir.ui.view" id="wtc_master_approval_config_tree_view">
		    <field name="name">wtc.config.approval.tree</field>
		    <field name="model">wtc.approval.config</field>
		    <field name="arch" type="xml">
		        <tree string="Approval Config">
		        	<field name="name"/>
		        	<field name="form_id"/>
		        	<field name="code"/>
		        	<field name="type"/>
		        </tree>
		     </field>
		</record>		
		
		<record id="wtc_master_approval_config_form_view" model="ir.ui.view">
		     <field name="name">wtc.config.approval.view</field>
		     <field name="model">wtc.approval.config</field>
		     <field name="priority" eval="30"/>
		     <field name="arch" type="xml">
		     	<form string="Form Approval Matrix Config">
		     	<sheet>
		         	<group>
		         		<group>
			             	<field name="name" required='1'/>	
			            	<field name="type" required='1'/>
			             					             		
		         		</group>
		         		<group>
			             	<field name="form_id" required='1' options="{'no_create': True,'no_open': True}"/>				             			             			         						            					            	
			             	<field name="code" attrs="{'required':[('type','=','biaya')]}"/>	
			            					            				             				             			         		
		         		</group>
		            </group>
		          	<notebook>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>	                        
                    </notebook>
		        </sheet>		        
		        </form>
		   	 </field>																														
		</record> 	

		<record model="ir.actions.act_window" id="wtc_approval_config_action">
		    <field name="name">Matrix Approval Config</field>
		    <field name="res_model">wtc.approval.config</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_approval_filter_config"/>		    
		</record>	
		
<menuitem id="master_approval_config_menu" name="Approval Configuration" sequence="1" parent="wtc_dealer_menu.ma_approval_menu"  action="wtc_approval_config_action"/> 
   	
    	          
 	</data>
 </openerp>
       		
       		
	