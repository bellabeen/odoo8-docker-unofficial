<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>   	
    	    
		<record model="ir.ui.view" id="wtc_master_approval_so_tree_view">
		    <field name="name">wtc.master.approval.discount.tree</field>
		    <field name="model">wtc.approval.matrixdiscount.header</field>
		    <field name="arch" type="xml">
		        <tree string="Approval Matrix Discount">
		        	<field name="form_id"/>
		        	<field name="branch_id"/>
		        	<field name="division"/>
		        	<field name="product_template_id"/> 
		        </tree>
		     </field>
		</record>

		 <record id="view_approval_discount_filter" model="ir.ui.view">
            <field name="name">approval.list.select.discount</field>
            <field name="model">wtc.approval.matrixdiscount.header</field>
            <field name="arch" type="xml">
                <search string="Search Approval">
                    <field name="branch_id"/> 
                    <field name="form_id"/> 
                    <field name="division"/> 
                    <field name="product_template_id"/> 
                    <group expand="0" string="Group By">
                        <filter string="Product" icon="terp-partner" domain="[]" context="{'group_by':'product_template_id'}"/>
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}"/>                    
                        <filter string="Form" icon="terp-go-month" domain="[]" context="{'group_by':'form_id'}"/>                                            	
                    </group>
                </search>
            </field>
        </record> 
            
		<record id="wtc_master_approval_form_view" model="ir.ui.view">
		     <field name="name">wtc.master.approval.discount.form</field>
		     <field name="model">wtc.approval.matrixdiscount.header</field>
		     <field name="arch" type="xml">
		     	<form string="Form Approval Matrix Discount" version="7.0">
		     		<sheet>
		         	<group>
			             <field name="form_id" required="1" />
			             <field name="branch_id" required="1"/>
			             <field name="division" required="1"/>
			             <field name="product_template_id" required="1"/>
		            </group>
		            <notebook>
		                 	<page string="Matrix">
		                 		<field name="wtc_approval_md_ids">
		                 			<tree editable="top">
		                 				<field name="group_id" required="1"/>
							             <field name="limit" required="1"/>
		                 			</tree>
		                 		</field>
		                 	</page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>			                 	
                 </notebook>
	                <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>   
	               </sheet>              
		        </form>
		   	 </field>																														
		</record> 	

		<record model="ir.actions.act_window" id="wtc_approval_discount_action">
		    <field name="name">Matrix Approval Discount</field>
		    <field name="res_model">wtc.approval.matrixdiscount.header</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_approval_discount_filter"/>		
		</record>
		
<menuitem id="master_approval_discount_menu" name="Approval Matrix Discount" sequence="3" parent="wtc_dealer_menu.ma_approval_menu" action="wtc_approval_discount_action"/>

   	
    	          
 	</data>
 </openerp>
       		
       		
	