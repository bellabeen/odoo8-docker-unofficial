<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    
        <record id="view_wtc_copy_approval" model="ir.ui.view">
            <field name="name">Copy Approval</field>
            <field name="model">wtc.copy.approval</field>
            <field name="arch" type="xml">
            
                <form string="Copy Approval" version="7">
                	<group col="4" colspan="4">
	                    <field name="branch_from_id" required="1" options="{'no_create':True, 'no_open':True}"/>
	                    <field name="branch_to_id" required="1" options="{'no_create':True, 'no_open':True}"/>
	                    <field name="approval_type" required="1"/>
	                    <field name="form_id" required="1"/>
	                    <field name="division" required="1"/>
                    </group>
                    <footer>
                        <button name="action_copy" string="Copy" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
                
            </field>
        </record>
        
        <record id="action_wtc_copy_approval" model="ir.actions.act_window">
			<field name="name">Copy Approval</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">wtc.copy.approval</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_wtc_copy_approval"/>
			<field name="target">new</field>
	    </record>
		
		<menuitem id="menu_wtc_copy_approval" parent="wtc_dealer_menu.ma_approval_menu" sequence="4" action="action_wtc_copy_approval"/>
		
    </data>
</openerp>