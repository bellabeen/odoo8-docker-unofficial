<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wtc_matrix_approval_report_wizard_view_form" model="ir.ui.view">
            <field name="name">wtc.matrix.approval.report.wizard.form</field>
            <field name="model">wtc.matrix.approval.report.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Laporan Matrix Approval">
                    <!-- <group> -->
                    <group attrs="{'invisible':[('state_x','=','get')]}">   
                        <field name="matrix_type" required="1"/>
                        <field name="report_type" required="1"/>
                        <field name="approval_config_ids" string="Config" attrs="{'invisible':[('matrix_type','!=','biaya')],'required':[('matrix_type','=','biaya')]}" options="{'no_create': True, 'no_open': True}" widget="many2many_tags"/>
                        <field name="product_template_ids" string="Product" attrs="{'invisible':[('matrix_type','!=','discount')],'required':[('matrix_type','=','discount')]}" options="{'no_create': True, 'no_open': True}" widget="many2many_tags"/>
                    </group>
                    <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
                        <page string="Dealer">
                            <field name="branch_ids" colspan="4" nolabel="1" options="{'no_create': True, 'no_open': True}">
                                <tree editable="bottom">
                                    <field name="code" />
                                    <field name="name" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <field invisible="1" name="state_x"/>                
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer>
                        <button name="export_to_xls" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                        <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="wtc_matrix_approval_report_wizard_action" model="ir.actions.act_window">
            <field name="name">Laporan Matrix Approval</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wtc.matrix.approval.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wtc_matrix_approval_report_wizard_view_form"/>
            <field name="target">new</field>
        </record>
        
        <menuitem id="wtc_matrix_approval_report_wizard_menu" 
            parent="wtc_dealer_menu.backoffice_report_menu"
            sequence="102"
            action="wtc_matrix_approval_report_wizard_action"/> 
    </data>
</openerp>