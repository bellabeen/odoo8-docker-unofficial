<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

	<record id="wtc_approval_pettycash_out_form_view" model="ir.ui.view">
		<field name="name">wtc.approval.pettycash.form</field>
		<field name="model">wtc.pettycash</field>
		<field name="inherit_id" ref="pettycash_form_view"/>
		<field name="arch" type="xml">
	
			<button name="post_pettycash" position="after">
				<button name="approval_request" groups='wtc_pettycash.group_wtc_pettycash_rfa' string="RFA" type="workflow" class="oe_highlight" states="draft"/>	
				<button name="approval_approve" states="waiting_for_approval" groups='wtc_pettycash.group_wtc_pettycash_out_approve_approval' string="Approve" type="workflow" class="oe_highlight"/>
				<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'wtc.pettycash','next_workflow':'approval_reject'}"/>
				<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" groups='wtc_pettycash.group_wtc_pettycash_out_cancel_approval' states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'wtc.pettycash','next_workflow':'approval_cancel'}"/>
					
			</button> 
								
			<field name="amount_real" position="after">
				<field name="approval_state"/>
			</field>
				
			<xpath expr="//page[@string='Payment Information']" position="after">
				<page string="Approval">
					<field name="approval_ids" attrs="{'readonly': [('state','!=','draft')]}">
						<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
							<field name="group_id" />
							<field name="branch_id"/>
							<field name="division"/>
							<field name="limit"/>
							<field name="sts"/>
							<field name="reason"/>
							<field name="pelaksana_id"/>
							<field name="tanggal"/>
						</tree>
					</field>
				</page>
				<page string="Audit Trail">
					<group>
						<group>
							<field name="create_uid" readonly="1"></field>
							<field name="create_date" readonly="1"></field>
							<field name="confirm_uid" readonly="1"></field>
							<field name="confirm_date" readonly="1"></field>
						</group>
						<group>							
							<field name="write_uid" readonly="1"></field>
							<field name="write_date" readonly="1"></field>
						</group>
					</group>
				</page>					
			</xpath>
		</field>
	</record>
	  

	          
 	</data>
 </openerp>
       		
       		
	