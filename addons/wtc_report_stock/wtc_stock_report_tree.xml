<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		 <record id="view_report_stock_filter" model="ir.ui.view">
            <field name="name">wtc.report.stock.tree.list.select</field>
            <field name="model">wtc.report.stock.tree</field>
            <field name="arch" type="xml">
                <search string="Search Stock">
        			<field name='branch_id'/>
                    <group expand="1" string="Group By">
                        <filter string="Product" name="group_product_id" icon="terp-partner"  context="{'group_by':'product_id'}"/>
                        <filter string="Branch" icon="terp-go-month"  context="{'group_by':'branch_id'}"/>
               
                    </group>
                </search>
            </field>
        </record>

		<record id="view_wtc_report_stock" model="ir.ui.view">
            <field name="name">wtc.report.stock.tree</field>
            <field name="model">wtc.report.stock.tree</field>
            <field eval="112" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Report Stock"  create="false">
                    <field name="branch_id"/>
                    <field name="product_id"/>
                    <field name="lot_id"/>
                    <field name="umur"/>
                    <!-- field name="cost" sum="Total Cost"/ -->
                    <field name="qty" sum="Total QTY"/>
                </tree>
            </field>
        </record>
        
        
        
        <record id="action_report_stock_tree" model="ir.actions.act_window">
            <field name="name">Stock Tree</field>
            <field name="res_model">wtc.report.stock.tree</field>
            <field name="view_id" ref="view_wtc_report_stock"/>
            <field name="view_mode">tree_report_stock</field>
            <field name="search_view_id" ref="view_report_stock_filter"/>
            <field name="context">{'search_default_group_product_id':1}</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Select the branch and product you want to fill.
              </p><p>
                Report Stock 
              </p>
            </field>
        </record>

		
       	<menuitem id="menu_wtc_report_stock_tree"  parent="wtc_dealer_menu.showroom_report_menu" sequence="6"  action="action_report_stock_tree"/>
	</data>
</openerp>