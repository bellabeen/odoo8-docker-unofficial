<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	    <record id="view_teds_matrix_mekanik_mitra_tree" model="ir.ui.view">
			<field name="name">teds.matrix.mekanik.mitra.tree</field>
			<field name="model">teds.matrix.mekanik.mitra</field>
			<field name="arch" type="xml">
				<tree>
					<field name="branch_id"/>
				</tree>
			</field>
		</record>
		
		<record id="view_teds_matrix_mekanik_mitra_form" model="ir.ui.view">
			<field name="name">teds.matrix.mekanik.mitra.form</field>
			<field name="model">teds.matrix.mekanik.mitra</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="branch_id" required="1" options="{'no_open':True,'no_create':True}"/>
						</group>
					 	<notebook>
					 		<page string="Detail">
					 			<field name="detail_ids">
					 				<tree editable="top">
					 					<field name="min_ue" required="1"/>
										<field name="max_ue" required="1"/>
										<field name="hari_kerja" required="1"/>
										<field name="jasa" required="1"/>
										<field name="part" required="1"/>
					 				</tree>
					 			</field>
					 		</page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>		                 
			            </notebook>	
					</sheet>
				</form>
			</field>
		</record>

		<record id="teds_matrix_mekanik_mitra_filter" model="ir.ui.view">
            <field name="name">teds.matrix.mekanik.mitra.filter</field>
            <field name="model">teds.matrix.mekanik.mitra</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="branch_id"/>     
                </search>
            </field>
        </record>   
		<record model="ir.actions.act_window" id="action_teds_matrix_mekanik_mitra">
		    <field name="name">Master Mekanik Mitra</field>
		    <field name="res_model">teds.matrix.mekanik.mitra</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
	    

	    <menuitem id="teds_matrix_mekanik_mitra_menuitem" parent="teds_mekanik_mitra_submenu" sequence="2" action="action_teds_matrix_mekanik_mitra"/> 
	</data>
</openerp>
