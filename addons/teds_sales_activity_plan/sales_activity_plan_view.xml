<?xml version="1.0"?>
<openerp>
	<data>
		<!-- MASTER RING -->
		<!-- Define form view for master.ring -->
		<record id="view_form_master_ring" model="ir.ui.view">
			<field name="name">Master Ring Form</field>
			<field name="model">master.ring</field>
			<field name="arch" type="xml">
				<form string="Master Ring">
					<group>
						<field name="name"/>
					</group>
				</form>
			</field>
		</record>
		
		<!-- Define tree view for master.ring -->
		<record id="view_tree_master_ring" model="ir.ui.view">
			<field name="name">Master Ring Tree</field>
			<field name="model">master.ring</field>
			<field name="arch" type="xml">
				<tree> <!-- tag tree for tree view -->
					<field name="name"/>
				</tree>
			</field>
		</record>
		
		<!-- Action to open Master Ring list -->
		<act_window id="action_master_ring"
			name="Master Ring"
			res_model="master.ring"
			view_mode="tree,form" />		

		<!-- RING KECAMATAN -->
		<!-- Define form view for ring.kecamatan -->
		<record id="view_form_ring_kecamatan" model="ir.ui.view">
			<field name="name">Ring Kecamatan Form</field>
			<field name="model">ring.kecamatan</field>
			<field name="arch" type="xml">
				<form string="Ring Kecamatan"> <!-- tag form for form view -->
					<group>
						<field name="branch"
							options="{'no_open': True, 'no_create': True}"/>
					</group>
					<notebook>
						<page string="Ring Kecamatan Detail">
							<field name="ring_kecamatan_line">
								<tree editable="top">
									<field name="kecamatan"/>
									<field name="name"/>
								</tree>
							</field>
						</page>
					</notebook>
				</form>
			</field>
		</record>
		
		<!-- Define tree view for ring.kecamatan -->
		<record id="view_tree_ring_kecamatan" model="ir.ui.view">
			<field name="name">Ring Kecamatan Tree</field>
			<field name="model">ring.kecamatan</field>
			<field name="arch" type="xml">
				<tree>
					<field name="branch"/>
				</tree>
			</field>
		</record>
		
		<!-- Action to open Ring Kecamatan list -->
		<act_window id="action_ring_kecamatan"
			name="Ring Kecamatan"
			res_model="ring.kecamatan"
			view_mode="tree,form"/>

		<!-- TITIK KERAMAIAN -->
		<!-- Define form view for titik.keramaian -->
		<record id="view_form_titik_keramaian" model="ir.ui.view">
			<field name="name">Titik Keramaian Form</field>
			<field name="model">titik.keramaian</field>
			<field name="arch" type="xml">
				<form string="Titik Keramaian">
					<sheet>
						<group name="group_top">
							<group name="group_left">
								<field name="branch"
									options="{'no_open': True, 'no_create': True}"/>
								<field name="kecamatan"
									options="{'no_open': True, 'no_create': True}"/>
								<field name="ring"
									options="{'no_open': True, 'no_create': True}"
									domain="[('kecamatan','=',kecamatan)]"/>
							</group>
							<group name="group_right">
								<field name="name"/>
								<field name="latlang"/>
								<field name="category"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Define tree view for titik.keramaian -->
		<record id="view_tree_titik_keramaian" model="ir.ui.view">
			<field name="name">Titik Keramaian Tree</field>
			<field name="model">titik.keramaian</field>
			<field name="arch" type="xml">
				<tree> 
					<field name="branch"/>
					<field name="kecamatan"/>
					<field name="ring"/>
					<field name="name"/>
					<field name="latlang"/>
				</tree>
			</field>
		</record>
		
		<!-- Action to open Titik Keramaian list -->
		<act_window id="action_titik_keramaian"
			name="Titik Keramaian"
			res_model="titik.keramaian"
			view_mode="tree,form"/>
			
		
		<!-- SALES PLAN -->
		<!-- Define form view for sales.plan -->
		<record id="view_form_sales_plan" model="ir.ui.view">
			<field name="name">Sales Activity Plan Form</field>
			<field name="model">sales.plan</field>
			<field name="arch" type="xml">
				<form string="Sales Activity Plan">
					<sheet>
						<group name="group_top">
								<field name="branch"
									options="{'no_open': True, 'no_create': True}"/>
								<field name="month"/>
						</group>
						<notebook>
		        	<page string="Sales Activity Plan Detail">
		          	<field name="sales_activity_line">
		            	<tree editable="top">
		            		<field name="titik_keramaian"/>
		              	<field name="ring"/>
		                <field name="kecamatan"/>
		                <field name="act_type"/>
		                <field name="employee"/>
		                <field name="plan"/>
		                <field name="target_unit"/>
		                <field name="target_data_cust"/>
		             	</tree>
								</field>
		         	</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Define tree view for sales.plan -->
		<record id="view_tree_sales_plan" model="ir.ui.view">
			<field name="name">Sales Activity Plan Tree</field>
			<field name="model">sales.plan</field>
			<field name="arch" type="xml">
				<tree> 
					<field name="branch"/>
					<field name="month"/>
				</tree>
			</field>
		</record>
		
		<!-- Action to open Sales Activity Plan list -->
		<act_window id="action_sales_plan"
			name="Sales Activity Plan"
			res_model="sales.plan"
			view_mode="tree,form"/>


		<!-- SALES RESULT -->
		<!-- Define form view for sales.result -->
		<record id="view_form_sales_result" model="ir.ui.view">
			<field name="name">Sales Activity Result Form</field>
			<field name="model">sales.result</field>
			<field name="arch" type="xml">
				<form string="Sales Activity Result">
					<sheet>
						<group name="group_top">
								<field name="branch"
									options="{'no_open': True, 'no_create': True}"/>
								<field name="month"/>
						</group>
						<notebook>
		        	<page string="Sales Activity Result Detail">
		          	<field name="sales_result_line">
		            	<tree editable="top">
		            		<field name="titik_keramaian"/>
		              	<field name="ring"/>
		                <field name="kecamatan"/>
		                <field name="act_type"/>
		                <field name="employee"/>
		                <field name="plan"/>
		                <field name="target_unit"/>
		                <field name="target_data_cust"/>
		                <field name="actual_unit"/>
		                <field name="actual_data_cust"/>
		             	</tree>
								</field>
		         	</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
		
		<!-- Define tree view for sales.result -->
		<record id="view_tree_sales_result" model="ir.ui.view">
			<field name="name">Sales Activity Result Tree</field>
			<field name="model">sales.result</field>
			<field name="arch" type="xml">
				<tree> 
					<field name="branch"/>
					<field name="month"/>
				</tree>
			</field>
		</record>
		
		<!-- Action to open Sales Activity Result list -->
		<act_window id="action_sales_result"
			name="Sales Activity Result"
			res_model="sales.result"
			view_mode="tree,form"/>
		

		<menuitem id="menu_master_ring"	 
			parent="wtc_dealer_menu.sales_activity_menu" 
			sequence="1"
			action="action_master_ring"/>
		<menuitem id="menu_ring_kecamatan"
			parent="wtc_dealer_menu.sales_activity_menu" 
			sequence="3"
			action="action_ring_kecamatan"/>
		<menuitem id="menu_titik_keramaian"
			parent="wtc_dealer_menu.sales_activity_menu" 
			sequence="4"
			action="action_titik_keramaian"/>
		<menuitem id="menu_sales_plan"
			parent="wtc_dealer_menu.sales_activity_menu" 
			sequence="5"
			action="action_sales_plan"/>
		<menuitem id="menu_sales_result"
			parent="wtc_dealer_menu.sales_activity_menu" 
			sequence="6"
			action="action_sales_result"/>
	</data>
</openerp>