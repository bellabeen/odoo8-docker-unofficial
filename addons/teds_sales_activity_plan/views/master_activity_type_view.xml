<?xml version="1.0"?>
<openerp>
	<data>
		<!-- MASTER ACTIVITY TYPE -->
		<!-- Define form view for master.act.type -->
		<record id="view_form_master_act_type" model="ir.ui.view">
			<field name="name">Master Activity Type Form</field>
			<field name="model">master.act.type</field>
			<field name="arch" type="xml">
				<form string="Master Activity Type">
					<group>
						<field name="code"/>
						<field name="name"/>
					</group>
				</form>
			</field>
		</record>
		
		<!-- Define tree view for master.act.type -->
		<record id="view_tree_master_act_type" model="ir.ui.view">
			<field name="name">Master Activity Type Tree</field>
			<field name="model">master.act.type</field>
			<field name="arch" type="xml">
				<tree> 
					<field name="code"/>
					<field name="name"/>
				</tree>
			</field>
		</record>
		
		<!-- Action to open Master Activity Type list -->
		<act_window id="action_master_activity_type"
			name="Master Activity Type"
			res_model="master.act.type"
			view_mode="tree,form" />
			
		<menuitem id="menu_master_activity_type"
			parent="wtc_dealer_menu.sales_activity_menu" 
			sequence="2"
			action="action_master_activity_type"/>
	</data>
</openerp>