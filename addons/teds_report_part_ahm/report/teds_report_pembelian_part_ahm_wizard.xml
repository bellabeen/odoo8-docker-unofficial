<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_teds_report_pembelian_part_ahm_wizard" model="ir.ui.view">
			<field name="name">teds.report.pembelian.part.ahm.wizard</field>
			<field name="model">teds.report.pembelian.part.ahm.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Laporan Payment Klik">
					<group attrs="{'invisible':[('state_x','=','get')]}">
						<group>
							<label for="start_date" string="Periode"/>
							<div>
								<field name="start_date" class="oe_inline" placeholder="Start Date" required="1"/>
								<field name="end_date" class="oe_inline" placeholder="End Date" required="1"/>
							</div>
						</group>
						<group>
							<field name="division" readonly="1"/>
						</group>
					</group>
					<notebook attrs="{'invisible':[('state_x','=','get')]}">
						<page string="Branches">
							<field name="branch_ids" colspan="4" nolabel="1"/>
						</page>
					</notebook>

                	<field invisible="1" name="state_x"/>                
                	<newline/>    
                	<group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
	                    <separator colspan="4" string="Excel Export Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                </group> 
	                <footer>
	                    <button name="excel_report" string="Export Data" type="object" class="oe_highlight" attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <label string=" or " attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <button string="Cancel" special="cancel" class="oe_link" attrs="{'invisible':[('state_x','=','get')]}"/>
	                </footer>
				</form>
			</field>
		</record>

		<record id="action_teds_report_pembelian_part_ahm_wizard" model="ir.actions.act_window">
			<field name="name">Pembelian Part AHM</field> 
			<field name="res_model">teds.report.pembelian.part.ahm.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
	     	<field name="target">new</field>
		</record>

		<menuitem id="teds_report_pembelian_part_ahm_menuitem" parent="wtc_dealer_menu.showroom_report_menu" action="action_teds_report_pembelian_part_ahm_wizard" sequence="100"/>
	</data>
</openerp>