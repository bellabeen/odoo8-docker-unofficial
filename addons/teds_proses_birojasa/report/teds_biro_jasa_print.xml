<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="teds_proses_birojasa_print">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure"/>
                            <div class="row"> 
                            </div>
                            <div class="col-xs-12">
                                <table class="table table-bordered">
                                    <tr>
                                        <td>
                                            <table style="font-size:12px; width:100%; line-height:200%; padding:20px">
                                                <tr>
                                                    <th>
                                                        PT.Tunas Dwipa Matra <span t-esc="o.branch_id.name"/>
                                                    </th>
                                                    <th>
                                                        PERMINTAAN PEMBAYARAN BBN
                                                    </th>
                                                </tr>
                                                <tr>
                                                    <td><span t-esc="o.branch_id.street"/></td>
                                                    <td>
                                                        <table width="100%">
                                                            <tr>
                                                                <td width="20%">No Bukti</td>
                                                                <td width="2%">: </td>
                                                                <td width="78%"><span t-esc="o.name"/></td>
                                                            </tr>
                                                            <tr>
                                                                <td width="20%">Tanggal</td>
                                                                <td width="2%">: </td>
                                                                <td width="78%"><span t-esc="o.tanggal"/></td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        Cetakan ke: <span t-esc="jumlah_cetakan()"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        <table class="table table-bordered" style="font-size:10px; width:100%; line-height:200%; padding:20px">
                                                            <tr>
                                                                <td colspan="9">
                                                                    <table width="100%">
                                                                        <tr>
                                                                            <td width="20%">No Invoice</td>
                                                                            <td width="2%">: </td>
                                                                            <td width="78%"></td>
                                                                        </tr>
                                                                        <tr>
                                                                            <td width="20%">Biro Jasa</td>
                                                                            <td width="2%">: </td>
                                                                            <td width="78%"><span t-esc="o.partner_id.name"/></td>
                                                                        </tr>
                                                                    </table>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <th>No</th>
                                                                <th>No Mesin</th>
                                                                <th>Atas Nama</th>
                                                                <th>Notice</th>
                                                                <th>No Polisi</th>
                                                                <th>Jumlah</th>
                                                                <th>Koreksi</th>
                                                                <th>Progresif</th>
                                                                <th>Total</th>
                                                            </tr>
                                                            <tr t-foreach="o.proses_birojasa_line" style="page-break-inside: avoid !important;" t-as="detail">
                                                                <td><span t-esc="no_urut()"/></td>
                                                                <td><span t-esc="detail.name.name"/></td>
                                                                <td><span t-esc="detail.customer_stnk.name"/></td>
                                                                <td><span t-esc="detail.name.no_notice"/></td>
                                                                <td><span t-esc="detail.name.no_polisi"/></td>
                                                                <td><span t-esc="'{0:,.2f}'.format(detail.name.invoice_bbn.amount_total)"/></td>
                                                                <td><span t-esc="'{0:,.2f}'.format(detail.koreksi)"/></td>
                                                                <td><span t-esc="'{0:,.2f}'.format(detail.pajak_progressive)"/></td>
                                                                <td><span t-esc="'{0:,.2f}'.format(detail.total_tagihan)"/></td>
                                                            </tr>
                                                            <tr>
                                                                <th colspan="5" style="text-align:center">Jumlah</th>
                                                                <th>
                                                                    <t t-esc="'{0:,.2f}'.format(sum(d.name.invoice_bbn.amount_total for d in o.proses_birojasa_line))"/>
                                                                </th>
                                                                <th>
                                                                    <t t-esc="'{0:,.2f}'.format(sum(d.koreksi for d in o.proses_birojasa_line))"/>
                                                                </th>
                                                                <th>
                                                                    <t t-esc="'{0:,.2f}'.format(sum(d.pajak_progressive for d in o.proses_birojasa_line))"/>
                                                                </th>
                                                                <th>
                                                                    <t t-esc="'{0:,.2f}'.format(sum(d.total_tagihan for d in o.proses_birojasa_line))"/>
                                                                </th>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr height="120px">
                                                    <td style="padding:20px">Dicetak Oleh :</td>
                                                    <td>
                                                        <table width="100%">
                                                            <tr>
                                                                <td width="30%">PPN Jasa</td>
                                                                <td width="3%">: </td>
                                                                <td width="67%"><span t-esc="'{0:,.2f}'.format(o.ppn_jasa)"/></td>
                                                            </tr>
                                                            <tr>
                                                                <td width="30%">Total Tagihan</td>
                                                                <td width="3%">:</td>
                                                                <td width="67%"><span t-esc="'{0:,.2f}'.format(o.amount_total)"/></td>
                                                            </tr>
                                                            <tr>
                                                                <td>
                                                                    <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', barcode(data), 600, 120)" style="width:180px;height:150px;position:absolute"/>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="padding:20px">
                                                        _____________________<br/>
                                                        <t t-esc="usr()"/>, <t t-esc="tgl()"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
