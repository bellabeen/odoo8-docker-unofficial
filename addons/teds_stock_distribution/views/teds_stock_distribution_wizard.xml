<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_stock_distribution_wizard" model="ir.ui.view">
			<field name="name">teds.stock.distribution.wizard</field>
			<field name="model">teds.stock.distribution.wizard</field>
			<field name="arch" type="xml">
				<form string="Stock Distribution">
					<sheet>
	                	<group>
	                		<group>
		                		<field name="options"/>
		                		<field name="file_upload" attrs="{'invisible':[('options','!=','Upload')],'required':[('options','=','Upload')]}"/>
		                		<!-- <field name="distribution_ids" widget="many2many_tags" string="Stock Distribution" options="{'no_open':True,'no_create':True}" attrs="{'invisible':[('options','!=','Download')]}"/> -->
	    	            		<field name="division" attrs="{'invisible':[('options','!=','Download')]}"/>
	    	            		<field name="type_id" options="{'no_open':True,'no_create':True}" attrs="{'invisible':['|',('options','!=','Download'),('division','=',False)]}"/>
	                		</group>
	                		<group>
		                		<field name="date"/>
	                		</group>
						</group>
					</sheet>
					<footer>
 		                <button name="action_wizard" string="OK" type="object" class="oe_highlight"/>
		                or
  		                <button string="Cancel" class="oe_link" special="cancel"/>
		            </footer>
				</form>
			</field>
		</record>

		<record id="view_teds_stock_distribution_download_wizard" model="ir.ui.view">
			<field name="name">teds.stock.distribution.download.wizard</field>
			<field name="model">teds.stock.distribution.wizard</field>
			<field name="arch" type="xml">
				<form string="Download">
					<sheet>
	                	<group>
		                    <separator colspan="4" string="Excel Export Generated. Click link below to download ..."/>
		                    <field name="name" invisible="1" width="100"/>
		                    <field name="file_download" nolabel="1" readonly="0" width="100" filename="name"/> 
						</group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="action_teds_stock_distribution_wizard" model="ir.actions.act_window">
			<field name="name">Stock Distribution Wizard</field>
			<field name="res_model">teds.stock.distribution.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_teds_stock_distribution_wizard"/>
			<field name="target">new</field>
		</record>

		<menuitem id="teds_stock_distribution_wizard_menuitem" action="action_teds_stock_distribution_wizard" parent="wtc_dealer_menu.showroom_mutasi_menu" sequence="11"/>
	</data>
</openerp>