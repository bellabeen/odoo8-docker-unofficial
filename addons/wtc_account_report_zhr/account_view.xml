<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

        <record model='ir.ui.view' id='smcus_zhr_cash_flow_tree'>
            <field name="name">smcus_zhr_cash_flow_tree</field>
            <field name="model">smcus.zhr.cash.flow</field>
            <field name="arch" type="xml">
                <tree string="Cash Flow Clasification" version="7.0" editable="bottom">
                    <field name="sequence"/>
                    <field name="type"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model='ir.actions.act_window' id='smcus_zhr_cash_flow_action'>
            <field name="name">Cash Flow Clasification</field>
            <field name="res_model">smcus.zhr.cash.flow</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>        

        <menuitem action="smcus_zhr_cash_flow_action" parent="account.menu_finance_configuration" id="smcus_zhr_cash_flow_menu"/>
    
        <record model="ir.ui.view" id="smcus_view_account_form_report_zhr">
            <field name="name">smcus_view_account_form_report_zhr</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <field name="tax_ids" position="before">
                    <field name="smcus_laba_rugi"/>
                    <field name="smcus_zhr_report" attrs="{'invisible':[('parent_id','=',False)], 'required':[('parent_id','!=',False)]}"/>
                    <field name="smcus_zhr_cash_flow" attrs="{'invisible':[('type','=','view')], 'required':[('type','!=','view')]}"/>
                </field>
            </field>
        </record>
        <record model="ir.ui.view" id="smcus_view_account_list_report_zhr">
            <field name="name">smcus_view_account_list_report_zhr</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="smcus_zhr_report"/>
                    <field name="smcus_zhr_cash_flow"/>
                </field>
            </field>
        </record>
</data>
</openerp>
