<?xml version="1.0" encoding="utf-8"?>
<openerp>
     <data>

        <record id="smcus_new_accounting_report" model="ir.ui.view">
            <field name="name">smcus_new_accounting_report</field>
            <field name="model">smcus.new.accounting.report</field>
            <field name="arch" type="xml">
                <form string="Report Options" version="7.0">
                    <group>
                        <group>
                            <field name="branch_id" widget='selection'/>
                            <field name="chart_account_id" widget='selection' on_change="onchange_chart_id(chart_account_id, context)"/>
                            <field name="company_id" invisible="1"/>
                            <field name="state" invisible="0"/>
                        </group>
                        <group>
                            <field name="account_report" />
                            <field name="report_type" />
                        </group>
                    </group>
                    <group string="Filter" colspan="4">
                        <group>
                            <field name="fiscalyear_id" attrs="{'invisible': [('report_type','in',['std','cmp'])], 'required': [('report_type','=','year')]}"/>
                            <field name="period_id" on_change="onchange_period_id(period_id)" attrs="{'required': [('report_type','in',['std','cmp'])], 'invisible': [('report_type','=','year')]}"/>
                            <field name="date_to" invisible="1" colspan="2" attrs="{'required': [('report_type','in',['std','cmp'])], 'invisible': [('report_type','=','year')]}"/>
                        </group>
                        <group>
                            <field name="period_comp_id" on_change="onchange_period_cmp_id(period_comp_id)" attrs="{'required': [('report_type','=','cmp')], 'invisible': [('report_type','in',['std','year'])]}"/>
                            <field name="date_to_cmp" invisible="1" colspan="2" attrs="{'required': [('report_type','=','cmp')], 'invisible': [('report_type','in',['std','year'])]}"/>
                        </group>
                    </group>
                    <footer>
                        <button icon="gtk-print" name="check_report" string="PDF Report" type="object" colspan="2" default_focus="1" />
                        or
                        <button icon="gtk-print" name="excel_report" string="Excel Report" type="object" colspan="1" default_focus="1"/>
                        or
                        <button icon="gtk-cancel" special="cancel" string="Cancel" colspan="2"/>
                        <field invisible="1" name="state_x"/>
                        <newline/>    
                        <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                            <separator colspan="4" string="Export to Excel done. Download by click file name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                            <field name="name_x" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                            <field name="data_x" nolabel="1" readonly="0" width="100" filename="name_x" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        </group>
                    </footer>
                </form>
            </field>
        </record>

        <record id="smcus_action_cash_flow" model="ir.actions.act_window">
             <field name="name">Laporan Akutansi</field>
             <field name="res_model">smcus.new.accounting.report</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">form</field>
             <field name="view_id" ref="smcus_new_accounting_report"/>
             <field name="target">new</field>
        </record>

        <menuitem icon="STOCK_PRINT" name="Laporan Akutansi" action="smcus_action_cash_flow" id="smcus_menu_cash_flow" parent="account.menu_finance_reports" sequence="0"/>
        
        
    </data>
</openerp>
