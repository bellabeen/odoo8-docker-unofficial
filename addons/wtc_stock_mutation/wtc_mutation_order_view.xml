<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- Mutation Order -->
		
		<record model="ir.ui.view" id="wtc_mutation_order_tree_view">
		    <field name="name">wtc.mutation.order.tree</field>
		    <field name="model">wtc.mutation.order</field>
		    <field name="arch" type="xml">
		        <tree string="Mutation Order" create="false">
		            <field name="name"/>
		            <field name="branch_id"/>
		            <field name="branch_requester_id"/>
		            <field name="division"/>
		            <field name="date"/>
		            <field name="state"/>
		        </tree>
		     </field>
		</record>
		
		<record id="view_mutation_order_search" model="ir.ui.view">
            <field name="name">wtc.mutation.order.search</field>
            <field name="model">wtc.mutation.order</field>
            <field name="arch" type="xml">
                <search string="Search Mutation Order">
        			<field name='name'/>
        			<field name='branch_id'/>
        			<field name='branch_requester_id'/>
        			<field name='division'/>
        			<field name='distribution_id'/>		
					<filter string="Confirmed" name="state_confirm" domain="[('state','=','confirm')]" />
					<filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />        					        			
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
		<record model="ir.ui.view" id="wtc_mutation_order_form_view">
		    <field name="name">wtc.mutation.order.form</field>
		    <field name="model">wtc.mutation.order</field>
		    <field name="arch" type="xml">
		    	
		    	<form string="Mutation Order" create="false">
		    		<header>
		    			<button name="view_picking" string="View Picking" type="object" attrs="{'invisible': [('state','not in',('confirm','done'))]}" class="oe_highlight"/>
		    			<button name="confirm" states="draft" string="Confirm" type="object" class="oe_highlight" groups="wtc_stock_mutation.group_wtc_mutation_order_confirm"/>
		    			<button name="renew_available" states="draft" string="Renew Available" type="object" class="oe_highlight" groups="wtc_stock_mutation.group_wtc_mutation_order_renew_available"/>
		    			<field name="state" widget="statusbar" statusbar_visible="draft,confirm,done" statusbar_colors='{"confirm":"blue","cancel":"red"}'/>
		    		</header>
		    		<sheet>
		    			<div class="oe_title">                      
		       				<h1>
					            <label string="Mutation Order"/>
					 			<field name="name" class="oe_inline" readonly="1"/>	
		    			    </h1>
	                    </div>
			    		<group col="4">
				            <field name="branch_id" options="{'no_show':True,'no_create':True,'no_open':True}" readonly="True"/>
				            <field name="branch_requester_id" options="{'no_show':True,'no_create':True,'no_open':True}" readonly="True"/>
				            <field name="division" readonly="True"/>
				            <field name="user_id" options="{'no_show':True,'no_create':True,'no_open':True}" readonly="True"/>
				            <field name="distribution_id" readonly="True"/>
				            <field name="date" readonly="True"/>
				            <field name="start_date" readonly="True"/>
				            <field name="end_date" readonly="True"/>
							<field name="description" readonly="True"/>
							 <field name="location_id" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_open':True,'no_create':True}"/>
						</group>
						<notebook>
							<page string="Mutation Line">
		                        <field colspan="4" name="order_line" nolabel="1" widget="one2many_list" attrs="{'readonly':[('state','!=','draft')]}">
		                            <tree string="Order Line" editable="top" create="false">
		                            	<field name="rel_distribution_id" invisible="1"/>
		                            	<field name="rel_state" invisible="1"/>
						                <field name="product_id" options="{'no_open':True, 'no_create':True}" readonly="True"/>
						                <field name="description" readonly="True"/>
						                <field name="qty" attrs="{'readonly':[('rel_state','!=','draft')]}" on_change="qty_change(qty,product_id,rel_distribution_id)"/>
						                <field name="qty_available" readonly="1"/>
						                <field name="supply_qty" readonly="1"/>
						                <field name="unit_price" invisible="1"/>
						                <field name="unit_price_show" readonly="1"/>
						                <field name="sub_total" readonly="1"/>
						                <field name="performance_hpp" invisible="1"/>
		                            </tree>
		                        </field>
		                        <group class="oe_subtotal_footer oe_right">
			                     	<div class="oe_subtotal_footer_seperator oe_inline">
										<label for="amount_total"/>
									</div>
			                     	<field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
								</group>
								<div class="oe_clear"/>
							</page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
										<field name="cancelled_uid" readonly="1"></field>
										<field name="cancelled_date" readonly="1"></field>
									</group>
								</group>
							</page>							
						</notebook>
		    		</sheet>
		    	</form>
		    	
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="wtc_mutation_order_action">
            <field name="name">Mutation Order</field>
            <field name="res_model">wtc.mutation.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
		    <field name="context">{"search_default_state_draft":1,"search_default_state_confirm":1}</field>
            <field name="domain">[]</field>
        </record>
        
        <record id="wtc_mutation_order_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="wtc_mutation_order_tree_view"/>
            <field name="act_window_id" ref="wtc_mutation_order_action"/>
        </record>
        
        <record id="wtc_mutation_order_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wtc_mutation_order_form_view"/>
            <field name="act_window_id" ref="wtc_mutation_order_action"/>
        </record>
        
        <menuitem action="wtc_mutation_order_action" id="wtc_mutation_order_menu_showroom" parent="wtc_dealer_menu.showroom_mutasi_menu" sequence="10"/>
        <menuitem action="wtc_mutation_order_action" id="wtc_mutation_order_menu_workshop" parent="wtc_dealer_menu.workshop_mutasi_menu" sequence="10"/>
		
	</data>
</openerp>