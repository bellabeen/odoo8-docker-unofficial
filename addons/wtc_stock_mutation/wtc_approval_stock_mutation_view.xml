<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
    	<record model="ir.ui.view" id="wtc_reject_approval_stock_mutation_form_view">
		    <field name="name">wtc.reject.approval.stock.mutation.form</field>
		    <field name="model">wtc.reject.approval.stock.mutation</field>
		    <field name="arch" type="xml">
		        <form string="REASON" version="7.0">
		            <group>
		                <field name="reason"/>
		            </group>
		            <footer>
		                <button name="wtc_reject_approval" string="Reject" type="object" class="oe_highlight"/>
		                or
		                <button string="Cancel" class="oe_link" special="cancel"/>
		            </footer>
		        </form>
		    </field>
		</record>
		
		<record model="ir.actions.act_window" id="wtc_reject_approval_stock_mutation_action">
		    <field name="name">Reason Reject Stock Mutation</field>
		    <field name="res_model">wtc.reject.approval.stock.mutation</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">form</field>
		    <field name="target">new</field>
		</record>
		
		<record id="wtc_approval_stock_mutation_form_view" model="ir.ui.view">
			<field name="name">wtc.approval.stock.mutation.form</field>
			<field name="model">wtc.mutation.request</field>
			<field name="inherit_id" ref="wtc_mutation_request_form_view"/>
			<field name="arch" type="xml">
				
				<button name="wkf_action_cancel" position="before">
					<button name="wkf_request_approval" states="draft" string="RFA" type="object" class="oe_highlight" groups="wtc_stock_mutation.group_wtc_mutation_request_rfa"/>
					<button name="wkf_approval" states="waiting_for_approval" string="Approve" type="object" class="oe_highlight" groups="wtc_stock_mutation.group_wtc_mutation_request_approve"/>
					<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'wtc.mutation.request','update_value':{'approval_state':'r','state':'draft'}}"/>
					<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'wtc.mutation.request','update_value':{'approval_state':'b','state':'draft'}}" groups="wtc_stock_mutation.group_wtc_mutation_request_cancel_approval"/>
				</button>
				
				<field name="description" position="after">
					<field name="approval_state"/>
				</field>
				
				<xpath expr="//page[@string='Request Line']" position="after">
					<page string="Approval">
						<field name="approval_ids">
							<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
								<field name="group_id"/>
								<field name="branch_id"/>
								<field name="division"/>
								<field name="limit"/>
								<field name="sts"/>
								<field name="reason"/>
								<field name="pelaksana_id"/>
								<field name="tanggal"/>
							</tree>
						</field>
					</page>
					
					<page string="Audit Trail">
						<group>
							<group>
								<field name="create_uid" readonly="1"></field>
								<field name="create_date" readonly="1"></field>
								<field name="confirm_uid" readonly="1"></field>
								<field name="confirm_date" readonly="1"></field>
							</group>
							<group>
								<field name="write_uid" readonly="1"></field>
								<field name="write_date" readonly="1"></field>
								<field name="cancel_uid" readonly="1"></field>
								<field name="cancel_date" readonly="1"></field>
							</group>
						</group>
					</page>					
				</xpath>
				
			</field>
		</record>
		
 	</data>
</openerp>