<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<!-- Stock Distribution -->
		
		<record model="ir.ui.view" id="wtc_stock_distribution_tree_view">
		    <field name="name">wtc.stock.distribution.tree</field>
		    <field name="model">wtc.stock.distribution</field>
		    <field name="arch" type="xml">
		        <tree string="Stock Distribution" create="false">
		            <field name="name"/>
		            <field name="branch_id"/>
		            <field name="branch_requester_id"/>
		            <field name="dealer_id"/>
		            <field name="division"/>
		            <field name="state"/>
		        </tree>
		     </field>
		</record>
		
		<record id="view_stock_distribution_search" model="ir.ui.view">
            <field name="name">wtc.stock.distribution.search</field>
            <field name="model">wtc.stock.distribution</field>
            <field name="arch" type="xml">
                <search string="Search Stock Distribution">
                	<field name='name'/>
        			<field name='branch_id'/>
        			<field name='branch_requester_id'/>
        			<field name="dealer_id"/>
        			<field name='division'/>
        			<field name='type_id'/>		
        			<field name='request_id'/>
					<field name='description'/>
					<filter string="Requested" name="state_confirm" domain="[('state','=','confirm')]" />
					<filter string="Waiting for Approval" name="state_wfa" domain="[('state','=','waiting_for_approval')]" />
					<filter string="Approved" name="state_approved" domain="[('state','=','approved')]" />
					<filter string="Open" name="state_open" domain="[('state','=','open')]" />					
					<filter string="Done" name="state_done" domain="[('state','=','done')]" />         					        			
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
		<record model="ir.ui.view" id="wtc_stock_distribution_form_view">
		    <field name="name">wtc.stock.distribution.form</field>
		    <field name="model">wtc.stock.distribution</field>
		    <field name="arch" type="xml">
		    	
		    	<form string="Stock Distribution" create="false">
		    		<header>
		    			<button name="reject_request" states="confirm" string="Reject" type="object" class="oe_highlight" groups="wtc_stock_mutation.group_wtc_stock_distribution_reject"/>
		    			<button name="action_mutation_order_create" string="Create/View Order" type="object" class="oe_highlight" attrs="{'invisible':['|','|',('branch_requester_id','=',False),('state','not in',['open','done']),('is_effective_date','=',False)]}" groups="wtc_stock_mutation.group_stock_distribution_order"/>
		    			<button name="action_sale_order_create" string="Create/View Order" type="object" class="oe_highlight" attrs="{'invisible':['|','|',('branch_requester_id','!=',False),('state','not in',['open','done']),('is_effective_date','=',False)]}" groups="wtc_stock_mutation.group_stock_distribution_order"/>
		    			<button name="close_order" string="Close Order" type="object" states='open' groups="wtc_stock_mutation.group_wtc_stock_distribution_close_order"/>
		    			<field name="state" widget="statusbar" statusbar_visible="confirm,waiting_for_approval,open,done" statusbar_colors='{"confirm":"blue","cancel":"red"}'/>
		    		</header>
		    		<sheet>
		    			<div class="oe_title">
		       				<h1>
					            <label string="Stock Distribution"/>
					 			<field name="name" class="oe_inline" readonly="1"/>
		    			    </h1>
	                    </div>
			    		<group col="4">
				            <field name="branch_id" options="{'no_show':True,'no_create':True,'no_open':True}" readonly="True"/>
				            <field name="branch_requester_id" attrs="{'invisible':[('branch_requester_id','=',False)]}" options="{'no_show':True,'no_create':True,'no_open':True}" readonly="True"/>
				            <field name="dealer_id" readonly="True"/>
				            <field name="division" readonly="True"/>
				            <field name="user_id" options="{'no_show':True,'no_create':True,'no_open':True}" readonly="True"/>
				            <field name="request_id" readonly="True"/>
				            <field name="type_id" readonly="True"/>
				            <field name="date" readonly="True"/>
			    			<field name="start_date" readonly="True"/>
			    			<field name="end_date" readonly="True"/>
			    			<field name="func_qty" invisible="1"/>
			    			<field name="rel_branch_type" invisible="1"/>
			    			<field name="order_ids" invisible="1"/>
			    			<field name="is_effective_date" invisible="1"/>
						</group>
						<group>
							<field name="description" readonly="True"/>
						</group>
						<notebook>
							<page string="Distribution Line">
		                        <field colspan="4" name="distribution_line" nolabel="1" widget="one2many_list">
		                            <tree string="Distribution Line" editable="top" create="false">
		                            	<field name="rel_state" invisible="1"/>
						                <field name="product_id" options="{'no_open':True, 'no_create':True}" readonly="True"/>
						                <field name="description" readonly="True"/>
						                <field name="requested_qty" readonly="True"/>
						                <field name="approved_qty" attrs="{'readonly':[('rel_state','!=','confirm')]}"/>
						                <field name="qty" readonly="True"/>
						                <field name="supply_qty" readonly="True"/>
						                <field name="unit_price" invisible="1"/>
						                <field name="unit_price_show" readonly="1"/>
						                <field name="sub_total" readonly="True"/>
		                            </tree>
		                        </field>
		                        <group class="oe_subtotal_footer oe_right">
			                     	<div class="oe_subtotal_footer_seperator oe_inline">
										<label for="amount_total"/>
									</div>
			                     	<field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
								</group>
								<div class="oe_clear"/>
							</page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
										<field name="cancel_uid" readonly="1"></field>
										<field name="cancel_date" readonly="1"></field>
									</group>
								</group>
							</page>							
						</notebook>
		    		</sheet>
		    		<footer>
		    			<button name="wkf_request_approval" states="confirm" string="Confirm Qty (RFA)" type="object" class="oe_highlight" groups="wtc_stock_mutation.group_wtc_stock_distribution_rfa"/>
		    		</footer>
		    	</form>
		    	
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="wtc_stock_distribution_action">
            <field name="name">Stock Distribution</field>
            <field name="res_model">wtc.stock.distribution</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
		    <field name="context">{"search_default_state_confirm":1,
		    	"search_default_state_wfa":1,
		    	"search_default_state_approved":1,
		    	"search_default_state_open":1,}</field>
            <field name="domain">[]</field>
        </record>
        
        <record id="wtc_stock_distribution_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="wtc_stock_distribution_tree_view"/>
            <field name="act_window_id" ref="wtc_stock_distribution_action"/>
        </record>
        
        <record id="wtc_stock_distribution_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wtc_stock_distribution_form_view"/>
            <field name="act_window_id" ref="wtc_stock_distribution_action"/>
        </record>
        
        <menuitem action="wtc_stock_distribution_action" id="wtc_stock_distribution_menu_showroom" parent="wtc_dealer_menu.showroom_mutasi_menu" sequence="10"/>
        <menuitem action="wtc_stock_distribution_action" id="wtc_stock_distribution_menu_workshop" parent="wtc_dealer_menu.workshop_mutasi_menu" sequence="10"/>
	
	</data>
</openerp>