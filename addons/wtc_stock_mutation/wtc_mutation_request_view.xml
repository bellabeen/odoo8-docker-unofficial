<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<!-- Mutation Request -->
	
		<record model="ir.ui.view" id="wtc_mutation_request_tree_view">
		    <field name="name">wtc.mutation.request.tree</field>
		    <field name="model">wtc.mutation.request</field>
		    <field name="arch" type="xml">
		        <tree string="Mutation Request">
		            <field name="name"/>
		            <field name="branch_id"/>
		            <field name="branch_sender_id"/>
		            <field name="division"/>
		            <field name="state"/>
		        </tree>
		     </field>
		</record>
		
		<record id="view_mutation_request_search" model="ir.ui.view">
            <field name="name">wtc.mutation.request.search</field>
            <field name="model">wtc.mutation.request</field>
            <field name="arch" type="xml">
                <search string="Search Mutation Request">
                	<field name="name"/>
        			<field name='branch_id'/>
        			<field name='branch_sender_id'/>
        			<field name='division'/>
        			<field name='type_id'/>	
					<filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />
					<filter string="Waiting for Approval" name="state_wfa" domain="[('state','=','waiting_for_approval')]" />
					<filter string="Approved" name="state_approved" domain="[('state','=','approved')]" />
					<filter string="Requested" name="state_confirm" domain="[('state','=','confirm')]" />
					<filter string="Open" name="state_open" domain="[('state','=','open')]" />					
					<filter string="Done" name="state_done" domain="[('state','=','done')]" />                 	                         					        			
                    <group expand="1" string="Group By">
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
		<record model="ir.ui.view" id="wtc_mutation_request_form_view">
		    <field name="name">wtc.mutation.request.form</field>
		    <field name="model">wtc.mutation.request</field>
		    <field name="arch" type="xml">
		    	
		    	<form string="Mutation Request">
		    		<header>
		    			<button name="wkf_action_cancel" states="confirm" string="Cancel" type="object" confirm="Apa anda yakin ingin membatalkan transaksi ini ?" groups="wtc_stock_mutation.group_wtc_mutation_request_cancel"/>
		    			<button name="view_picking" string="View Picking" type="object" class="oe_highlight" attrs="{'invisible':['|',('state','not in',('open','done')),('picking_ids','=',False)]}"/>
		    			<field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval,confirm,open,done" statusbar_colors='{"draft":"red","done":"blue"}'/>
		    		</header>
		    		<sheet>
		    			<div class="oe_title">                      
		       				<h1>
					            <label string="Mutation Request"/>
					 			<field name="name" class="oe_inline" readonly="1"/>	
		    			    </h1>
	                    </div>
			    		<group col="4">
				            <field name="branch_id" options="{'no_show':True,'no_create':True,'no_open':True}" required="True" attrs="{'readonly':[('name','!=',False)]}"/>
				            <field name="branch_sender_id" options="{'no_show':True,'no_create':True,'no_open':True}" required="True" attrs="{'readonly':[('name','!=',False)]}"/>
				            <field name="division" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
				            <field name="user_id" options="{'no_show':True,'no_create':True,'no_open':True}" attrs="{'readonly':[('state','!=','draft')]}"/>
			    			<field name="type_id" options="{'no_open':True,'no_create_edit':True}" domain="[('category','=',division)]" attrs="{'readonly': [('state','!=','draft')]}"/>
			    			<field name="rel_date" readonly="True"/>
			    			<field name="rel_start_date" readonly="True"/>
			    			<field name="rel_end_date" readonly="True"/>
			    			<field name="date" invisible="True"/>
			    			<field name="start_date" invisible="True"/>
			    			<field name="end_date" invisible="True"/>
			    			<field name="picking_ids" invisible="1"/>
						</group>
						<group>
							<field name="description" attrs="{'readonly':[('state','!=','draft')]}"/>
						</group>
						<notebook>
							<page string="Request Line">
		                        <field colspan="4" name="request_line" nolabel="1" widget="one2many_list" attrs="{'readonly':[('state','!=','draft')]}">
		                            <tree string="Request Line" editable="bottom">
						                <field name="product_id" options="{'no_open':True, 'no_create':True}" on_change="product_id_change(product_id,parent.branch_id,parent.branch_sender_id,parent.division)" required="1"/>
						                <field name="description" on_change="product_id_change(product_id,parent.branch_id,parent.branch_sender_id,parent.division)" required="1"/>
						                <field name="requested_qty" required="1"/>
						                <field name="approved_qty" readonly="1"/>
						                <field name="supply_qty" readonly="1"/>
						                <field name="unit_price" invisible="1"/>
						                <field name="unit_price_show" readonly="1"/>
						                <field name="sub_total" readonly="True"/>
		                            </tree>
		                        </field>
		                        <group class="oe_subtotal_footer oe_right">
			                     	<div class="oe_subtotal_footer_seperator oe_inline">
										<label for="amount_total"/>
										<button name="button_dummy" states="draft" string="(update)" type="object" class="oe_edit_only oe_link"/>
									</div>
			                     	<field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'/>
								</group>
								<div class="oe_clear"/>
							</page>
						</notebook>
		    		</sheet>
		    	</form>
		    	
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="wtc_mutation_request_action">
            <field name="name">Mutation Request</field>
            <field name="res_model">wtc.mutation.request</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
		    <field name="context">{"search_default_state_draft":1,
		    	"search_default_state_wfa":1,
		    	"search_default_state_approved":1,
		    	"search_default_state_confirm":1,
		    	"search_default_state_open":1,}</field>
            <field name="domain">[]</field>
        </record>
        
        <record id="wtc_mutation_request_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="wtc_mutation_request_tree_view"/>
            <field name="act_window_id" ref="wtc_mutation_request_action"/>
        </record>
        
        <record id="wtc_mutation_request_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wtc_mutation_request_form_view"/>
            <field name="act_window_id" ref="wtc_mutation_request_action"/>
        </record>
        
        <menuitem action="wtc_mutation_request_action" id="wtc_mutation_request_menu_showroom" parent="wtc_dealer_menu.showroom_mutasi_menu" sequence="10"/>
		<menuitem action="wtc_mutation_request_action" id="wtc_mutation_request_menu_workshop" parent="wtc_dealer_menu.workshop_mutasi_menu" sequence="10"/>
		
	</data>
</openerp>