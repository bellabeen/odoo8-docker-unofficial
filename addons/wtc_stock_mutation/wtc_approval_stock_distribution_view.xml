<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  		
	    	
		<record id="wtc_approval_stock_distribution_form_view" model="ir.ui.view">
			<field name="name">wtc.approval.stock.distribution.form</field>
			<field name="model">wtc.stock.distribution</field>
			<field name="inherit_id" ref="wtc_stock_distribution_form_view"/>
			<field name="arch" type="xml">
			
				<field name="state" position="before">
					<button name="wkf_approval" states="waiting_for_approval" string="Approve" type="object" class="oe_highlight"/>
					<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'wtc.stock.distribution','update_value':{'approval_state':'r','state':'confirm'}}"/>
					<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'wtc.stock.distribution','update_value':{'approval_state':'b','state':'confirm'}}"/>
	 			</field>
				<field name="end_date" position="after">
					<field name="approval_state"/>
				</field>
				<xpath expr="//page[@string='Distribution Line']" position="after">
					<page string="Approval">
						<field name="approval_ids">
							<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
								<field name="group_id" />
								<field name="branch_id"/>
								<field name="division"/>
								<field name="limit"/>
								<field name="sts"/>
								<field name="reason"/>
								<field name="pelaksana_id"/>
								<field name="tanggal"/>
							</tree>
						</field>
					</page>				
				</xpath>
				
			</field>
		</record>
	
	</data>
</openerp>