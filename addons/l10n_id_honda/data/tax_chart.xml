<openerp>
<data>

<!-- CHART OF TAXES -->

<record id="tc_root" model="account.tax.code">
    <field name="name">Your Company</field>
    <field name="parent_id" eval="False"/>
</record>

<!-- TAXABLE AMOUNTS -->

<record id="tc_base" model="account.tax.code">
    <field name="name">Taxable amounts</field>
    <field name="parent_id" ref="tc_root"/>
</record>


<!-- VAT -->

<record id="tc_base_vat" model="account.tax.code">
    <field name="name">Tax Balance to Pay</field>
    <field name="parent_id" eval="tc_base"/>
</record>

<record id="tc_base_output" model="account.tax.code">
    <field name="name">PPN OUT</field>
    <field name="code">Tax Paid Rate PPN (10%)</field>
    <field name="parent_id" ref="tc_base_vat"/>
</record>

<record id="tc_base_input" model="account.tax.code">
    <field name="name">PPN IN</field>
    <field name="code">Tax Received Rate PPN (10%)</field>
    <field name="parent_id" ref="tc_base_vat"/>
</record>



<!-- TAXES TO BE PAID -->

<!-- VAT -->

<record id="tc_tax" model="account.tax.code">
    <field name="name">Taxes to be paid</field>
    <field name="parent_id" ref="tc_root"/>
</record>

<record id="tc_tax_vat" model="account.tax.code">
    <field name="name">Value Added Tax</field>
    <field name="parent_id" eval="tc_tax"/>
</record>

<record id="tc_tax_vat_output" model="account.tax.code">
    <field name="name">PPN OUT</field>
    <field name="code">>Taxable Sales Rated (10%)</field>
    <field name="parent_id" ref="tc_tax_vat"/>
</record>

<record id="tc_tax_vat_input" model="account.tax.code">
    <field name="name">PPN IN</field>
    <field name="code">>Taxable Purchases Rated (10%)</field>
    <field name="parent_id" ref="tc_tax_vat"/>
    <field name="sign" eval="-1"/>
</record>

<!-- TAXES PPN -->

<record id="tax_input_vat" model="account.tax">
    <field name="name">PPN IN (10%)</field>
    <field name="type">percent</field>
    <field name="amount" eval="0.10"/>
    <field name="account_collected_id" ref="chart_115101000"/>
    <field name="account_paid_id" ref="chart_115101000"/>
    <field name="base_code_id" ref="tc_base_input"/>
    <field name="tax_code_id" ref="tc_tax_vat_input"/>
    <field name="type_tax_use">purchase</field>
</record>

<record id="tax_output_vat" model="account.tax">
    <field name="name">PPN OUT (10%)</field>
    <field name="type">percent</field>
    <field name="amount" eval="0.10"/>
    <field name="account_collected_id" ref="chart_214101000"/>
    <field name="account_paid_id" ref="chart_214101000"/>
    <field name="base_code_id" ref="tc_base_output"/>
    <field name="tax_code_id" ref="tc_tax_vat_output"/>
    <field name="type_tax_use">sale</field>
    <field name="price_include">True</field>
</record>

</data>

</openerp>