<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="view_report_hutang_wizard" model="ir.ui.view">
		<field name="name">Print Laporan Hutang</field>
		<field name="model">wtc.report.hutang.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Laporan Hutang">
	        	<group col="4" colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
	        		<field name="options" required='1'/>
	            	<field name="division"/>
	            	<field name="per_tgl" on_change="per_tgl_change(per_tgl)"/>
	            	<field name="status"/>
	            	<label for="start_date" string="Tanggal Jtp"/>	
	   				<div>
	   					<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
	   				</div>
	   				<label for="trx_start_date" string="Transaction Date"/>	
	   				<div>
	   					<field name="trx_start_date" class="oe_inline"/> - <field name="trx_end_date" class="oe_inline"/>
	   				</div>
	          	</group>
	          
				<notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}"> 
		      		<page string="Branches">
						<field name="branch_ids" colspan="4" nolabel="1"/>
		      		</page>
		           	<page string="Supplier">
		          		<field name="partner_ids" colspan="4" nolabel="1"/>
		          	</page>
		          	<page string="Account">
		          		<field name="account_ids" colspan="4" nolabel="1"/>
		          	</page>
		          	<page string="Journal">
		          		<field name="journal_ids" colspan="4" nolabel="1"/>
		          	</page>
	        	</notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
	          	
	        </form>
    	</field>
    </record>

    <record id="action_report_hutang_wizard" model="ir.actions.act_window">
		<field name="name">Laporan Hutang</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wtc.report.hutang.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_report_hutang_wizard"/>
		<field name="target">new</field>
    </record>

	<menuitem id="menu_hutang_report" parent="wtc_dealer_menu.showroom_report_menu" sequence="6" action="action_report_hutang_wizard"/>

	</data>
</openerp>