<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <!-- Settlement Cancellation -->
    	
    	<record model="ir.ui.view" id="settlement_cancel_tree_view">
            <field name="name">settlement.cancel.tree</field>
            <field name="model">wtc.settlement.cancel</field>
            <field name="arch" type="xml">
                <tree string="Work Order Cancel">
                	<field name="name"/>
                    <field name="branch_id"/>
                    <field name="division"/>
                	<field name="settlement_id"/>
                    <field name="date"/>
                    <field name="state"/>
				</tree>
			</field>
        </record>
        
        <record id="view_settlement_cancel_search" model="ir.ui.view">
            <field name="name">settlement.cancel.search</field>
            <field name="model">wtc.settlement.cancel</field>
            <field name="arch" type="xml">
                <search string="Search Work Order Cancel">
                    <field name="name"/>
                    <field name='branch_id'/>
                    <field name='division'/>
                    <field name='settlement_id'/>
                    <field name='date'/>
                    <field name='state'/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record model="ir.ui.view" id="settlement_cancel_form_view">
            <field name="name">settlement.cancel.form</field>
            <field name="model">wtc.settlement.cancel</field>
            <field name="arch" type="xml">
                
                <form string="Work Order Cancel">
                    <header>
                        <button name="request_approval" string="RFA" states="draft" type="object" class="oe_highlight" groups="wtc_cancel_settlement.group_settlement_cancel_rfa"/>
                        <button name="approve" string="Approve" states="waiting_for_approval" type="object" class="oe_highlight"/>
                        <button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" string="Reject" type="action" context="{'model_name':'settlement.cancel','update_value':{'approval_state':'r','state':'draft'}}"/>
                        <button name="confirm" string="Confirm" states="approved" type="object" class="oe_highlight" groups="wtc_cancel_settlement.group_settlement_cancel_confirm"/>
                        <button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" attrs="{'invisible': [('state','!=','waiting_for_approval')]}" string="Cancel Approval" type="action" context="{'model_name':'wtc.settlement.cancel','update_value':{'approval_state':'b','state':'draft'}}" groups="wtc_cancel_settlement.group_settlement_cancel_cancel_approval"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting_for_approval,approved,confirmed"/>
                    </header>
                    <sheet>
                    	<div class="oe_title">                      
		       				<h1>
					 			<field name="name" class="oe_inline" readonly="1"/>	
		    			    </h1>
	                    </div>
                    	<group col="4">
                            <field name="branch_id" options="{'no_create':True,'no_open':True}" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="division" required="True" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="settlement_id" required="True" options="{'no_create':True,'no_open':True}" domain="[('state','=','done'),('branch_id','=',branch_id),('division','=',division)]" attrs="{'readonly':[('state','!=','draft')]}"/>
                            <field name="date" readonly="True"/>
                            <field name="approval_state"/>
                            <field name="reason" attrs="{'readonly':[('state','!=','draft')]}"/>
                        </group>
                        <notebook>
                        	<page string="Approval">
								<field name="approval_ids">
									<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
										<field name="group_id"/>
										<field name="branch_id"/>
										<field name="division"/>
										<field name="limit"/>
										<field name="sts"/>
										<field name="reason"/>
										<field name="pelaksana_id"/>
										<field name="tanggal"/>
									</tree>
								</field>
							</page>
							<page string="Journal Items" states="confirmed">
								<group col="4">
	                                <field name="period_id" readonly="1"/>
	                            </group>
								<field name="move_ids" readonly="1">
	                               <tree string="Journal Items">
	                                   <field name="move_id"/>
	                                   <field name="branch_id"/>
	                                   <field name="ref"/>
	                                   <field name="date"/>
	                                   <field name="statement_id"/>
	                                   <field name="partner_id"/>
	                                   <field name="account_id"/>
	                                   <field name="name"/>
	                                   <field name="debit"/>
	                                   <field name="credit"/>
	                                   <field name="state"/>
	                                   <field name="reconcile_id"/>
	                               </tree>
	                            </field>
							</page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>
                        </notebook>
                    </sheet>
                </form>
                
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="settlement_cancel_action">
            <field name="name">Settlement Cancel</field>
            <field name="res_model">wtc.settlement.cancel</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        
        <record id="settlement_cancel_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="settlement_cancel_tree_view"/>
            <field name="act_window_id" ref="settlement_cancel_action"/>
        </record>
        
        <record id="settlement_cancel_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="settlement_cancel_form_view"/>
            <field name="act_window_id" ref="settlement_cancel_action"/>
        </record>
        
        <menuitem action="settlement_cancel_action" id="settlement_cancel_menu" parent="wtc_cancellation.showroom_cancellation_menu" sequence="1"/>
	</data>
</openerp>