<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="teds_fiscalyear_close_view_form" model="ir.ui.view">
            <field name="name">teds.fiscalyear.close.form</field>
            <field name="model">teds.fiscalyear.close</field>
            <field name="arch" type="xml">
                <form string="Generate Fiscal Year Closing Entries">
                    <separator string="Generate Fiscal Year Closing Entries"/>
                    <label string="This wizard will generate the end of year journal entries of selected fiscal year. Note that you can run this wizard many times for the same fiscal year: it will simply add the incremental balance."/>
                    <newline/>
                    <group col="4">
                        <field name="fy_id" domain = "[('state','=','draft')]"/>
                        <field name="journal_id"/>
                        <field name="period_id" domain ="[('state','=','draft'),('fiscalyear_id','=',fy_id),('special','=', True)]" />
                        <field name="report_name"/>
                    </group>
                    <notebook colspan="5">
                        <page string="Branches">
                            <field name="branch_ids" colspan="4" nolabel="1"/>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Create" name="data_save" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="teds_fiscalyear_close_action" model="ir.actions.act_window">
            <field name="name">Generate Closing Entries</field>
            <field name="res_model">teds.fiscalyear.close</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="teds_fiscalyear_close_view_form"/>
            <field name="target">new</field>
        </record>

        <menuitem action="teds_fiscalyear_close_action"
            id="teds_fiscalyear_close_menu_action"
            parent="account.menu_account_end_year_treatments" />

    </data>
</openerp>
