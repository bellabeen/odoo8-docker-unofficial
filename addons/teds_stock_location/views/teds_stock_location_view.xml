<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_stock_location_dashboard_tree" model="ir.ui.view">
			<field name="name">teds.stock.location.dashboard.tree</field>
			<field name="model">teds.stock.location.dashboard</field>
			<field name="arch" type="xml">
				<tree string="Stock Location" create="false" edit="false">
					<field name="branch_id"/>
					<field name="location"/>
					<field name="jenis_lokasi"/>
					<field name="start_date"/>
					<field name="end_date"/>
					<field name="kapasitas"/>
					<field name="qty_stock" sum="Total"/>
				</tree>
			</field>
		</record>

		<record id="view_teds_stock_location_dashboard_graph" model="ir.ui.view">
            <field name="name">teds.stock.location.dashboard.draph</field>
            <field name="model">teds.stock.location.dashboard</field>
            <field name="arch" type="xml">
                <graph string="Stock Location" type="bar">
                    <field name="location"/>
                    <field name="qty_stock" operator="+"/>
                </graph>
            </field>
        </record>


	    <record id="action_teds_stock_loaction_dashboard" model="ir.actions.server">
            <field name="name">Stock Location Unit</field>
            <field name="model_id" ref="teds_stock_location.model_teds_stock_location_dashboard"/>
            <field name="code">
                action = env['teds.stock.location.dashboard'].action_stock_location()
            </field>
        </record>

        <menuitem id="teds_dashboard_menu" parent="mail.mail_feeds_main" sequence="60" name="Dashboard"/>
		<menuitem id="teds_stock_loaction_dashboard_menuitem"  parent="teds_dashboard_menu" sequence="1" action="action_teds_stock_loaction_dashboard"/> 
	</data>
</openerp>