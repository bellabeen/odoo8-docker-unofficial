<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		
		<record model="ir.ui.view" id="penyerahan_bpkb_tree_view">
		    <field name="name">penyerahan.bpkb.tree</field>
		    <field name="model">wtc.penyerahan.bpkb</field>
		    <field name="arch" type="xml">
		        <tree string="List Penyerahan BPKB">
		        	<field name="name"/>
		            <field name="branch_id"/>
					<field name="division"/>		            
		            <field name="partner_id"/>	
		            <field name="penerima"/>	
		            <field name="tanggal"/>	  
		            <field name="state"/>	            
		        </tree>
		     </field>
		</record>
 
		<record model="ir.ui.view" id="penyerahan_bpkb_form_view">
		    <field name="name">penyerahan.bpkb.form</field>
		    <field name="model">wtc.penyerahan.bpkb</field>
		    <field name="arch" type="xml">
		        <form string="Form Penyerahan BPKB">
				<header>
						<button name="post_penyerahan" groups='wtc_penyerahan_stnk.group_wtc_penyerahan_bpkb_post' type="object" states="draft" string="Post" class="oe_highlight"/>	
						<button name="%(report_penyerahan_bpkb)d" attrs="{'invisible': ['|',('partner_type','=','customer'),('state','!=','posted')]}"  string="Print Leasing" type="action" class="oe_highlight"/>

						<button name="%(report_penyerahan_bpkb_user)d" attrs="{'invisible': ['|',('partner_type','=','fincoy'),('state','!=','posted')]}"  string="Print User" type="action" class="oe_highlight"/> 
			

						<field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"draft":"red","approved":"blue"}'/>	
           		</header>		        	
		        	<sheet>
			        	<div class="oe_title">
			        		<h2>
				                <label string="Penyerahan BPKB"/>    			
				 				<field name="name" class="oe_inline"/>
			 				</h2>
			        	</div>       
						<group col="2" colspan="2">   
							<group>
								<field name="branch_id" options="{'no_create': True,'no_open': True}" attrs="{'readonly': ['|',('state','!=','draft'),'|',('cetak_ke','&gt;','0'),('name','!=',False)]}" />
							</group>            
						    <group>
	                    		<field name="division" required="1" attrs="{'readonly': ['|','|',('penyerahan_line','&lt;&gt;',[]), ('state','!=','draft'),('cetak_ke','&gt;','0')]}" />
	                    	</group>
	                    	<group>
							    <field name="partner_type" required="1" on_change='onchange_partner_type(partner_type)' attrs="{'readonly': [('state','!=','draft')]}"/>
	                    		<field name="partner_id" required="1" on_change="onchange_partner(partner_id,penerima)" options="{'no_create': True,'no_open': True}" attrs="{'readonly': ['|',('state','!=','draft'),('cetak_ke','&gt;','0')]}" />		                    			                    		
							    <field name="penerima" required="1" on_change="onchange_partner(partner_id,penerima)" attrs="{'readonly': ['|',('state','!=','draft'),('cetak_ke','&gt;','0')]}" />					            					      
								<field name="keterangan" attrs="{'readonly': ['|',('state','!=','draft'),('cetak_ke','&gt;','0')]}"/>						               
																    		                    	
							</group>
				            <group>  
								<field name="tanggal" required="1" attrs="{'readonly': ['|','|','|',('state','=','draft'),('state','=','posted'),('cetak_ke','&gt;','0'),('state','=','cancel')]}"/>						               
								<field name="tgl_penyerahan_bpkb" attrs="{'readonly': [('state','!=','draft')]}"/>						               																	            	
								<field name="cetak_ke" attrs="{'readonly': ['|','|','|',('state','=','draft'),('state','=','posted'),('cetak_ke','&gt;','0'),('state','=','cancel')]}"/>
							</group>   
						</group>	
						
						<notebook colspan="5">
		                    <page string="Engine line">
		                        <field colspan="4" name="penyerahan_line" nolabel="1" widget="one2many_list" attrs="{'readonly': ['|',('state','!=','draft'),('cetak_ke','&gt;','0')]}">
		                            <tree string="" editable="bottom">
						                <field name="name" required="1" options="{'no_create': True,'no_open': True}" on_change="onchange_engine(name,parent.branch_id,parent.division,parent.partner_id,parent.penerima,)"/>
						                <field name="customer_stnk"/>
						                <field name="no_bpkb"/>
						                <field name="no_urut"/>
						                <field name="tgl_ambil_bpkb" required="1"/>
						             </tree>
		                        </field>
		                    </page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
										<field name="cancel_uid" readonly="1"></field>
										<field name="cancel_date" readonly="1"></field>
									</group>
								</group>
							</page>		                    
		                </notebook>				
		           </sheet>
		        </form>
		    </field>
		</record>
 		<record id="view_penyerahan_bpkb_filter" model="ir.ui.view">
            <field name="name">penyerahan.bpkb.list.select</field>
            <field name="model">wtc.penyerahan.bpkb</field>
            <field name="arch" type="xml">
                <search string="Search Penyerahan BPKB">
                    <field name="name" string="Reference"/>
                    <field name="branch_id"/> 
                    <field name="engine_no"/> 
                    <field name="customer_stnk"/> 
                    <field name="no_bpkb"/>
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="post" string="Posted" domain="[('state','=','posted')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter string="Tanggal" icon="terp-go-month" domain="[]" context="{'group_by':'tanggal'}"/>                    
                    </group>
                </search>
            </field>
        </record>				
		<record model="ir.actions.act_window" id="penyerahan_bpkb_action">
		    <field name="name">Penyerahan BPKB</field>
		    <field name="res_model">wtc.penyerahan.bpkb</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_penyerahan_bpkb_filter"/>
			<field name="context">{"search_default_draft":1}</field>		    
		    			</record>
					
		<menuitem id="penyerahan_bpkb_submenu" name="Penyerahan BPKB" parent="wtc_dealer_menu.stnk_bpkb_proses_stnk_menu"  action="penyerahan_bpkb_action" sequence="60"/> 				  
	</data>
</openerp>
															