<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="wtc_questionnaire_form_view" model="ir.ui.view">
            <field name="name">wtc.questionnaire.form</field>
            <field name="model">wtc.questionnaire</field>
            <field name="arch" type="xml">
                <form string="Questionnair">                              
				<sheet>
                    <group col="2" colspan="2">
						<group>
							<field name="type"/>
							<field name="name"/>
							<field name="value"/>
							<field name="position"/>					
						</group>
		            </group>
            		<notebook>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>
					</notebook>		            
		          </sheet>		 
                </form>
            </field>
        </record>

        <record id="wtc_questionnaire_tree_view" model="ir.ui.view">
            <field name="name">wtc.questionnaire.tree</field>
            <field name="model">wtc.questionnaire</field>
            <field name="arch" type="xml">
				<tree>
					<field name="type"/>
					<field name="name"/>
					<field name="value"/>
					<field name="position"/>					
				</tree>
            </field>
        </record>

 		<record id="view_questionnaire_filter" model="ir.ui.view">
            <field name="name">wtc.questionnaire.list.select</field>
            <field name="model">wtc.questionnaire</field>
            <field name="arch" type="xml">
                <search string="Search Questionnaire">
                    <field name="name"/>
                    <field name="type"/> 
                    <group expand="0" string="Group By">
                        <filter string="Type" icon="terp-partner" domain="[]" context="{'group_by':'type'}"/>
                        <filter string="Question" icon="terp-go-month" domain="[]" context="{'group_by':'name'}"/>                       	                        	                    
                    </group>
                </search>
            </field>
        </record>        
                        
        <record model="ir.actions.act_window" id="questionnaire_action">
		    <field name="res_model">wtc.questionnaire</field>
		    <field name="name">Questionnaire</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_questionnaire_filter"/>
		</record>
		
		<menuitem id="questionnaire_submenu" name="Questionnaire" parent="wtc_dealer_menu.stnk_bpkb_configuration_menu" sequence="30" action="questionnaire_action"/>
        
	</data>
</openerp>