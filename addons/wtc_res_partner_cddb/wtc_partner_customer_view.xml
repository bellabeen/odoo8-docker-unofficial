<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
        
        <record id="wtc_res_partner_form_view2" model="ir.ui.view">
            <field name="name">wtc.res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form>                              
				<sheet>
                    <div class="oe_title">
                        <h1>
                        	<label string="Customers"/> 
		        			<field name="default_code" placeholder="Partner Code" readonly="1" attrs="{'invisible':[('rel_code','!=',False)]}"/>
		        			<field name="rel_code" readonly="1" attrs="{'invisible':[('rel_code','=',False)]}"/> 
		        			<field name="journal_item_count" invisible="1"/>
		        						        				  
                        </h1>
                    </div>
                   
                    <group>
                    	<group>
                    		<field name="name" default_focus="1" placeholder="Name" attrs="{'readonly':[('journal_item_count','!=',0)]}"/>
                    		<field name='branch_id' required='1' options="{'no_create': True,'no_open': True}" placeholder='Branch'/>                 			
              	     		<field name="no_ktp" on_change="onchange_punctuation(no_ktp)"/> 
                    		<field name="birthday"/>
                    		<field name="mobile" on_change="change_nomor(mobile,phone)" required="1"/>
                    		<field name="gender"/>	
                    	</group>
                            
                    	 <group>
                    	 	<field name="phone" on_change="change_nomor(mobile,phone)"/>
                    	 	<field name="fax"/>
                    	 	<field name="email" widget="email" ></field>
                    	 	<field name="religion"/>
                    	 	<field name="user_id" options="{'no_create': True,'no_open': True}"/>
                    	 </group>                   	
						
                    	 <group>
						<label for="address" string="Address"/>
    					<div>
                         <field name="street" placeholder="Street..." on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" required="1"/>
                            <div>
                            	<field name="street2" placeholder="Street" style="width: 50%%" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)"/>
                            	<field name="rt" placeholder="RT" style="width: 25%%" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" required="1"/>
								<field name="rw" placeholder="RW" style="width: 25%%" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" required="1"/>
								<field name="state_id" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" class="oe_no_button" placeholder="Province" style="width: 50%%" options="{'no_create': True,'no_open': True}" required="1"/>
								<field name="city_id" options="{'no_create': True,'no_open': True}" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" placeholder="City" style="width: 50%%" required="1"/>
								<field name="kecamatan_id" options="{'no_create': True,'no_open': True}" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" placeholder="Kecamatan" style="width: 50%%" required="1"/>
								<field name="kecamatan" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" placeholder="Kecamatan" style="width: 50%%" required="1"/>						
								<field name="zip_id" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" placeholder="ZIP" style="width: 50%%" options="{'no_create': True,'no_open': True}" required="1"/>                               	
                                <field name="kelurahan" on_change="onchange_address(street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)" class="oe_no_button" placeholder="Kelurahan" style="width: 50%%" required="1"/>
                            </div>                              
                          </div>	
                        </group>
                        <group>
	                        <label for="letter_address" string="Letter Address"/>					
	    					<div>
	    					 	<field name="sama" string="Sama dengan header address" on_change="onchange_letter(sama,street,street2,rt,rw,state_id,city_id,kecamatan_id,kecamatan,zip_id,kelurahan)"/>   						
								<field name="street_tab" placeholder="Street..." attrs="{'invisible': [('sama','=', True)]}"/>
		                        <div>
		                        	<field name="street2_tab" placeholder="Street" style="width: 50%%" attrs="{'invisible': [('sama','=', True)]}"/>
		                        	<field name="rt_tab" placeholder="RT" style="width: 25%%" attrs="{'invisible': [('sama','=', True)]}"/>
									<field name="rw_tab" placeholder="RW" style="width: 25%%" attrs="{'invisible': [('sama','=', True)]}"/>
									<field name="state_tab_id" class="oe_no_button" placeholder="Province" attrs="{'invisible': [('sama','=', True)]}" style="width: 50%%" options="{'no_create': True,'no_open': True}"/>
									<field name="city_tab_id" options="{'no_create': True,'no_open': True}" placeholder="City" style="width: 50%%" attrs="{'invisible': [('sama','=', True)]}"/>
									<field name="kecamatan_tab_id" options="{'no_create': True,'no_open': True}" placeholder="Kecamatan" style="width: 50%%" attrs="{'invisible': [('sama','=', True)]}" />
									<field name="kecamatan_tab" placeholder="Kecamatan" style="width: 50%%"  attrs="{'invisible': [('sama','=', True)]}"/>
									<field name="zip_tab_id" placeholder="ZIP" style="width: 50%%" options='{"no_open": True}' attrs="{'invisible': [('sama','=', True)]}"/>
		                            <field name="kelurahan_tab" class="oe_no_button" placeholder="Kelurahan" style="width: 50%%" attrs="{'invisible': [('sama','=', True)]}" />
		                        </div>                         
		                    </div> 
		                    
		                <field name="pkp" on_change="onchange_pkp(pkp)"/>
		                <field name="npwp" attrs="{'invisible': [('pkp','!=',True)],'required': [('pkp','=',True)]}"/> 
		                <field name="alamat_pkp" attrs="{'invisible': [('pkp','!=',True)],'required': [('pkp','=',True)]}"/>
		                
		                  
		                </group>
		                                     
                    </group>
                    <notebook>
                        <page name='internal_notes' string="Internal Notes">
                            <field name="comment" placeholder="Put an internal note..."/>
                        </page>						
                    	<page string="CDDB">
							<field name="cddb_line" context="{'customer_id': active_id}">
								<tree string="CDDB">
									<field name="cddb_code"></field>
									<field name="name"/>
									<field name="no_ktp"/>
									<field name="no_hp"/>
									<field name="agama_id" options="{'no_create': True,'no_open': True}"/>
									<field name="pendidikan_id" options="{'no_create': True,'no_open': True}"/>
									<field name="pekerjaan_id" options="{'no_create': True,'no_open': True}"/>
									<field name="pengeluaran_id" options="{'no_create': True,'no_open': True}"/>
								</tree>
							</field>
						</page>	                    	
	                    <page string="Kartu Keluarga">
	                    	<group>
	                    		<field name="no_kk"/>
	                    	</group>
	                    	
				 			<field name="kartukeluarga_ids">
								<tree string="Kartu Keluarga" editable="bottom">
									<field name="name"/>
									<field name="nik"/>
									<field name="tgl_lahir"/>
									<field name="hub"/>						
								</tree>
							</field>	
			 			</page>
                    	
                    </notebook>                  
                  </sheet>
                </form>
            </field>
        </record>      
               
		<record model="ir.ui.view" id="wtc_partner_customer_tree_view3">
		    <field name="name">wtc.partner.customer.tree</field>
		    <field name="model">res.partner</field>
		    <field name="arch" type="xml">		    		        	
                <tree string="Customers">
	                <field name="name"/>
	                <field name="rel_code"/>
					<field name="phone"/>	                
	                <field name="mobile"/> 
	                <field name="email"/>																	                
                </tree>
		     </field>
		</record>	
       <record id="view_customer_only_filter" model="ir.ui.view">
            <field name="name">customer.only.form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Search">
                   <field name='branch_id'/>
                   <field name="name"/>
				   <field name="no_ktp"/>
				   <field name="default_code"/>
                   <field name="mobile"/>                   
                   <filter string="Branches" name="branch_ids"/>                            
                </search>
            </field>
        </record>		
		<record model="ir.actions.act_window" id="wtc_partner_customer_action_view">
		    <field name="name">Customers</field>
		    <field name="res_model">res.partner</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="domain">[('direct_customer','!=',False)]</field>    
		    <field name="context" eval="{'form_name': 'Customers','search_default_branch_ids':1}"/>	
		    <field name="search_view_id" ref="view_customer_only_filter"/> 	
		</record>
		
		<record id="view_res_partner_customer_tree" model="ir.actions.act_window.view">
			<field name="view_mode">tree</field>
			<field name="view_id" ref="wtc_partner_customer_tree_view3" />
			<field name="act_window_id" ref="wtc_partner_customer_action_view" />
		</record>

		<record id="view_res_partner_customer_form" model="ir.actions.act_window.view">
			<field name="view_mode">form</field>
			<field name="view_id" ref="wtc_res_partner_form_view2" />
			<field name="act_window_id" ref="wtc_partner_customer_action_view" />
		</record>
					
		<menuitem id="wtc_partner_customer_submenu" name="Customers" parent="wtc_dealer_menu.showroom_sales_menu"  action="wtc_partner_customer_action_view" sequence="1"/>
        <menuitem id="menu_supplier_for_ga" name="Suppliers" parent="wtc_dealer_menu.ga_purchase_menu" action="base.action_partner_supplier_form" sequence="1"/>        										
					 	
	</data>
</openerp>
															