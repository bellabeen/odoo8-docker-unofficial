<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<record id="view_register_kwitansi_tree" model="ir.ui.view">
            <field name="name">wtc.register.kwitansi.line.tree</field>
            <field name="model">wtc.register.kwitansi.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Register Kwitansi" create="0" delete="0">                   
                    <field name="name"/>
                    <field name="branch_id" />
                    <field name="payment_id"/>
           			<field name="state"/>
                </tree>
            </field>
     </record>
		 <record id="view_register_kwitansi_line_search" model="ir.ui.view">
            <field name="name">wtc.register.kwitansi.line.search</field>
            <field name="model">wtc.register.kwitansi.line</field>
            <field name="arch" type="xml">
                <search string="Search Register Kwitansi">
                	<field name='name'/>
        			<field name='branch_id'/>
        			<field name='payment_id'/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}"/>
               
                    </group>
                </search>
            </field>
        </record>     
     <record id="view_register_kwitansi_form" model="ir.ui.view">
            <field name="name">wtc.register.kwitansi.form</field>
            <field name="model">wtc.register.kwitansi.line</field>            
            <field name="arch" type="xml">
                <form string="Register Kwitansi" create="0" edit="0" delete="0">
                	
                   	<group col="4">
                	<field name="name"/>
                    <field name="branch_id"/>
                    <field name="payment_id"/>
					<field name="reason"/>                    
           			<field name="state"/>
           			</group>
                </form>
             </field>
      </record>
                
     
	
		
		<record model="ir.actions.act_window" id="wtc_register_kwitansi_action">
		    <field name="name">Register Kwitansi</field>
		    <field name="res_model">wtc.register.kwitansi.line</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
       	<menuitem action="wtc_register_kwitansi_action" id="menu_wtc_register_kwitansi" parent="wtc_dealer_menu.showroom_configuration_menu" />
	</data>
</openerp>