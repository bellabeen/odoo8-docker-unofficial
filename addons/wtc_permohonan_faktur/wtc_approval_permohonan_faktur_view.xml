<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

	<record id="wtc_approval_permohonan_faktur_form_view" model="ir.ui.view">
		<field name="name">wtc.approval.permohonanfaktur.form</field>
		<field name="model">wtc.permohonan.faktur</field>
		<field name="inherit_id" ref="permohonan_faktur_form_view"/>
		<field name="arch" type="xml">
	
			<button name="post_permohonan" position="after">
				<button name="approval_request" groups='wtc_permohonan_faktur.group_wtc_permohonan_faktur_rfa' string="RFA" type="workflow" class="oe_highlight" attrs="{'invisible': ['|','|',('state','=','waiting_for_approval'),('exception_faktur','=',False),'|',('state','=','approved'),('state','=','cancel')]}"/>	
				<button name="approval_approve" states="waiting_for_approval" string="Approve" type="workflow" class="oe_highlight"/>
				<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'wtc.permohonan.faktur','next_workflow':'approval_reject'}"/>
				<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" groups='wtc_permohonan_faktur.group_wtc_permohonan_faktur_cancel_approval' states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'wtc.permohonan.faktur','next_workflow':'approval_cancel'}"/>
								
			</button> 
								
			<field name="ahm_code" position="after">
				<field name="approval_state" attrs="{'invisible': [('exception_faktur','=',False)]}"/>
			</field>
				
			<xpath expr="//page[@string='Engine line']" position="after">
				<page string="Approval" attrs="{'invisible': [('exception_faktur','=',False)]}">
					<field name="approval_ids" >
						<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
							<field name="group_id" />
							<field name="branch_id"/>
							<field name="division"/>
							<field name="limit"/>
							<field name="sts"/>
							<field name="reason"/>
							<field name="pelaksana_id"/>
							<field name="tanggal"/>
						</tree>
					</field>
				</page>
				<page string="Audit Trail">
					<group>
						<group>
							<field name="create_uid" readonly="1"></field>
							<field name="create_date" readonly="1"></field>
							<field name="confirm_uid" readonly="1"></field>
							<field name="confirm_date" readonly="1"></field>
						</group>
						<group>							
							<field name="write_uid" readonly="1"></field>
							<field name="write_date" readonly="1"></field>
							<field name="cancel_uid" readonly="1"></field>
							<field name="cancel_date" readonly="1"></field>
						</group>
					</group>
				</page>				
			</xpath>
		</field>
	</record>
	  

	          
 	</data>
 </openerp>
       		
       		
	