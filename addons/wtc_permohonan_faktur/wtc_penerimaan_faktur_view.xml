<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		
		<record model="ir.ui.view" id="penerimaan_faktur_tree_view">
		    <field name="name">penerimaan.faktur.tree</field>
		    <field name="model">wtc.penerimaan.faktur</field>
		    <field name="arch" type="xml">
		        <tree string="List penerimaan Faktur">
		        	<field name="name"/>
		            <field name="branch_id"/>
					<field name="division"/>		            
		            <field name="partner_id"/>	
		            <field name="state"/>	            
		        </tree>
		     </field>
		</record>
 
		<record model="ir.ui.view" id="penerimaan_faktur_form_view">
		    <field name="name">penerimaan.faktur.form</field>
		    <field name="model">wtc.penerimaan.faktur</field>
		    <field name="arch" type="xml">
		        <form string="Form penerimaan Faktur">
				<header>
						<button name="post_penerimaan" groups='wtc_permohonan_faktur.group_wtc_penerimaan_faktur_post' type="object" states="draft" string="Post" class="oe_highlight"/>		
						<button name="cancel_penerimaan" groups='wtc_permohonan_faktur.group_wtc_penerimaan_faktur_cancel' type="object" states="posted,draft" string="Cancel" confirm="Apa anda yakin ingin membatalkan transaksi ini ?"/>		
						<field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"draft":"red","approved":"blue"}'/>	
           		</header>		        	
		        	<sheet>
			        	<div class="oe_title">
			        		<h2>
				                <label string="Penerimaan Faktur STNK"/>    			
				 				<field name="name" class="oe_inline"/>
			 				</h2>
			        	</div>       
						<group col="2" colspan="2">   
							<group>
								<field name="branch_id" options="{'no_create': True,'no_open': True}" attrs="{'readonly': ['|',('state','!=','draft'),('name','!=',False)]}" on_change="onchange_branch_penerimaan_faktur(branch_id)"/>
							</group>            
						    <group>
	                    		<field name="division" required="1" attrs="{'readonly': [('state','!=','draft')]}"/>
	                    	</group>
	                    	<group>
							    <field name="partner_id"/>	
							    <field name="ahm_code"/>					    
	                    	</group>
				            <group>  
								<field name="tgl_terima" required="1" readonly="1"/>						               
							</group>   
						</group>
	                    <notebook colspan="5">
	                        <page string="Engine line">
	                            <field colspan="4" name="penerimaan_line" nolabel="1" widget="one2many_list" attrs="{'readonly': [('state','!=','draft')]}">
	                                <tree string="" editable="bottom">
						                <field name="name" required="1" on_change="onchange_engine(name)" options="{'no_create': True,'no_open': True}"/>
						                <field name="chassis_no"/>
										<field name="customer_stnk"/>						                
						                <field name="tgl_cetak_faktur" attrs="{'readonly':[('name','=',False)]}"/>  
						                <field name="faktur_stnk" on_change="onchange_faktur_stnk(faktur_stnk)" attrs="{'readonly': [('name','=',False)]}"/>																		                
						            </tree>
	                            </field>
	                        </page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
										<field name="cancel_uid" readonly="1"></field>
										<field name="cancel_date" readonly="1"></field>
									</group>
								</group>
							</page>	                        
	                    </notebook>						
		           </sheet>			           
		        </form>
		    </field>
		</record>
 		<record id="view_penerimaan_faktur_filter" model="ir.ui.view">
            <field name="name">penerimaan.faktur.list.select</field>
            <field name="model">wtc.penerimaan.faktur</field>
            <field name="arch" type="xml">
                <search string="Search Penerimaan Faktur">
                    <field name="name" string="Reference"/>
                    <field name="branch_id"/> 
                    <field name="engine_no"/> 
                    <field name="customer_stnk"/> 
                    <field name="partner_id" string="Supplier"/> 
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="post" string="Posted" domain="[('state','=','posted')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter string="Tanggal" icon="terp-go-month" domain="[]" context="{'group_by':'tgl_terima'}"/>                    
                    </group>
                </search>
            </field>
        </record>  
                  
		<record model="ir.actions.act_window" id="penerimaan_faktur_action">
		    <field name="name">Penerimaan Faktur STNK</field>
		    <field name="res_model">wtc.penerimaan.faktur</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_penerimaan_faktur_filter"/>
			<field name="context">{"search_default_draft":1}</field>		    
		</record>
			
		<menuitem id="penerimaan_faktur_submenu" name="Penerimaan Faktur" parent="wtc_dealer_menu.stnk_bpkb_permohonan_faktur_menu"  action="penerimaan_faktur_action" sequence="30"/> 				  
	</data>
</openerp>
															