<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_teds_export_bank_mutasi_wizard" model="ir.ui.view">
			<field name="name">teds.export.bank.mutasi.wizard</field>
			<field name="model">teds.export.bank.mutasi</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Export Bank Reconcile">
					<group attrs="{'invisible':[('state_x','=','get')]}">
						<group>
							<field name="options" required="1"/>
							<field name="status" required="1"/>
							<!-- <field name="tgl_upload"/> -->
							<!-- <field name="coa"/> -->
							<label for="start_date" string="Periode Mutasi"/>
							<div>
								<field name="start_date" class="oe_inline"/>
								<field name="end_date"/>
							</div>
						</group>
						<group>
							<field name="branch_id" options="{'no_create': True,'no_open': True}"/>
							<field name="account_id" options="{'no_create': True,'no_open': True}"/>
							<!-- <field name="tgl_mutasi"/> -->
						</group>
					</group>

                	<field invisible="1" name="state_x"/>                
                	<newline/>    
                	<group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
	                    <separator colspan="4" string="Excel Export Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                </group> 
	                <footer>
	                    <button name="excel_report" string="Export Data" type="object" class="oe_highlight" attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <label string=" or " attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <button string="Cancel" special="cancel" class="btn btn-default" attrs="{'invisible':[('state_x','=','get')]}"/>
	                </footer>
				</form>
			</field>
		</record>

		<record id="action_teds_export_bank_mutasi_wizard" model="ir.actions.act_window">
			<field name="name">Export Bank Mutasi</field> 
			<field name="res_model">teds.export.bank.mutasi</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_teds_export_bank_mutasi_wizard"/>
			<field name="target">new</field>
		</record>

	  	<menuitem id="teds_export_bank_mutasi_menuitem" parent="bank_reconcile_submenu"  action="action_teds_export_bank_mutasi_wizard" sequence="30"/> 
	</data>
</openerp>