<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_so_asset_bakso_wizard" model="ir.ui.view">
			<field name="name">teds.so.asset.bakso.wizard</field>
			<field name="model">teds.stock.opname.asset.bakso.wizard</field>
			<field name="arch" type="xml">
				<form string="Berita Acara SO">
					<sheet>
						<group>
							<field name="opname_id" readonly="1" options="{'no_open':True,'no_create':True}"/>
							<field name="note_bakso"/>
						</group>
						<footer>
		                    <button name="action_submit_bakso" string="Print" type="object" class="oe_highlight" />
		                    <button string="Close" class="oe_link" special="cancel" />
		                </footer>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_teds_stock_opname_asset_tree" model="ir.ui.view">
			<field name="name">teds.stock.opname.asset.tree</field>
			<field name="model">teds.stock.opname.asset</field>
			<field name="arch" type="xml">
				<tree string="Stock Opname Asset">
					<field name="name"/>
					<field name="branch_id"/>
					<field name="date"/>
					<field name="generate_date"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		
		<record id="view_teds_stock_opname_asset_form" model="ir.ui.view">
			<field name="name">teds.stock.opname.asset.form</field>
			<field name="model">teds.stock.opname.asset</field>
			<field name="arch" type="xml">
				<form string="Stock Opname Asset">
					<header>
	                	<button name="action_generate_stock" attrs="{'invisible':['|',('create_date','=',False),('generate_date','!=',False)]}" string="Generate Stock" class="oe_highlight" type="object" groups="teds_stock_opname_asset.group_teds_so_asset_generate_stock_button"/>

	                	<button name="action_post" attrs="{'invisible':['|',('state','!=','draft'),('generate_date','=',False)]}" string="Post" class="oe_highlight" type="object" confirm="Harap pastikan kembali validasi asset sudah sesuai antara fisik dan sitem ! Untuk asset yang tidak tercatat dalam sistem wajib diisi pada kolom Asset Tidak Tercatat Sistem !!!" groups="teds_stock_opname_asset.group_teds_so_asset_posted_button"/>

	                	<button name="action_print_validasi" states="posted" string="Print Validasi" class="oe_highlight" type="object"/>

	                	<button name="action_bakso" states="posted" string="Berita Acara SO" type="object"/>

	                	<button name="action_download_excel" type="object" string="Download Excel" attrs="{'invisible':[('generate_date','=',False)]}"/>
	                	<field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
	                </header>
					<div class="oe_title">                      
							<h1>
							<field name="name" readonly="1"/>
						</h1>
					</div>
					<group>
						<group>
							<field name="branch_id" options="{'no_open':True,'no_create':True}" attrs="{'readonly':[('create_date','!=',False)]}" required="1"/>
							<field name="create_date" invisible="1"/>
							<field name="pdi" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="adh" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="soh" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
						</group>
						<group>
							<field name="date" readonly="1"/>
							<field name="kategory" required="1" attrs="{'readonly':[('generate_date','!=',False)]}"/>
							<field name="status" required="1" attrs="{'readonly':[('generate_date','!=',False)]}"/>
							<field name="generate_date" readonly="1" attrs="{'invisible':[('generate_date','=',False)]}"/>
						</group>
					</group>
					<notebook>
						<page string="Data Stock Asset">
							<field name="detail_ids" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
								<tree create="false" delete="false" editable="top">
									<field name="code" readonly="1"/>
									<field name="name" readonly="1"/>
									<field name="kategory" readonly="1"/>
									<field name="validasi_lokasi" attrs="{'required':[('validasi_lokasi','!=',False)]}"/>
									<field name="validasi_pic" attrs="{'required':[('validasi_lokasi','!=',False)]}"/>
									<field name="validasi_kondisi_fisik" attrs="{'required':[('validasi_lokasi','!=',False)]}"/>
									<field name="no_mesin" attrs="{'readonly':[('kategory','!=','V')],'required':[('validasi_lokasi','!=',False),('kategory','=','V')]}"/>
									<field name="keterangan" attrs="{'required':[('validasi_lokasi','in',('Tidak Ada','Hilang'))]}"/>
								</tree>
							</field>
						</page>
						<page string="Asset Tidak Tercatat Sistem" attrs="{'invisible':[('generate_date','=',False)]}">
							<field name="other_asset_ids" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
								<tree editable="top">
									<field name="name" required="1"/>
									<field name="lokasi_fisik_unit" required="1"/>
									<field name="pic" required="1"/>
									<field name="kondisi_fisik" required="1"/>
									<field name="no_mesin"/>
									<field name="keterangan" attrs="{'required':[('lokasi_fisik_unit','in',('Tidak Ada','Hilang'))]}"/>
								</tree>
							</field>
						</page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"/>
									<field name="create_date" readonly="1"/>
									<field name="post_uid" readonly="1" attrs="{'invisible':[('post_uid','=',False)]}"/>
									<field name="post_date" readonly="1" attrs="{'invisible':[('post_date','=',False)]}"/>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>		                 
					</notebook>
				</form>
			</field>
		</record>

		<record id="action_teds_stock_opname_asset" model="ir.actions.act_window">
        	<field name="name">Asset</field>
			<field name="res_model">teds.stock.opname.asset</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<!-- Print Validasi -->
		<report 
            string="Print Validasi SO Asset" 
            id="action_teds_stock_opname_asset_print_validasi" 
            model="teds.stock.opname.asset" 
            report_type="qweb-pdf"
            name="teds_stock_opname_asset.teds_stock_opname_asset_print_validasi" 
            file="teds_stock_opname_asset.teds_stock_opname_asset_print_validasi" 
            menu="False"/>
		
		<!-- Print Bakso -->
		<report 
            string="Print Bakso Asset" 
            id="action_teds_stock_opname_asset_print_bakso" 
            model="teds.stock.opname.asset.bakso.wizard" 
            report_type="qweb-pdf"
            name="teds_stock_opname_asset.teds_stock_opname_asset_print_bakso" 
            file="teds_stock_opname_asset.teds_stock_opname_asset_print_bakso" 
            menu="False"/>


		<menuitem id="teds_stock_opname_asset_menuitem" action="action_teds_stock_opname_asset" parent="teds_stock_opname.stock_opname_sub_menu" sequence="5"/>
	</data>
</openerp>