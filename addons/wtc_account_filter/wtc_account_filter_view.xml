<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		 <record id="view_wtc_account_filter_tree" model="ir.ui.view">
            <field name="name">wtc.account.filter.tree</field>
            <field name="model">wtc.account.filter</field>
            <field name="arch" type="xml">
                <tree string="Account Filter">
	                <field name="name"/>
	                <field name="type"/>
					<field name="user_type"/>
					<field name="prefix"/>
                </tree>
            </field>
        </record>
        
         <record id="view_wtc_account_filter_form" model="ir.ui.view">
            <field name="name">wtc.account.filter.form</field>
            <field name="model">wtc.account.filter</field>
            <field name="arch" type="xml">
                <form string="Account Filter">
                	
                	<group>
                	   <field name="name" required="True"/>
                	   <field name="prefix" />
                	   <field name="type"/>
                	   <field name="user_type"/>
                	</group>
	                <notebook>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>                	
	                </notebook>                    	
                </form>
            </field>
        </record>
		
		 <record model="ir.actions.act_window" id="wtc_account_filter">
		    <field name="name">Account Filter</field>
		    <field name="res_model">wtc.account.filter</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>

        <menuitem id="wtc_account_filter_menuitem" name="Account Filter" parent="wtc_dealer_menu.backoffice_configuration_menu" action="wtc_account_filter" sequence="10"/>
	</data>
</openerp>		