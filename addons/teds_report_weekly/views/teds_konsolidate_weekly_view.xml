<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_teds_report_weekly_konsolidate_tree" model="ir.ui.view">
            <field name="name">teds.report.weekly.konsolidate.tree</field>
            <field name="model">teds.report.weekly.konsolidate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="area_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="view_teds_report_weekly_konsolidate_form" model="ir.ui.view">
            <field name="name">teds.report.weekly.konsolidate.form</field>
            <field name="model">teds.report.weekly.konsolidate</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_generate_weekly" type="object" string="Generate Weekly" groups="teds_report_weekly.group_report_weekly_generate"/>
                        <button name="action_unit_sales_cabang" type="object" string="Get Unit Sales" groups="teds_report_weekly.group_report_weekly_get_actual"/>
                        <button name="action_confirm_weekly" type="object" string="Confirm Weekly" groups="teds_report_weekly.group_report_weekly_confirm_periode"/>
                        <button name="action_set_to_draft" type="object" string="Set to Draft" attrs="{'invisible':[('is_over_date','=',False)]}" groups="teds_report_weekly.group_report_weekly_set_to_draft"/>
                        <button name="action_confirm" type="object" string="Confirm" attrs="{'invisible':[('is_over_date','=',False)]}" groups="teds_report_weekly.group_report_weekly_confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </header>
                    <sheet>
                         <div class="oe_title">                      
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="area_id" required="1" options="{'no_open':True,'no_create':True}" attrs="{'readonly':[('create_date','!=',False)]}"/>
                                <label for="bulan" string="Periode"/>
                                <div>
                                    <field name="bulan" class="oe_inline" required="1" attrs="{'readonly':[('create_date','!=',False)]}"/>
                                    <field name="tahun" class="oe_inline" required="1" attrs="{'readonly':[('create_date','!=',False)]}"/>
                                </div>
                                <field name="weekly" required="1" attrs="{'readonly':[('create_date','!=',False)]}"/>
                            </group>
                            <group>
                                <field name="start_date" attrs="{'readonly':[('create_date','!=',False)]}"/>
                                <field name="end_date" attrs="{'readonly':[('create_date','!=',False)]}"/>
                                <field name="create_date" invisible="1"/>
                                <field name="is_over_date" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Dealer">
                                <field name="dealer_ids" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="bottom" create="false" delete="false">
                                        <field name="type" invisible="1"/>
                                        <field name="branch_id"  options="{'no_open':True,'no_create':True}" invisible="1"/>
                                        <field name="name" readonly="1"/>
                                        <field name="total" attrs="{'readonly':[('type','=','Cabang')]}" required="1"/>
                                        <field name="total_lm" groups="teds_report_weekly.group_teds_konsolidate_weekly_allow"/>
                                        <field name="ranking" groups="teds_report_weekly.group_teds_konsolidate_weekly_allow"/>
                                        <field name="ranking_lm" groups="teds_report_weekly.group_teds_konsolidate_weekly_allow"/>
                                        <field name="write_uid" string="Last Update by" readonly="1" groups="teds_report_weekly.group_teds_konsolidate_weekly_allow"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_teds_report_weekly_konsolidate_filter" model="ir.ui.view">
            <field name="name">teds.report.weekly.konsolidate.filter</field>
            <field name="model">teds.report.weekly.konsolidate</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="area_id"/>
                    <field name='bulan'/>
                    <field name='tahun'/>  
                    <filter string="Draft" name="state_draft" domain="[('state','=','draft')]" />
                    <filter string="Confirmed" name="state_confirm" domain="[('state','=','confirmed')]"/>

                    <group expand="1" string="Group By">
                        <filter string="Area" context="{'group_by':'area_id'}"/>
                        <filter string="Start Date" context="{'group_by':'start_date'}"/>
                        <filter string="End Date" context="{'group_by':'end_date'}"/>
                        <filter string="Bulan" context="{'group_by':'bulan'}"/>
                        <filter string="Tahun" context="{'group_by':'tahun'}"/>
                    </group>     
                </search>
            </field>
        </record>     

        <record id="action_teds_report_weekly_konsolidate" model="ir.actions.server">
            <field name="name">Konsolidate Weekly</field>
            <field name="model_id" ref="teds_report_weekly.model_teds_report_weekly_konsolidate"/>
            <field name="code">
                action = env['teds.report.weekly.konsolidate'].action_konsolidate_weekly_server()
            </field>
        </record>

        <menuitem id="teds_report_weekly_konsolidate_menuitem" action="action_teds_report_weekly_konsolidate" parent="teds_report_weekly.teds_report_weekly_menu" sequence="3"/>

    </data>
</openerp>