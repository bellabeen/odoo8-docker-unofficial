<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_teds_report_weekly_master_area_tree" model="ir.ui.view">
			<field name="name">teds.report.weekly.master.area.tree</field>
			<field name="model">teds.report.weekly.master.area</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="main_dealer"/>
					<field name="user_ids"/>
				</tree>
			</field>
		</record>
		
		<record id="view_teds_report_weekly_master_area_form" model="ir.ui.view">
			<field name="name">teds.report.weekly.master.area.form</field>
			<field name="model">teds.report.weekly.master.area</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="name" required="1"/>
							<field name="main_dealer" required="1"/>
							<field name="user_ids" widget="many2many_tags" options="{'no_create':True, 'no_open':True}"/>
						</group>
						<notebook>
							<page string="Dealer">
								<field name="dealer_ids">
									<tree editable="bottom">
										<field name="type" required="1"/>
										<field name="branch_id" attrs="{'readonly':[('type','!=','Cabang')],'required':[('type','=','Cabang')]}" options="{'no_open':True,'no_create':True}"/>
										<field name="name" required="1"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_teds_report_weekly_master_area" model="ir.actions.act_window">
        	<field name="name">Master Area</field>
			<field name="res_model">teds.report.weekly.master.area</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

        <menuitem id="teds_report_weekly_menu" parent="wtc_dealer_menu.marketing_top_menu" name="Report Weekly" sequence="5"/>

		<menuitem id="teds_report_weekly_master_area_menuitem" action="action_teds_report_weekly_master_area" parent="teds_report_weekly.teds_report_weekly_menu" sequence="1"/>

	</data>
</openerp>
