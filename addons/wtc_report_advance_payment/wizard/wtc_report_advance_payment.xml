<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="view_report_advance_payment" model="ir.ui.view">
      <field name="name">Print Report Advance Payment</field>
      <field name="model">wtc.report.advance.payment</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Laporan Advance Payment">
          <group attrs="{'invisible':[('state_x','=','get')]}" col="4" colspan="4">
          	<field name="options" required='1' string='Options'/>
          	<field name="division"/>         
          	<field name="status"/>         
          	<label for="start_date" string="Tanggal"/>	
        		<div>
        			<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
        		</div>
          </group>
          
            <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
              <page string="Branch">
              <field name="branch_ids" colspan="4" nolabel="1"/>
              </page>  
              <page string="Employee">
              <field name="partner_ids" colspan="4" nolabel="1"/>
              </page>    
              <page string="Jornals">
              <field name="journal_ids" colspan="4" nolabel="1"/>
              </page>
              <page string="Accounts">
              <field name="account_ids" colspan="4" nolabel="1"/>
              </page>   
            </notebook>

          <newline/>  

           <field invisible="1" name="state_x"/>                
          <newline/>    
          <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
              <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
              <field name="fname" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
              <field name="data_x" nolabel="1" readonly="0" width="100" filename="fname" attrs="{'invisible':[('state_x','=','choose')]}"/>
          </group>
          <footer>
              <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
              <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
              <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
          </footer>

        </form>
      </field>
    </record>

    <record id="action_report_advance_payment_wizard" model="ir.actions.act_window">
      <field name="name">Advance Payment</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">wtc.report.advance.payment</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_report_advance_payment"/>
      <field name="target">new</field>
    </record>

	 <menuitem id="menu_report_advance_payment"  parent="wtc_dealer_menu.backoffice_report_menu" sequence="5"  action="action_report_advance_payment_wizard"/>	

  </data>
</openerp>