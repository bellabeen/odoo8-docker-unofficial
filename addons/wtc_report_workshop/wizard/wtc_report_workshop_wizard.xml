<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="view_report_workshop_wizard" model="ir.ui.view">
		<field name="name">Print Laporan Workshop</field>
		<field name="model">wtc.report.workshop.wizard</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Laporan Workshop">
	        	<group col="4" colspan="4">
	   				<field name="options"/>
	   				<field name="wo_categ" on_change="wo_categ_change(wo_categ)"/>
	   				<field name="state"/>
	   				<label for="start_date" string="Date"/>
	   				<div>
	   					<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
	   				</div>
	   				<field name="product_ids" widget="many2many_tags" options="{'no_open':True,'no_create_edit':True}"/>
	          	</group>
	          	
				<notebook colspan="5">
		      		<page string="Branches">
						<field name="branch_ids" colspan="4" nolabel="1"/>
		      		</page>
		      		<page string="Customers">
		          		<field name="partner_ids" colspan="4" nolabel="1"/>
		          	</page>
	        	</notebook>
	          	<footer>
	            	<button name="xls_export" string="Export" type="object" icon="gtk-execute" context="{'xls_export':1}" class="oe_highlight"/>
	            	or <button string="Cancel" class="oe_link" special="cancel"/>
	          	</footer>
	          	
	        </form>
    	</field>
    </record>
	
    <record id="action_report_workshop_wizard" model="ir.actions.act_window">
		<field name="name">Laporan Workshop</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wtc.report.workshop.wizard</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="view_report_workshop_wizard"/>
		<field name="target">new</field>
    </record>

	<menuitem id="menu_workshop_report" parent="wtc_dealer_menu.workshop_report_menu" sequence="12" action="action_report_workshop_wizard"/>

	</data>
</openerp>