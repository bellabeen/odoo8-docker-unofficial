<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
	<record id="view_dealer_register_spk_tree" model="ir.ui.view">
            <field name="name">dealer.register.spk.line.tree</field>
            <field name="model">dealer.register.spk.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Register SPK Dealer" create="0">                   
                    <field name="name"/>
                    <field name="branch_id" />
					<field name="sales_id" />
           			<field name="spk_id" />			
           			<field name="dealer_sale_order_id" /> 
           			<field name="state"/>
                </tree>
            </field>
     </record>
 		 <record id="view_register_spk_line_search" model="ir.ui.view">
            <field name="name">dealer.register.spk.line.search</field>
            <field name="model">dealer.register.spk.line</field>
            <field name="arch" type="xml">
                <search string="Search Register SPK Line">
                	<field name='name'/>
        			<field name='branch_id'/>
        			<field name='sales_id'/>
        			<field name='dealer_sale_order_id'/>
        			<field name='spk_id'/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-go-month" domain="[]" context="{'group_by':'branch_id'}"/>
               
                    </group>
                </search>
            </field>
        </record>    
     <record id="view_dealer_register_spk_form" model="ir.ui.view">
            <field name="name">dealer.register.spk.line.form</field>
            <field name="model">dealer.register.spk.line</field>            
            <field name="arch" type="xml">
                <form string="Register SPK Dealer" create="0" edit="0">                	
                   	<group col="4">
	                	<field name="name"/>
	                    <field name="branch_id"/>
						<field name="sales_id" />
	           			<field name="spk_id" />			
	           			<field name="dealer_sale_order_id" /> 
	           			<field name="state"/>
           			</group>
					<notebook>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>
					</notebook>           			
                </form>
             </field>
      </record>
                
     
	
		
		<record model="ir.actions.act_window" id="dealer_register_spk_action">
		    <field name="name">Dealer Register SPK</field>
		    <field name="res_model">dealer.register.spk.line</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
       	<menuitem action="dealer_register_spk_action" id="menu_dealer_register_spk" parent="wtc_dealer_menu.showroom_configuration_menu" />
	</data>
</openerp>