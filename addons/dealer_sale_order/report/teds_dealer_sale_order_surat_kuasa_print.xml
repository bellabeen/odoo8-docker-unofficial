<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="teds_print_surat_kuasa_dso_pdf">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure"/>
                            <div class="row"> 
                            </div>
                            <div class="col-xs-12">
                                <table class="table" style="font-size:10px;">
                                    <tr>
                                        <td align="center" colspan="3" style="font-size:14px;"><b>SURAT KUASA</b></td>
                                    </tr>
                                    <tr>
                                        <th colspan="3">Yang bertandatangan dibawah ini:</th>
                                    </tr>
                                    <tr>
                                        <td style="width:25%%">Nama</td>
                                        <td style="width:1%%"> :</td>
                                        <td><span t-esc="o.cddb_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td>Pekerjaan</td>
                                        <td> :</td>
                                        <td><span t-esc="o.cddb_id.pekerjaan_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td>Alamat</td>
                                        <td> :</td>
                                        <td>
                                            <span t-esc="o.cddb_id.street"/> RT: <span t-esc="o.cddb_id.rt"/> RW: <span t-esc="o.cddb_id.rw"/> KEL: <span t-esc="o.cddb_id.zip_id.name"/> KEC: <span t-esc="o.cddb_id.kecamatan_id.name"/> KAB: <span t-esc="o.cddb_id.city_id.name"/> PROV: <span t-esc="o.cddb_id.state_id.name"/> 
                                        </td>
                                    </tr>
                                    <tr>
                                        <th colspan="3">Dengan ini memberikan kuasa kepada:</th>
                                    </tr>
                                    <tr>
                                        <td>Nama</td>
                                        <td> :</td>
                                        <td><span t-esc="data['kuasa_kepada']"/></td>
                                    </tr>
                                    <tr>
                                        <td>Pekerjaan</td>
                                        <td> :</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Alamat</td>
                                        <td> :</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <th colspan="3">Untuk keperluaan check fisik kendaraan, pendaftaran STNK, TNKB, dan BPKB kendaraan bermotor baru dengan spesifikasi sebagai berikut:</th>
                                    </tr>
                                    <tr>
                                        <td>Jenis Kendaraan</td>
                                        <td> :</td>
                                        <td>Sepedah Motor</td>
                                    </tr>
                                    <tr>
                                        <td>Merk</td>
                                        <td> :</td>
                                        <td>Honda</td>
                                    </tr>
                                    <tr>
                                        <td>Type</td>
                                        <td> :</td>
                                        <td><span t-esc="o.dealer_sale_order_line[0].product_id.default_code"/></td>
                                    </tr>
                                    <tr>
                                        <td>Warna</td>
                                        <td> :</td>
                                        <td><span t-esc="o.dealer_sale_order_line[0].product_id.attribute_value_ids[0].name"/></td>
                                    </tr>
                                    <tr>
                                        <td>Tahun / Cylinde</td>
                                        <td> :</td>
                                        <td><span t-esc="o.dealer_sale_order_line[0].lot_id.tahun"/></td>
                                    </tr>
                                    <tr>
                                        <td>Nomor Rangka</td>
                                        <td> :</td>
                                        <td><span t-esc="o.dealer_sale_order_line[0].lot_id.chassis_no"/></td>
                                    </tr>
                                    <tr>
                                        <td>Nomor Mesin</td>
                                        <td> :</td>
                                        <td><span t-esc="o.dealer_sale_order_line[0].lot_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3">Demikian surat kuasa ini dibuat dengan sebenarnya agar dapat dipergunakan sebagaimana mestinya.</td>
                                    </tr>
                                </table>
                                <table width="100%%" style="font-size:10px;">
                                    <tr>
                                        <td width="50%%"></td>
                                        <td width="50%%"><span t-esc="o.city_cddb_rel.name"/></td>
                                    </tr>
                                    <tr height="120px">
                                        <td>Diberi Kuasa</td>
                                        <td>Yang Memberi Kuasa</td>
                                    </tr>
                                    <tr>
                                        <td>( <span t-esc="data['kuasa_kepada']"/> )</td>
                                        <td>( <span t-esc="o.cddb_id.name"/> )</td>
                                    </tr>
                                </table>
                            </div>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</openerp>
