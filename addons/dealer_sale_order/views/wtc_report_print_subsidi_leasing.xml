	<t t-name="report.external_layout_header">
	    <div class="header" width="100%">
	        <div class="row" width="100%">
		        <t t-foreach="docs" t-as="o">
		        	<table id="t01" width="100%">
		            	<tr>
		                   <th width="60%"><span t-field="o.branch_id.company_id.name"/></th>
		                   <th width="40%"><span t-field="o.branch_id.name"/></th>
		                </tr>
		                <tr>
		                   <th width="60%">HEAD OFFICE</th>
		                   <th width="40%"><span t-field="o.branch_id.street"/></th>
		                </tr>
		                <tr>
		              		<th width="60%"><span t-field="o.branch_id.company_id.city"/></th>
		              		<th width="40%"><span t-field="o.branch_id.mobile"/></th>
		                </tr>
		                <tr>
		              		<th width="60%"><span t-field="o.branch_id.company_id.phone"/></th>
		                </tr>  
                                        
		        	</table> 
		        </t>                                       
	        </div>   
	    </div>
	</t>

					
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">

                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row"> 
                    </div>
                    <table width="100%">
                        <thead style="font-size:12px;font-family:Helvetica;">
                        </thead>                       
                         <tbody>
                           <tr>
			                    <td width="20.00%">No Sales Order</td>
			                    <td width="5.00%">:</td>
			                    <td width="65.00%"><span t-field="o.name"/></td>
		                  </tr>
		                  <tr>
			                    <td width="20.00%">Sudah Terima Dari</td>
			                    <td width="5.00%">:</td>
			                    <td width="65.00%"><span t-field="o.finco_id.name"/><span t-field="o.finco_id.street"/></td> 
		                  </tr>
		                  <tr>
			                    <td width="20.00%">Banyak Uang</td>
			                    <td width="5.00%">:</td>
			                    <td width="65.00%"><span t-esc="formatLang( ps_finco(), digits=0)"/></td> 
		                  </tr>
		                  <tr>
			                    <td width="20.00%">Terbilang</td>
			                    <td width="5.00%">:</td>
			                    <td width="65.00%">### <span t-esc="terbilang(ps_finco())"/>###</td> 
		                  </tr>
		                  <tr>
			                    <td width="20.00%">Untuk Pembayaran</td>
			                    <td width="5.00%">:</td>
			                    <td width="65.00%"><span t-esc="o.untuk_pembayaran"/></td> 
		                  </tr>

                        </tbody> 
	           			<tfoot>   		
							<tr>
								<td>&#160;</td>
							</tr>			
							<tr>
								<td>&#160;</td>
							</tr>			
							<tr>
								<td colspan="3"><span t-esc="o.branch_id.state_id.name"/>, <span t-esc="formatLang(o.date_order, date= True)"/></td>
							</tr>			
							<tr>
								<td colspan="3">&#160;</td>
							</tr>	
			                <tr>
		                		<td colspan="3"><span t-field="user.name"/> <span t-esc="waktu_lokal()"/></td>
		                	</tr> 		
	           			</tfoot>                                                                      
                    </table>   
                    <div class="oe_structure"/>
				</div>
