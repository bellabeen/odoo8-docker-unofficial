<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		<record model="ir.ui.view" id="city_tree_view">
		    <field name="name">wtc.city.tree</field>
		    <field name="model">wtc.city</field>
		    <field name="arch" type="xml">
		        <tree string="City">
		            <field name="code"/>
		            <field name="name"/>
		            <field name="state_id"/>
		        </tree>
		     </field>
		</record>
		
		<record model="ir.ui.view" id="city_form_view">
		    <field name="name">wtc.city.form</field>
		    <field name="model">wtc.city</field>
		    <field name="arch" type="xml">
		        <form string="City" version="7.0">
		             <group col="4" colspan="4">
						<field name="code"/>
						<field name="name"/>
						<field name="state_id" colspan="4"/>
						<field name="active"/>
		            </group>
		        </form>
		        
		    </field>
		</record> 
		
		<record model="ir.actions.act_window" id="city_action">
		    <field name="name">City</field>
		    <field name="res_model">wtc.city</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
 		
		 <record model="ir.ui.view" id="country_state_form_view">
		    <field name="name">wtc.country.state.form</field>
		    <field name="model">res.country.state</field>
		    <field name="inherit_id" ref="base.view_country_state_form"/>
		    <field name="arch" type="xml">   
				<xpath expr="//form[@string='State']" position="inside">
                    <separator string="City" />
                    <field name="city_ids" nolabel="1" colspan="2">
                    <tree string="City">
                    	<field name="code" />
                    	<field name="name"/>
                    </tree>
                    </field>
		    	</xpath>
	        </field>
	        </record>

        <menuitem action="base.action_country" id="menu_country_partner_master" sequence="0" parent="wtc_dealer_menu.ma_local_menu"/>
        <menuitem action="base.action_country_group" id="menu_country_group_master" name="Country Group" sequence="10" parent="wtc_dealer_menu.ma_local_menu"/>	        
        <menuitem action="base.action_country_state" id="menu_country_state_partner_master" sequence="20" parent="wtc_dealer_menu.ma_local_menu" />	        
		<menuitem id="city_menuitem" name="Cities" sequence="30" parent="wtc_dealer_menu.ma_local_menu" action="city_action"/>
	</data>
</openerp>