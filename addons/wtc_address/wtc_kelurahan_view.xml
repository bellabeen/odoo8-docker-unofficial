<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 

			<record model="ir.ui.view" id="kelurahan_tree_view">
			    <field name="name">wtc.kelurahan.tree</field>
			    <field name="model">wtc.kelurahan</field>
			    <field name="arch" type="xml">
			        <tree string="Kelurahan">
                        <field name="code"/>
			            <field name="name"/>
			            <field name="zip"/>
			            <field name="kecamatan_id"/>
			            <field name="city_id"/>
			            <field name="state_id"/>
			        </tree>
			     </field>
			</record>
			
			<record model="ir.ui.view" id="kelurahan_form_view">
			    <field name="name">wtc.kelurahan.form</field>
			    <field name="model">wtc.kelurahan</field>
			    <field name="arch" type="xml">
			        <form string="Kelurahan" version="7.0">
			             <group col="4" colspan="4">
				            <field name="zip"/>
				            <field name="name"/>       
				            <field name="kecamatan_id" /><!--on_change="_onchange(kecamatan_id,city_id)"/-->
				            <field name="city_id"/>
					        <field name="state_id" colspan="4"/>
                            <field name="code"/>
				            <field name="active"/>
						</group>
						<notebook>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>							
						</notebook>
			        </form>
			    </field>
			</record> 
			
			<record model="ir.ui.view" id="kelurahan_search_view">
			    <field name="name">wtc.kelurahan.search</field>
			    <field name="model">wtc.kelurahan</field>
			    <field name="arch" type="xml">
			        <search string="Search">
			            <filter string="zip" icon="terp-partner" domain="[('zip', '=', uid)]"/>
						<filter string="city_id" icon="terp-partner" domain="[('city_id', '=', uid)]"/>			            
						<filter string="kecamatan_id" icon="terp-partner" domain="[('kecamatan_id', '=', uid)]"/>
						<filter string="state_id" icon="terp-partner" domain="[('state_id', '=', uid)]"/>
			            <field name="name"/>
			            <field name="zip"/>
			            <field name="city_id"/>
						<field name="kecamatan_id"/>
						<field name="state_id"/>		            
			            <group string="Group By...">
			                <filter string="City" icon="terp-personal" context="{'group_by':'city_id'}"/>
			            </group>
			        </search>
			    </field>
			</record>
			
			<record model="ir.actions.act_window" id="kelurahan_action">
			    <field name="name">Kelurahan</field>
			    <field name="res_model">wtc.kelurahan</field>
			    <field name="view_type">form</field>
			    <field name="view_mode">tree,form</field>
			</record>
			
		 	<record model="ir.ui.view" id="kecamatan_tree_form_view">
		    <field name="name">wtc.kelurahan.tree.form</field>
		    <field name="model">wtc.kecamatan</field>
		    <field name="inherit_id" ref="wtc_address.kecamatan_form_view"/>
		    <field name="arch" type="xml">   
				<xpath expr="//form[@string='Kecamatan']" position="inside">
                    <notebook>
						<page string="Kelurahan">
		                    <field name="kelurahan_ids" nolabel="1" colspan="4">
		                    	<tree string="Kelurahan">
		                    		<field name="name"/>
		                    		<field name="zip"/>
		                    	</tree>
		                    </field>
	                    </page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page> 
					</notebook>                   
		    	</xpath>
	        </field>
	        </record> 
	          	
			<menuitem id="kelurahan_menu" name="Kelurahan" sequence="60" parent="wtc_dealer_menu.ma_local_menu" action="kelurahan_action"/> 
	</data>
</openerp> 