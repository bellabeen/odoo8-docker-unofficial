<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data> 
			
			<record model="ir.ui.view" id="kecamatan_tree_view">
			    <field name="name">wtc.kecamatan.tree</field>
			    <field name="model">wtc.kecamatan</field>
			    <field name="arch" type="xml">
			        <tree string="Kecamatan">
			            <field name="code"/>
			            <field name="name"/>
			            <field name="city_id"/>
			            <field name="state_id"/>
			        </tree>
			     </field>
			</record>
			
			<record model="ir.ui.view" id="kecamatan_form_view">
			    <field name="name">wtc.kecamatan.form</field>
			    <field name="model">wtc.kecamatan</field>
			    <field name="arch" type="xml">
			        <form string="Kecamatan" version="7.0">
			             <group col="4" colspan="4">
				            <field name="code"/>
				            <field name="name"/>
				            <field name="city_id" /> <!-- on_change="get_province_by_city(city_id)"/-->
				            <field name="state_id"/>
				            <field name="active"/>
				    	</group>
			        </form>
			        
			    </field>
			</record> 
			
			<record model="ir.actions.act_window" id="kecamatan_action">
			    <field name="name">Kecamatan</field>
			    <field name="res_model">wtc.kecamatan</field>
			    <field name="view_type">form</field>
			    <field name="view_mode">tree,form</field>
			</record>
				        
		 	<record model="ir.ui.view" id="city_tree_form_view">
		    <field name="name">wtc.kecamatan.form</field>
		    <field name="model">wtc.city</field>
		    <field name="inherit_id" ref="wtc_address.city_form_view"/>
		    <field name="arch" type="xml">   
				<xpath expr="//form[@string='City']" position="inside">
                    <separator string="Kecamatan" />
                    <notebook>
                    	<page string="Kecamatan">
		                    <field name="kecamatan_ids" nolabel="1" colspan="4">
		                    	<tree string="Kecamatan">
		                    		<field name="code"/>
		                    		<field name="name"/>
		                    	</tree>
		                    </field>
                   		 </page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>	                   		 
                    </notebook>
		    	</xpath>
	        </field>
	        </record> 
	          	
		<menuitem id="kecamatan_menuitem" name="Kecamatan" sequence="50" parent="wtc_dealer_menu.ma_local_menu" action="kecamatan_action"/>
	</data>
</openerp>