<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

    <record id="export_cdb_txt_form_view" model="ir.ui.view">
		<field name="name">Export CDB to TXT</field>
		<field name="model">export.cdb.txt</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
	        <form string="Export CDB TXT">
	        	<group col="4" colspan="4" attrs="{'invisible':[('state_x','=','get')]}">
	            	<field name="options" required="1" string='Options'/>
                    <label for="start_date" string="Tanggal"/>  
                    <div>
                        <field name="start_date"  required="1" class="oe_inline"/> - <field name="end_date"  required="1" class="oe_inline"/>
                    </div>
	          	</group>
	          	
				<notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
		      		<page string="Branch">
						<field name="branch_ids" colspan="4" nolabel="1"/>
		      		</page>
	        	</notebook>
                <field invisible="1" name="state_x"/>                
                <newline/>    
                <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                    <separator colspan="4" string="Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                </group>
                <footer>
                    <button name="csv_report" attrs="{'invisible':[('state_x','=','get')]}" string="CSV Report" type="object" class="oe_highlight"/>
                    <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                    <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                </footer>
	          	
	        </form>
    	</field>
    </record>

    <record id="action_export_cdb_txt" model="ir.actions.act_window">
		<field name="name">Export CDB</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">export.cdb.txt</field>
		<field name="view_type">form</field>
		<field name="view_mode">form</field>
		<field name="view_id" ref="export_cdb_txt_form_view"/>
		<field name="target">new</field>
    </record>

	<menuitem id="export_cdb_txt_menu" parent="wtc_dealer_menu.stnk_bpkb_report_menu" sequence="5" action="action_export_cdb_txt"/>

	</data>
</openerp>