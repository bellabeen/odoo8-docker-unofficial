<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="loss_deamnd_view_tree" model="ir.ui.view">
            <field name="name">view.loss.demand.tree</field>
            <field name="model">teds.loss.demand</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Loss Demand">                   
                    <field name="branch_id"/>
                    <field name="product_id"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="mobile"/>
                 </tree>
            </field>
        </record>

        <record id='loss_deamnd_view_form' model='ir.ui.view'>
            <field name='name'>view.loss.demand.form</field>
            <field name='model'>teds.loss.demand</field>
            <field name='arch' type='xml'>
                <form string="Loss Demand">
                    <sheet>
                        <div class="oe_title">                      
                        <h1>
                            <label string="Loss Demand"/>
                        </h1>
                        </div>
                        <group col="4">
                            <group>
                                <field name='branch_id' options="{'no_create': True,'no_open':True}" required="1"/>
                                <field name='division' required="1"/>
                                <field name='product_id' required="1"/>
                            </group>
                            <group>
                                <field name='date' required="1" />
                                <field name='partner_id' required="1"/>
                                <field name='mobile' required="1"/>
                            </group>

    
                        </group>

                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" readonly="1"></field> 
                                        <field name="create_date" readonly="1"></field>                 
                                    </group>
                                    <group>
                                        <field name="write_uid" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id='teds_loss_demand_action' model='ir.actions.act_window'>
            <field name='name'>Loss Demand</field>
            <field name='res_model'>teds.loss.demand</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>tree,form</field>
        </record>


        <menuitem id='teds_loss_demnad_menuitem' name='Loss Demand' parent='wtc_dealer_menu.workshop_sales_menu' action='teds_loss_demand_action' sequence="2"/>			
    </data>
</openerp>