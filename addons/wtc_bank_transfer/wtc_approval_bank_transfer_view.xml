<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>  

	<record id="wtc_approval_bank_transfer_form_view" model="ir.ui.view">
		<field name="name">wtc.approval.bank.transfer.form</field>
		<field name="model">wtc.bank.transfer</field>
		<field name="inherit_id" ref="banktransfer_form_view"/>
		<field name="arch" type="xml">
	
			<button name="banktranster_post" position="after">
				<button name="approval_request" groups='wtc_bank_transfer.group_wtc_bank_transfer_rfa' string="RFA or Approve" type="workflow" class="oe_highlight" states="draft"/>	
				<button name="approval_approve" groups='wtc_bank_transfer.group_wtc_bank_transfer_approve_approval' states="waiting_for_approval" string="Approve" type="workflow" class="oe_highlight"/>
				<button name="%(wtc_approval.wtc_approval_reject_wizard_action)d" states="waiting_for_approval" string="Reject" type="action" context="{'model_name':'wtc.bank.transfer','next_workflow':'approval_reject'}"/>
				<button name="%(wtc_approval.wtc_approval_cancel_wizard_action)d" groups='wtc_bank_transfer.group_wtc_bank_transfer_cancel_approval' states="waiting_for_approval" string="Cancel Approval" type="action" context="{'model_name':'wtc.bank.transfer','next_workflow':'approval_cancel'}"/>
				<button name="%(wtc_approval.wtc_cancel_approval_wizard)d"  states="app_approve" string="Cancel Approval" type="action"  groups="dealer_sale_order.group_cancel_approval_dso" context="{'model_name':'wtc.bank.transfer','next_workflow':'approval_cancel_bt'}"/>	 																
													
			</button> 
								
			<field name="amount" position="after">
				<field name="approval_state" class="oe_inline"/>
			</field>
				
			<xpath expr="//page[@string='Detail Transfer']" position="after">
				<page string="Approval">
					<field name="approval_ids" attrs="{'readonly': [('state','!=','draft')]}">
						<tree string="Approval" editable="bottom" create="false" edit="false" delete="false" >
							<field name="group_id" />
							<field name="branch_id"/>
							<field name="division"/>
							<field name="limit"/>
							<field name="sts"/>
							<field name="reason"/>
							<field name="pelaksana_id"/>
							<field name="tanggal"/>
						</tree>
					</field>
				</page>
				<page string="Audit Trail">
					<group>
						<group>
							<field name="create_uid" readonly="1"></field>
							<field name="create_date" readonly="1"></field>
							<field name="confirm_uid" readonly="1"></field>
							<field name="confirm_date" readonly="1"></field>
						</group>
						<group>							
							<field name="write_uid" readonly="1"></field>
							<field name="write_date" readonly="1"></field>
							<field name="cancel_uid" readonly="1"></field>
							<field name="cancel_date" readonly="1"></field>
						</group>
					</group>
				</page>				
			</xpath>
		</field>
	</record>
	  

	          
 	</data>
 </openerp>
       		
       		
	
