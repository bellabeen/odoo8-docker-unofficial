<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		<record id="wtc_account_bank_statement_view" model="ir.ui.view">
			<field name="name">wtc.account.bank.statement</field>
			<field name="model">account.bank.statement</field>
			<field name="inherit_id" ref="account.view_bank_statement_form"/>
			<field name="arch" type="xml">
				<button name="button_cancel" position="replace"></button>
            	<button name="button_confirm_bank" position="before">
					<button name="button_cancel" states="confirm" string="Cancel Statement" type="object" confirm="Apa anda yakin ingin membatalkan transaksi ini ?"/>            	
				</button>		
				<field name="date" position="attributes">
            		<attribute name="readonly">1</attribute> 
            	</field>			
				<xpath expr="//page[@string='Transactions']" position="after">
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
									<field name="confirm_uid" readonly="1"></field>
									<field name="confirm_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
									<field name="cancel_uid" readonly="1"></field>
									<field name="cancel_date" readonly="1"></field>									
								</group>
							</group>
						</page>				
				</xpath>
			</field>
		</record>		
		<record id="wtc_account_bank_statement2_view" model="ir.ui.view">
			<field name="name">wtc.account.bank.statement2</field>
			<field name="model">account.bank.statement</field>
			<field name="inherit_id" ref="account.view_bank_statement_form2"/>
			<field name="arch" type="xml">
				<button name="button_cancel" position="replace"></button>
            	<button name="button_confirm_cash" position="before">
					<button name="button_cancel" states="confirm,open" string="Cancel CashBox" type="object" confirm="Apa anda yakin ingin membatalkan transaksi ini ?"/>				
 				</button>					
				<xpath expr="//page[@string='Cash Control']" position="after">
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
									<field name="confirm_uid" readonly="1"></field>
									<field name="confirm_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
									<field name="cancel_uid" readonly="1"></field>
									<field name="cancel_date" readonly="1"></field>									
								</group>
							</group>
						</page>				
				</xpath>
			</field>
		</record>		
		
<!-- New-->
.        <menuitem action="base.action_res_partner_bank_type_form"
            id="menu_action_res_partner_bank_typeform_master"
            parent="wtc_dealer_menu.ma_bank_menu"
             sequence="3"/>		
            	
        <menuitem action="base.action_res_bank_form" id="menu_action_res_bank_form_master" 
	        parent="wtc_dealer_menu.ma_bank_menu"
	        sequence="2"/>
            	  
        <menuitem action="base.action_res_partner_bank_account_form"
            id="menu_action_res_partner_bank_form_master"
	        parent="wtc_dealer_menu.ma_bank_menu"
             sequence="1"/>	        	          	
	</data>
</openerp>
															