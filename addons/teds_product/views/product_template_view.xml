<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
        <record id="view_teds_product_template_group_active_form" model="ir.ui.view" >
            <field name="name">teds.product.template.group.active.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="attributes">
                    <attribute name="groups">teds_product.group_field_active_product_template</attribute>
                </xpath>
            </field>
        </record>
        
        <record id="view_teds_product_product_group_active_form" model="ir.ui.view" >
            <field name="name">teds.product.product.group.active.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
        		<xpath expr="//field[@name='active']" position="attributes">
                    <attribute name="groups">teds_product.group_field_active_product_product</attribute>
                </xpath>
            </field>
        </record>

    </data>
</openerp>