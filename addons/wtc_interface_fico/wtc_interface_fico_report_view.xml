<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    <!-- Interface -->
    	
    	<record model="ir.ui.view" id="wtc_interface_fico_tree_view">
            <field name="name">wtc.interface.fico.tree</field>
            <field name="model">wtc.interface.fico</field>
            <field name="arch" type="xml">
                <tree string="Interface Fico">
                	<field name="name_jit"/>
                    <field name="name_rec"/>
                    <field name="date"/>
				</tree>
			</field>
        </record>
        
        
        <record model="ir.ui.view" id="wtc_interface_fico_form_view">
            <field name="name">wtc.interface.fico.form</field>
            <field name="model">wtc.interface.fico</field>
            <field name="arch" type="xml">
                
                <form string="Interface Fico">
                    <header>
                        <button name="export" string="Export" type="object" class="oe_highlight" groups="wtc_cancel_purchase_order.group_purchase_order_cancel_rfa"/>
                        <button name="wizard_cek_so_done" string="wizard_cek_so_done" type="object" class="oe_highlight" />
                    </header>
                    <group col="4">
                           <field name="name_jit"/>
		                    <field name="name_rec"/>
		                    <field name="date"/>
                    </group>
                </form>
                
            </field>
        </record>
        
        <record id="proses_dso_done" model="ir.ui.view">
            <field name="name">dealer.sale.order.proses.done</field>
            <field name="model">wtc.interface.fico</field>
            <field name="arch" type="xml">
                <form string="SO">
                    <group>
                    <field name="tgl_awal"/>
                    <field name="tgl_akhir"/>
                    </group>
                	<button name="dso_cek_done" string="Cek Done" type="object" class="oe_highlight"/>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="wtc_interface_fico_action">
            <field name="name">Interface Fico</field>
            <field name="res_model">wtc.interface.fico</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
        
        <record id="wtc_interface_fico_action_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="wtc_interface_fico_tree_view"/>
            <field name="act_window_id" ref="wtc_interface_fico_action"/>
        </record>
        
        <record id="purchase_order_cancel_action_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wtc_interface_fico_form_view"/>
            <field name="act_window_id" ref="wtc_interface_fico_action"/>
        </record>

        <menuitem action="wtc_interface_fico_action" id="wtc_interface_fico_menu" parent="wtc_cancellation.showroom_cancellation_menu" sequence="1"/>
	</data>
</openerp>