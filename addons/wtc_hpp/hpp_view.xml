<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>    
    
    	<record id="view_quant_hpp_tree" model="ir.ui.view">
            <field name="name">stock.quant.tree</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree"/>
            <field name="arch" type="xml">
                <field name="in_date" position="after">
                    <field name="consolidated_date"/>
                </field>
            </field>		
		</record>
		
		<record id="view_quant_hpp_form" model="ir.ui.view">
            <field name="name">stock.quant.form</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_form"/>
            <field name="arch" type="xml">
                <field name="in_date" position="after">
                    <field name="consolidated_date"/>
                </field>
            </field>		
		</record>

        <record id="view_production_lot_hpp_form" model="ir.ui.view">
            <field name="name">stock.production.lot.hpp.form</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="hpp" readonly="1"/>
                    <field name="performance_hpp" readonly="1"/>
                    <field name="consolidate_id" readonly="1"/>
                </field>
            </field>		
		</record>
		
		<record id="wtc_hpp_account_invoice_form_view" model="ir.ui.view">
            <field name="name">wtc.hpp.account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
            	<field name="move_id" position="after">
            		<field name="consolidated" readonly="True"/>
            	</field>
                <xpath expr="//field[@name='quantity']" position="after">
			    	<field name="consolidated_qty" readonly="1"/>
			    </xpath>
            </field>		
		</record>

		<record id="wtc_hpp_search_view" model="ir.ui.view">
            <field name="name">wtc.hpp.search</field>
            <field name="model">consolidate.invoice</field>
            <field name="arch" type="xml">
                <search string="Search Consolidate">
                   <field name="name"/>
				   <field name="branch_id"/>                   
                   <field name='division'/>
				   <field name="invoice_id"/>
                   <field name="picking_id"/>
                   <field name='partner_id'/>
               </search>
            </field>
        </record>

        <record id="view_consolidate_invoice_tree" model="ir.ui.view">
            <field name="name">consolidate.invoice.tree</field>
            <field name="model">consolidate.invoice</field>
            <field name="arch" type="xml">
                <tree string="Consolidate Invoice">
                	<field name="name"/>
                    <field name="date"/>
	                <field name="invoice_id"/>
	                <field name="picking_id"/>
	                <field name="state"/>
                </tree>
            </field>
        </record>
       
        <record id="view_consolidate_invoice_form" model="ir.ui.view">
            <field name="name">consolidate.invoice.form</field>
            <field name="model">consolidate.invoice</field>
            <field name="arch" type="xml">
                <form string="Consolidate Invoice" version="7.0">
				<header>
                        <button name="consolidate_cancel" type="object" states="draft" string="Cancel" icon="terp-stock_effects-object-colorize" confirm="Apa anda yakin ingin membatalkan transaksi ini ?" groups="wtc_hpp.group_consolidate_invoice_cancel"/>
	           			<button name="consolidate_draft" type="object" states="cancel" string="Set to Draft" icon="terp-stock_effects-object-colorize" groups="wtc_hpp.group_consolidate_invoice_set_to_draft"/>
	           			<button name="consolidate_confirm" type="object" states="draft" string="Approve" icon="gtk-apply" groups="wtc_hpp.group_consolidate_invoice_confirm"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" statusbar_colors='{"draft":"red","done":"blue"}'/>
                </header>                                
				<sheet>
					<div class="oe_title">                      
	       				<h1>
				            <label string="Consolidate Invoice"/>
				 			<field name="name" class="oe_inline" readonly="1"/>	
	    			    </h1>
                    </div>
                    <group col="4" colspan="4">
	                <field name="branch_id" options='{"no_open": True, "no_create": True}' attrs="{'readonly':[('name','!=','/')]}"/>
	                <field name="division" attrs="{'readonly':[('name','!=','/')]}"/>
	                <field name="partner_id" domain="[('supplier','=',True)]" required="True" options='{"no_open": True, "no_create": True}' attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="date"/>
	                <field name="invoice_id" domain="[('type','=','in_invoice'),('branch_id','=',branch_id),('division','=',division),('state','=','open'),('partner_id','=',partner_id),('consolidated','=',False)]" options='{"no_open": True, "no_create": True}'/>
	                <field name="picking_id" domain="[('picking_type_code','=','incoming'),('branch_id','=',branch_id),('division','=',division),('state','=','done'),('partner_id','=',partner_id),('consolidated','=',False)]" options='{"no_open": True, "no_create": True}' on_change="picking_id_change()"/>
		            </group>
                    <notebook colspan="5">
                        <page string="Consolidate Lines">
                            <field colspan="4" name="consolidate_line" nolabel="1" widget="one2many_list">
                                <tree string="" editable="top">
                                    <field name="name" domain="[('consolidate_id', '=', False),('picking_id', '=', parent.picking_id),('state', '=', 'intransit')]" on_change="lot_change(parent.branch_id,parent.division,name,product_id,parent.invoice_id,parent.partner_id,parent.picking_id)" options='{"no_open": True, "no_create": True}'/>
					                <field name="product_id" on_change="lot_change(parent.branch_id,parent.division,name,product_id,parent.invoice_id,parent.partner_id,parent.picking_id)" options='{"no_open": True, "no_create": True}'/>
					                <field name="product_qty" on_change="product_qty_change(product_qty,move_qty)"/>
					                <field name="move_qty" invisible="1"/>
					                <field name="move_qty_show" readonly="1"/>
					                <field name="move_id" invisible="1"/>
					                <field name="purchase_line_id" invisible="1"/>
					                <field name="product_uom" on_change="lot_change(parent.branch_id,parent.division,name,product_id,parent.invoice_id,parent.partner_id,parent.picking_id)"/>
					                <field name="price_unit" on_change="lot_change(parent.branch_id,parent.division,name,product_id,parent.invoice_id,parent.partner_id,parent.picking_id)"/>
                                </tree>
                            </field>
                        </page>
						<page string="Audit Trail">
							<group>
								<group>
									<field name="create_uid" readonly="1"></field>
									<field name="create_date" readonly="1"></field>
									<field name="confirm_uid" readonly="1"></field>
									<field name="confirm_date" readonly="1"></field>
								</group>
								<group>							
									<field name="write_uid" readonly="1"></field>
									<field name="write_date" readonly="1"></field>
								</group>
							</group>
						</page>                       
                    </notebook>
                </sheet>
                </form>
            </field>
        </record>
        
        <record id="seq_type_consolidate_invoice_new" model="ir.sequence.type">
			<field name="name">Consolidate Invoice</field>
			<field name="code">consolidate.invoice</field>
		</record>
		
		<record id="seq_consolidate_invoice_new" model="ir.sequence">
			<field name="name">Consolidate Invoice</field>
			<field name="code">consolidate.invoice</field>
			<field name="prefix">CI/%(y)s%(month)s/</field>
			<field name="padding">4</field>
		</record>

		<record model="ir.actions.act_window" id="action_consolidate_invoice_form">
            <field name="name">Consolidate Invoice</field>
            <field name="res_model">consolidate.invoice</field>
            <field name="search_view_id" ref="wtc_hpp_search_view"/>
        </record>
        
		<menuitem id="consolidate_invoice_1" parent="wtc_dealer_menu.showroom_purchase_menu" sequence="6" name="Consolidate Invoice" action="action_consolidate_invoice_form"/>
		<menuitem id="consolidate_invoice_2" parent="wtc_dealer_menu.workshop_purchase_menu" sequence="6" name="Consolidate Invoice" action="action_consolidate_invoice_form"/>
			
	</data>
</openerp>