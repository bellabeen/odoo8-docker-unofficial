<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="nc_external_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <t t-raw="0" />
        </template>
        <template id="teds_payment_request">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="wtc_dn_nc.nc_external_layout">
                        <div class="page">
                            <style type="text/css">
                                table.nborder {
                                    width: 100%;
                                }
                                table.wborder {
                                    width: 100%;
                                    height: 100%;
                                    padding: 2px;
                                    border: 1px solid black;
                                    border-collapse: collapse;
                                }
                            </style>
                            <table class="nborder" name="nc_header">
                                <tr>
                                    <td style="width: 50%; font-weight: bold;"><span t-esc="o.branch_id.name" /></td>
                                    <td colspan="2" style="width: 50%; font-weight: bold; text-align: right;">PERMINTAAN PEMBAYARAN</td>
                                </tr>
                                <tr>
                                    <td style="width: 50%;">
                                        <span t-esc="o.branch_id.street" />
                                        <span t-if="o.branch_id.kecamatan">, <span t-esc="o.branch_id.kecamatan" /></span>
                                        <span t-if="o.branch_id.city_id">, <span t-esc="o.branch_id.city_id.name" /></span>
                                    </td>
                                    <td style="width: 30%; text-align: right;">&#160;&#160;No&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;&#160;</td>
                                    <td style="width: 20%;">:&#160;&#160;<span t-esc="o.number" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 50%;"><span t-esc="o.branch_id.state_id.name" /></td>
                                    <td style="width: 30%; text-align: right;">&#160;&#160;Tanggal&#160;</td>
                                    <td style="width: 20%;">:&#160;&#160;<span t-esc="o.date" /></td>
                                </tr>
                            </table>
                            <table class="nborder">
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black; border-top: 1px solid black;">Tempo</td>
                                    <td style="width: 2%; border-top: 1px solid black;">:</td>
                                    <td style="width: 78%; border-right: 1px solid black; border-top: 1px solid black;"><span t-esc="hari_tempo()" />&#160;Hari</td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black;">Tanggal Jatuh Tempo</td>
                                    <td style="width: 2%;">:</td>
                                    <td style="width: 78%; border-right: 1px solid black;"><span t-esc="o.date_due" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black;">Supplier</td>
                                    <td style="width: 2%;">:</td>
                                    <td style="width: 78%; border-right: 1px solid black;"><span t-esc="o.partner_id.name" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black;">&#160;</td>
                                    <td style="width: 2%;">&#160;</td>
                                    <td style="width: 78%; border-right: 1px solid black;"><span t-esc="o.partner_id.street" /></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; padding-left: 2px; border-left: 1px solid black;">&#160;</td>
                                    <td style="width: 2%;">&#160;</td>
                                    <td style="width: 78%; border-right: 1px solid black;"><span t-esc="o.partner_id.state_id.name" /></td>
                                </tr>
                            </table>
                            <table class="wborder" style="margin-bottom: 2px;">
                                <tr>
                                    <th style="text-align: center; border: 1px solid black;">No</th>
                                    <th style="text-align: center; border: 1px solid black;">No Rekening</th>
                                    <th style="text-align: center; border: 1px solid black;">Keterangan</th>
                                    <th style="text-align: center; border: 1px solid black;">Jumlah Harga</th>
                                </tr>
                                <t t-set="no" t-value="1"/>
                                <t t-if ="o.transaksi == 'rutin'">
                                    <tr t-foreach="o.line_dr_rutin_ids" t-as="x">
                                        <td style="padding-left: 2px; text-align: center; border: 1px solid black;"><t t-esc="no" /></td>
                                        <td style="padding-left: 2px; border: 1px solid black;"><t t-esc="x.account_id.name" /></td>
                                        <td style="padding-left: 2px; border: 1px solid black;"><t t-esc="x.name" /></td>
                                        <td style="padding-right: 2px; text-align: right; border: 1px solid black;"><t t-esc="'{:,.0f}'.format(x.amount)" /></td>
                                    </tr>
                                </t>
                                <t t-if ="o.transaksi != 'rutin'">
                                    <tr t-foreach="o.line_dr_ids" t-as="x">
                                        <td style="padding-left: 2px; text-align: center; border: 1px solid black;"><t t-esc="no" /></td>
                                        <td style="padding-left: 2px; border: 1px solid black;"><t t-esc="x.account_id.name" /></td>
                                        <td style="padding-left: 2px; border: 1px solid black;"><t t-esc="x.name" /></td>
                                        <td style="padding-right: 2px; text-align: right; border: 1px solid black;"><t t-esc="'{:,.0f}'.format(x.amount)" /></td>
                                    </tr>
                                </t>
                                <t t-set="no" t-value="no+1"/>
                                <tr>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">DPP</td>
                                    <td style="padding-right: 2px; text-align: right;"><t t-esc="'{:,.0f}'.format(o.untaxed_amount)" /></td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">PPN</td>
                                    <td style="padding-right: 2px; text-align: right;"><t t-esc="'{:,.0f}'.format(o.tax_amount)" /></td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">PPh</td>
                                    <td style="padding-right: 2px; text-align: right;">0</td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">Total</td>
                                    <td style="padding-right: 2px; text-align: right;"><t t-esc="'{:,.0f}'.format(o.amount)" /></td>
                                </tr>
                                <tr>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="text-align: center; padding-left: 2px; border-right: 1px solid black;"><span t-esc="user.name" />&#160;<span t-esc="tanggal()" /></td>
                                    <td style="padding-left: 2px; border-right: 1px solid black;">&#160;</td>
                                    <td style="text-align: right; padding-right: 2px;">&#160;</td>
                                </tr>
                            </table>
                            <p>##&#160;<span t-esc="terbilang(o.amount)" />##</p>
                            <table class="nborder">
                                <tr>
                                    <td style="width: 25%; text-align: center;">Pembuat</td>
                                    <td style="width: 25%; text-align: center;">Disetujui</td>
                                    <td style="width: 50%; text-align: center;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 25%; text-align: center;">&#160;</td>
                                    <td style="width: 25%; text-align: center;">&#160;</td>
                                    <td style="width: 50%; text-align: center;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 25%; text-align: center;">&#160;</td>
                                    <td style="width: 25%; text-align: center;">&#160;</td>
                                    <td style="width: 50%; text-align: center;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 25%; text-align: center;">&#160;</td>
                                    <td style="width: 25%; text-align: center;">&#160;</td>
                                    <td style="width: 50%; text-align: center;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 25%; text-align: center;">__________________</td>
                                    <td style="width: 25%; text-align: center;">__________________</td>
                                    <td style="width: 50%; text-align: center;">&#160;</td>
                                </tr>
                                <tr>
                                    <td style="width: 25%; text-align: center;"><span t-esc="user.name" /></td>
                                    <td style="width: 25%; text-align: center;">&#160;</td>
                                    <td style="width: 50%; text-align: center;"><span t-esc="user.name" />&#160;<span t-esc="tanggal()" /></td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>        
        </template>
    </data>
</openerp>