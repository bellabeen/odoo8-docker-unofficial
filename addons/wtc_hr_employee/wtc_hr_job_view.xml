<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<record model="ir.ui.view" id="wtc_hr_job_form_view">
		    <field name="name">wtc.hr.job.form.view</field>           
		    <field name="model">hr.job</field>                                  
		    <field name="inherit_id" ref="hr.view_hr_job_form"/>
		    <field name="arch" type="xml">
				<xpath expr="/form/sheet/group" position="inside">
					<field name="group_id" required="1" />
					<field name="sales_force"/>
					<field name="branch_control"/>
				</xpath>
		     </field>
		</record>
	
		<record model="ir.ui.view" id="wtc_hr_job_tree_view">
		    <field name="name">wtc.hr.job.view</field>
		    <field name="model">hr.job</field>
		    <field name="arch" type="xml">
		        <tree string="Job Title" create='0'>
		        	<field name="name"/>
		            <field name="department_id"/>
					<field name="group_id"/>
					<field name="sales_force"/>
					<field name="branch_control"/>            		            			            	
		            <field name="state"/>
		            	            
		        </tree>
		     </field>
		</record>
		
		<record model="ir.actions.act_window" id="action_hr_job_2">
		    <field name="name">Job Title</field>
		    <field name="res_model">hr.job</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>	
	
	<menuitem id="wtc_hr_job_sub" name="Job Title" parent="hr.menu_hr_main" action="action_hr_job_2"/>
	
	</data>
</openerp>