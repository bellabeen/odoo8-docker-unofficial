<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_teds_sales_activity_report_wizard" model="ir.ui.view">
			<field name="name">teds.sales.activity.report.wizard</field>
			<field name="model">teds.sales.activity.report.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Report Activity Result">
					<group attrs="{'invisible':[('state_x','=','get')]}">
						<label for="bulan" string="Periode"/> 
						<div>
							<field name="bulan" class="oe_inline" placeholder="Bulan"/> - 
							<field name="tahun" class="oe_inline" placeholder="Tahun"/>
						</div>
						<field name="options" required="1"/>
					</group>
					<notebook attrs="{'invisible':[('state_x','=','get')]}">
						<page string="Branches">
							<field name="branch_ids">
								<tree>
									<field name="code"/>
									<field name="name"/>
								</tree>
							</field>
						</page>
					</notebook>
					
                	<field invisible="1" name="state_x"/>                
                	<newline/>    
                	<group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
	                    <separator colspan="4" string="Excel Export Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                    <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
	                </group> 
	                <footer>
	                    <button name="excel_report" string="Export Data" type="object" class="oe_highlight" attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <label string=" or " attrs="{'invisible':[('state_x','=','get')]}"/>
	                    <button string="Cancel" special="cancel" class="btn btn-default" attrs="{'invisible':[('state_x','=','get')]}"/>
	                </footer>
				</form>
			</field>
		</record>

		<record id="action_teds_sales_activity_report_wizard" model="ir.actions.act_window">
			<field name="name">Report Sales Activity</field> 
			<field name="res_model">teds.sales.activity.report.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_teds_sales_activity_report_wizard"/>
			<field name="target">new</field>
		</record>

	  	<menuitem id="teds_sales_activity_report_wizard_menuitem" action="action_teds_sales_activity_report_wizard" parent="teds_sales_activity_btl_menu" sequence="10"/>
	</data>
</openerp>
