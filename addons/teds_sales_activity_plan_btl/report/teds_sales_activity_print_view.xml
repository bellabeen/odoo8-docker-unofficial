                                            <table style="font-size:8px; width:100%; line-height:70%;" class="table table-bordered">
                                                <tr>
                                                    <th colspan="4">A. Biaya Aktivitas BTL</th>
                                                </tr>
                                                <tr>
                                                    <th>Biaya</th>
                                                    <th>Total DPP</th>
                                                    <th>Total PPH</th>
                                                    <th>Subtotal</th>
                                                </tr>
                                                <tr>
                                                    <td>Beban TDM</td>
                                                    <td>Rp <span t-esc="'{0:,.2f}'.format(total_biaya_tdm(data))"/></td>
                                                    <td>Rp <span t-esc="'{0:,.2f}'.format(total_biaya_tdm_ppn(data) - total_biaya_tdm(data))"/></td>
                                                    <td>Rp <span t-esc="'{0:,.2f}'.format(total_biaya_tdm_ppn(data))"/></td>
                                                </tr>

                                                <tr>
                                                    <td>Beban Leasing</td>
                                                    <td>Rp <span t-esc="'{0:,.2f}'.format(total_biaya_leasing(data))"/></td>
                                                    <td>Rp <span t-esc="'{0:,.2f}'.format(total_biaya_leasing_ppn(data) - total_biaya_leasing(data))"/></td>
                                                    <td>Rp <span t-esc="'{0:,.2f}'.format(total_biaya_leasing_ppn(data))"/></td>
                                                </tr>

                                                <tr>
                                                    <th style="font-size:9px" width="50%" colspan="2">Subtotal DPP</th>
                                                    <th style="font-size:9px" colspan="2">Rp <span t-esc="'{0:,.2f}'.format(total_biaya_tdm(data) + total_biaya_leasing(data))"/></th>
                                                </tr>
                                                <tr>
                                                    <th style="font-size:9px" width="50%" colspan="2">Subtotal PPH 10%</th>
                                                    <th style="font-size:9px" colspan="2">Rp <span t-esc="'{0:,.2f}'.format((total_biaya_tdm_ppn(data) - total_biaya_tdm(data))  + ( total_biaya_leasing_ppn(data) - total_biaya_leasing(data)))"/></th>
                                                </tr>
                                                <tr>
                                                    <th style="font-size:9px" width="50%" colspan="2">Subtotal</th>
                                                    <th style="font-size:9px" colspan="2">Rp <span t-esc="'{0:,.2f}'.format(total_biaya_tdm_ppn(data)  + total_biaya_leasing_ppn(data))"/></th>
                                                </tr>
                                                <tr>
                                                    <td colspan="4"><span t-esc="data['create_uid']"/>, <span t-esc="data['create_date']"/></td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class="col-xs-3">
                                            <table style="font-size:9px; width:100%; line-height:200%" border="2" class="table table-bordered" align="right">
                                                <tr>
                                                    <th style="text-align:center">Area Manager</th>
                                                    <th style="text-align:center">GM Operational</th>
                                                </tr>
                                                <tr height="40">
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                                <tr height="10">
                                                    <td></td>
                                                    <td></td>
                                                </tr>
                                            </table>
                                        </div>
                                    </td>
                                </tr>
                            </table>

                            
                        </div>                  
                    <div class="oe_structure"/>
                </div>
        </t>
    </t>
</template>

