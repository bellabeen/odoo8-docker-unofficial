                                <tr>
                                    <th>No</th>
                                    <th>Lokasi</th>
                                    <th>Periode</th>
                                    <th>Pic Lokasi</th>
                                    <th>Market</th>
                                    <th>Evaluasi BTL</th>
                                    <th>Foto Lokasi BTL</th>
                                    <th>Biaya</th>
                                </tr>
                                <tr t-foreach="detail_ids(data)" style="page-break-inside: avoid !important;font-size: 8px;" t-as="detail">
                                    <td><span t-esc="no_urut()"/></td>
                                    <td>
                                        <table style="font-size:8px; width:100%; line-height:200%">
                                            <tr>
                                                <th>Nama</th>
                                                <td>:</td>
                                                <td><span t-esc="detail['name']"/></td>
                                                
                                                <th>Jarak</th>
                                                <td width="5%">:</td>
                                                <td><span t-esc="detail['jarak']"/> Km</td>
                                            </tr>
                                            <tr>
                                                <th>Alamat</th>
                                                <td>:</td>
                                                <td>
                                                    <span t-esc="detail['alamat']"/> ,Rt/Rw: <span t-esc="detail['rt']"/> / <span t-esc="detail['rw']"/> <br/>
                                                    ,Kota: <span t-esc="detail['city']"/><br/>
                                                    Kec: <span t-esc="detail['kecamatan']"/> ,Kel: <span t-esc="detail['kelurahan']"/> 
                                                </td>
                                                <th>Waktu</th>
                                                <td width="5%">: </td>
                                                <td><span t-esc="detail['waktu']"/> Menit</td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td>
                                        <table style="font-size:8px; width:100%; line-height:200%" border="1">
                                            <tr>
                                                <th>Tgl Awal</th>
                                                <td width="5%">: </td>
                                                <td><span t-esc="detail['start_date']"/></td>
                                            </tr>
                                            <tr>
                                                <th>Tgl Akhir</th>
                                                <td>:</td>
                                                <td><span t-esc="detail['end_date']"/></td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td>
                                        <table style="font-size:8px; width:100%; line-height:200%" border="1">
                                            <tr>
                                                <th>Nama</th>
                                                <td width="5%">: </td>
                                                <td><span t-esc="detail['pic']"/></td>
                                            </tr>
                                            <tr>
                                                <th>NIK</th>
                                                <td width="5%">: </td>
                                                <td><span t-esc="detail['nik']"/></td>
                                            </tr>
                                            <tr>
                                                <th>Jabatan</th>
                                                <td width="5%">: </td>
                                                <td><span t-esc="detail['jabatan']"/></td>
                                            </tr>
                                            <tr>
                                                <th>No Telp</th>
                                                <td width="5%">: </td>
                                                <td><span t-esc="detail['no_telp']"/></td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td>
                                        <table style="font-size:8px; width:100%; line-height:200%" border="1">
                                            <tr>
                                                <th>Display (Unit)</th>
                                                <td width="5%">: </td>
                                                <td><span t-esc="detail['display_unit']"/></td>
                                            </tr>
                                            <tr>
                                                <th>Target (Unit)</th>
