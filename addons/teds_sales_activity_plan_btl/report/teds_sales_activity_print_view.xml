                                                                            <td><span t-esc="history_detail['qty']"/></td>
                                                                        </tr>
                                                                    </table>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </t>
                                                </td>
                                            </tr>
                                        </table>
