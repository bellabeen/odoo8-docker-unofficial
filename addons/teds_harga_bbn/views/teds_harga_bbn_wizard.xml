<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>		
		<record id="view_teds_harga_bbn_wizard" model="ir.ui.view">
			<field name="name">teds.harga.bbn.wizard</field>
			<field name="model">teds.harga.bbn.wizard</field>
			<field name="arch" type="xml">
				<form string="Harga BBN Wizard">
					<sheet>
						<group attrs="{'invisible':[('state_x','=','get')]}">
							<group>
								<field name="options" required="1"/>
								<field name="bbn_id" required="1" options="{'no_open':True,'no_create':True}"/>
								<field name="nama_bbn" attrs="{'invisible':[('options','!=','upload')],'required':[('options','=','upload')]}"/>
								<field name="tipe_plat" attrs="{'invisible':[('options','!=','upload')],'required':[('options','=','upload')]}"/>
								<field name="file" attrs="{'invisible':[('options','!=','upload')],'required':[('options','=','upload')]}"/>
								<field name="bbn_detail_id" attrs="{'invisible':[('options','!=','download')],'required':[('options','=','download')]}" options="{'no_open':True,'no_create':True}"/>
							</group>
							<group>
								<field name="date"/>
								<label for="start_date" string="Effective Date" attrs="{'invisible':[('options','!=','upload')]}"/>
								<div>
									<field name="start_date" class="oe_inline" placeholder="Start Date" attrs="{'required':[('options','=','upload')],'invisible':[('options','!=','upload')]}"/>
									<field name="end_date" class="oe_inline" placeholder="End Date" attrs="{'required':[('options','=','upload')],'invisible':[('options','!=','upload')]}"/>
								</div>
							</group>
						</group>
						<field name="state_x" invisible="1"/>
						<newline/>    
		            	<group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
		            		<!-- Upload -->
		                    <separator colspan="4" string="Upload Harga BBN Berhasil..." attrs="{'invisible':['|',('state_x','=','choose'),('options','!=','upload')]}"/>
		        			
		        			<!-- Download -->
		                    <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':['|',('state_x','=','choose'),('options','!=','download')]}"/>
                    		<field name="name" invisible="1" width="100"/>
                    		<field name="file_download" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':['|',('state_x','=','choose'),('options','!=','download')]}"/>
                        </group> 
						<footer attrs="{'invisible':[('state_x','=','get')]}">
							<button name="action_submit" string="Submit" type="object" class="oe_highlight"/>
                            <button string="Cancel" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_teds_harga_bbn_wizard" model="ir.actions.act_window">
			<field name="name">Harga BBN Wizard</field> 
			<field name="res_model">teds.harga.bbn.wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_teds_harga_bbn_wizard"/>
			<field name="target">new</field>
		</record>

	  	<menuitem id="teds_harga_bbn_wizard_menuitem" parent="wtc_dealer_menu.showroom_configuration_menu"  action="action_teds_harga_bbn_wizard" sequence="100"/> 

	</data>
</openerp>