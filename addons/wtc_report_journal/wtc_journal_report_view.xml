<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_report_journal" model="ir.ui.view">
            <field name="name">Report Journal</field>
            <field name="model">wtc.report.journal</field>
            <field name="arch" type="xml">
               <form string="Journal Report" create="false" edit="false">
					<group attrs="{'invisible':[('state_x','=','get')]}">
						<field name="option" required="1"/>
						<field name="division"/>    
						<field name="period_id" options="{'no_create': True,'no_open': True}"/>         
						<label for="start_date" string="Tanggal"/>	
						<div>
							<field name="start_date" class="oe_inline"/> - <field name="end_date" class="oe_inline"/>
						</div>   
					</group>
			          
			        <notebook colspan="5" attrs="{'invisible':[('state_x','=','get')]}">
				          <page string="Branchs">
				          	 <field name="branch_ids" colspan="4" nolabel="1"/>
				          </page>
				          <page string="Accounts">
				         	  <field name="account_ids" colspan="4" nolabel="1"/>
				          </page>    
				          <page string="Jornals">
				         	  <field name="journal_ids" colspan="4" nolabel="1"/>
				          </page>
				          <page string="Partners">
				         	  <field name="partner_ids" colspan="4" nolabel="1"/>
				          </page>
			        </notebook>               	
                    <field invisible="1" name="state_x"/>                
                    <newline/>    
                    <group col="4" fill="0" attrs="{'invisible':[('state_x','!=','get')]}">
                        <separator colspan="4" string="Excel Report Generated. Click link below to download ..." attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="name" invisible="1" width="100" attrs="{'invisible':[('state_x','=','choose')]}"/>
                        <field name="data_x" nolabel="1" readonly="0" width="100" filename="name" attrs="{'invisible':[('state_x','=','choose')]}"/>
                    </group>
                    <footer>
                        <button name="excel_report" attrs="{'invisible':[('state_x','=','get')]}" string="Export Report" type="object" class="oe_highlight"/>
                        <label string="or  . " attrs="{'invisible':[('state_x','=','get')]}" />
                        <button string="Cancel" attrs="{'invisible':[('state_x','=','get')]}" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

	    <record id="action_report_journal_wizard" model="ir.actions.act_window">
	      <field name="name">Journal</field>
	      <field name="type">ir.actions.act_window</field>
	      <field name="res_model">wtc.report.journal</field>
	      <field name="view_type">form</field>
	      <field name="view_mode">form</field>
	      <field name="view_id" ref="view_report_journal"/>
	      <field name="target">new</field>
	    </record>
	
		 <menuitem id="menu_report_journal"  parent="wtc_dealer_menu.backoffice_report_menu" sequence="2"  action="action_report_journal_wizard"/>	

    </data>
</openerp>
