<openerp>
	<data>
        <record id="view_dms_mft_serv_conf_tree" model="ir.ui.view">
            <field name="name">teds.mft.serv.conf.tree</field>
            <field name="model">teds.mft.serv.conf</field>
            <field name="arch" type="xml">
                <tree string="Configuration MFT Server">
                <field name="host_remote"/>
                <field name="user_remote"/>
                <field name="password_remote"/>
                <field name="folder_path_remote"/>
                <field name="active"/>
                </tree>
            </field>
        </record>
        
        <record id="view_dms_mft_serv_conf_form" model="ir.ui.view">
            <field name="name">teds.mft.serv.conf.form</field>
            <field name="model">teds.mft.serv.conf</field>            
