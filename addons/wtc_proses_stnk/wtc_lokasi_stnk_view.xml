<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		
		<record model="ir.ui.view" id="lokasi_stnk_tree_view">
		    <field name="name">lokasi.stnk.tree</field>
		    <field name="model">wtc.lokasi.stnk</field>
		    <field name="arch" type="xml">
		        <tree string="List Lokasi STNK">
		        	<field name="name"/>
					<field name="description"/>		        	
		            <field name="branch_id"/>
					<field name="alamat"/>		            
		            <field name="city_id"/>	
		            <field name="type"/>	
		        </tree>
		     </field>
		</record>
 
		<record model="ir.ui.view" id="lokasi_stnk_form_view">
		    <field name="name">lokasi.stnk.form</field>
		    <field name="model">wtc.lokasi.stnk</field>
		    <field name="arch" type="xml">
		        <form string="Form Lokasi STNK">		        	
		        	<sheet>
			        	<div class="oe_title">
			        		<h2>
				                <label string="Form Lokasi STNK"/>    			
			 				</h2>
			        	</div>       
						<group col="2" colspan="2">   
							<group>
								<field name="name" required="1"/>
								<field name="description" required="1"/>								
								<field name="branch_id" required="1"/>
							</group>            
						    <group>
	                    		<field name="alamat"/>
								<field name="city_id"/>	 
								<field name="type" required="1"/>                   		
	                    	</group>  
						</group>
	                    <notebook colspan="5">
	                        <page string="Engine line">
	                            <field colspan="4" name="stnk_ids" nolabel="1">
	                                <tree string="" create="false" edit="false" delete="false">	                                	
						                <field name="name" string="No Engine"/>
						                <field name="chassis_no" string="No Chassis"/>
						                <field name="customer_stnk"/>
						                <field name="finco_id"></field>	
						            	<field name="no_stnk"/>  
						                <field name="tgl_terima_stnk"/>  
						            </tree>
	                            </field>
	                        </page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
									</group>
								</group>
							</page>	 	                        
	                    </notebook>						
		           </sheet>
		        </form>
		    </field>
		</record>
 		<record id="view_lokasi_stnk_filter" model="ir.ui.view">
            <field name="name">lokasi.stnk.list.select</field>
            <field name="model">wtc.lokasi.stnk</field>
            <field name="arch" type="xml">
                <search string="Search Lokasi STNK">
                    <field name="name" string="Reference"/>
                    <field name="branch_id"/> 
                    <field name="engine_no"/> 
                    <field name="customer_stnk"/> 
                    <field name="no_stnk"/>
                    <field name="type"/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter string="Type" icon="terp-go-month" domain="[]" context="{'group_by':'type'}"/>                    
                    </group>
                </search>
            </field>
        </record> 
		<record model="ir.actions.act_window" id="lokasi_stnk_action">
		    <field name="name">Lokasi STNK</field>
		    <field name="res_model">wtc.lokasi.stnk</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_lokasi_stnk_filter"/>
		</record>
					
		<menuitem id="lokasi_stnk_submenu" name="Lokasi STNK" parent="wtc_dealer_menu.stnk_bpkb_configuration_menu"  action="lokasi_stnk_action" sequence="10"/> 				  
	</data>
</openerp>
															