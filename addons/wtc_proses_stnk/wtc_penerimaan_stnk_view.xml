<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		
		<record model="ir.ui.view" id="penerimaan_stnk_tree_view">
		    <field name="name">penerimaan.stnk.tree</field>
		    <field name="model">wtc.penerimaan.stnk</field>
		    <field name="arch" type="xml">
		        <tree string="List Penerimaan STNK">
		        	<field name="name"/>
		            <field name="branch_id"/>
					<field name="division"/>		            
		            <field name="partner_id"/>	
		            <field name="tgl_terima"/>	  
		            <field name="state"/>	            
		        </tree>
		     </field>
		</record>
 
		<record model="ir.ui.view" id="penerimaan_stnk_form_view">
		    <field name="name">penerimaan.stnk.form</field>
		    <field name="model">wtc.penerimaan.stnk</field>
		    <field name="arch" type="xml">
		        <form string="Form Penerimaan STNK">
				<header>
						<button name="%(report_penerimaan_stnk)d" states="posted" type="action" string="Print" class="oe_highlight"  icon="gtk-print"/>
						<button name="post_penerimaan" groups='wtc_proses_stnk.group_wtc_penerimaan_sntk_post' type="object" states="draft" string="Post" class="oe_highlight"/>		
						<button name="cancel_penerimaan" groups='wtc_proses_stnk.group_wtc_penerimaan_stnk_cancel' type="object" states="posted" string="Cancel" confirm="Apa anda yakin ingin membatalkan transaksi ini ?"/>		
						<field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"draft":"red","approved":"blue"}'/>	
           		</header>		        	
		        	<sheet>
			        	<div class="oe_title">
			        		<h2>
				                <label string="Penerimaan STNK"/>    			
				 				<field name="name" class="oe_inline"/>
			 				</h2>
			        	</div>       
						<group col="2" colspan="2">   
							<group>
								<field name="branch_id" options="{'no_create': True,'no_open': True}" on_change="birojasa_change(branch_id,partner_id)" attrs="{'readonly': ['|',('state','!=','draft'),('name','!=',False)]}" />
							</group>            
						    <group>
	                    		<field name="division" required="1" attrs="{'readonly': ['|',('penerimaan_line','&lt;&gt;',[]), ('state','!=','draft')]}" />
	                    	</group>
	                    	<group>
							    <field name="partner_id" required="1" on_change="birojasa_change(branch_id,partner_id)" options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}" />	
	                          	<field name="lokasi_stnk_id" required="1" options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}"/>           	
							    	
							</group>
				            <group>  
								<field name="tgl_terima" required="1" readonly="1"/>						               
							</group>   
						</group>	
						
						<notebook colspan="5">
		                    <page string="Engine line">
		                        <field colspan="4" name="penerimaan_line" nolabel="1" widget="one2many_list" attrs="{'readonly': [('state','!=','draft')]}">
		                            <tree string="" editable="bottom">
						                <field name="name" options="{'no_create': True,'no_open': True}" on_change="onchange_engine(name,parent.branch_id,parent.division)" required="1"/>
						                <field name="customer_stnk"/>
						                <field name="no_notice" on_change="onchange_no_notice(no_notice)" attrs="{'required': [('tgl_notice','!=',False)]}"/>
										<field name="tgl_notice" attrs="{'required': [('no_notice','!=',False)]}"/>						                
						                <field name="no_stnk" on_change="onchange_no_stnk(no_stnk)" attrs="{'required': [('tgl_stnk','!=',False)]}"/>  
						                <field name="tgl_stnk" attrs="{'required': [('no_stnk','!=',False)]}"/>	
						                <field name="no_polisi" on_change="onchange_no_polisi(no_polisi)" attrs="{'required':[('is_terima_nopol','!=',False)]}"/>
						                <field name="is_terima_nopol"/>
						             </tree>
		                        </field>
		                    </page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
										<field name="cancel_uid" readonly="1"></field>
										<field name="cancel_date" readonly="1"></field>
									</group>
								</group>
							</page>			                    
		                </notebook>				
		           </sheet>
		        </form>
		    </field>
		</record>

 		<record id="view_penerimaan_stnk_filter" model="ir.ui.view">
            <field name="name">penerimaan.stnk.list.select</field>
            <field name="model">wtc.penerimaan.stnk</field>
            <field name="arch" type="xml">
                <search string="Search Penerimaan STNK">
                    <field name="name" string="Reference"/>
                    <field name="branch_id"/> 
                    <field name="engine_no"/> 
                    <field name="customer_stnk"/> 
                    <field name="partner_id" string="Biro Jasa"/> 
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="post" string="Posted" domain="[('state','=','posted')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter string="Tanggal" icon="terp-go-month" domain="[]" context="{'group_by':'tgl_terima'}"/>                    
                    </group>
                </search>
            </field>
        </record>		
		<record model="ir.actions.act_window" id="penerimaan_stnk_action">
		    <field name="name">Penerimaan STNK</field>
		    <field name="res_model">wtc.penerimaan.stnk</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_penerimaan_stnk_filter"/>
			<field name="context">{"search_default_draft":1}</field>		    
		</record>
					
		<menuitem id="penerimaan_stnk_submenu" name="Penerimaan STNK" parent="wtc_dealer_menu.stnk_bpkb_proses_stnk_menu"  action="penerimaan_stnk_action" sequence="30"/> 				  
	</data>
</openerp>
															