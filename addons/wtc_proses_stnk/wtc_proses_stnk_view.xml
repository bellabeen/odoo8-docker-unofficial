<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data> 
		
		<record model="ir.ui.view" id="proses_stnk_tree_view">
		    <field name="name">proses.stnk.tree</field>
		    <field name="model">wtc.proses.stnk</field>
		    <field name="arch" type="xml">
		        <tree string="List Proses STNK">
		        	<field name="name"/>
		            <field name="branch_id"/>
					<field name="division"/>		            
		            <field name="partner_id"/>	
		            <field name="tgl_proses_stnk"/>
		            <field name="state"/>            
		        </tree>
		     </field>
		</record>
 
		<record model="ir.ui.view" id="proses_stnk_form_view">
		    <field name="name">proses.stnk.form</field>
		    <field name="model">wtc.proses.stnk</field>
		    <field name="arch" type="xml">
		        <form string="Form Proses STNK">
				<header>
						 <button name="%(report_proses_stnk)d" states="posted" type="action" string="Print" class="oe_highlight"  icon="gtk-print"/>
						<button name="post_proses" groups='wtc_proses_stnk.group_wtc_proses_sntk_post' type="object" states="draft" string="Post" class="oe_highlight"/>		
						<button name="cancel_proses" groups='wtc_proses_stnk.group_wtc_proses_sntk_cancel' type="object" states="posted,draft" string="Cancel" confirm="Apa anda yakin ingin membatalkan transaksi ini ?"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,posted" statusbar_colors='{"draft":"red","approved":"blue"}'/>	
           		</header>		        	
		        	<sheet>
			        	<div class="oe_title">
			        		<h2>
				                <label string="Proses STNK"/>    			
				 				<field name="name" class="oe_inline"/>
			 				</h2>
			        	</div>       
						<group col="2" colspan="2">   
							<group>
								<field name="branch_id" options="{'no_create': True,'no_open': True}" attrs="{'readonly': ['|',('state','!=','draft'),('name','!=',False)]}"  on_change="onchange_engine_line(branch_id,partner_id)"/>
							</group>            
						    <group>
	                    		<field name="division" required="1" attrs="{'readonly': ['|',('serial_number_ids','&lt;&gt;',[]), ('state','!=','draft')]}" />
	                    	</group>
	                    	<group>
							    <field name="partner_id" options="{'no_create': True,'no_open': True}" attrs="{'readonly': [('state','!=','draft')]}"  required="1" on_change="onchange_engine_line(branch_id,partner_id)"/>
	                    	</group>
				            <group>  
								<field name="tgl_proses_stnk" required="1" readonly="1"/>									               
							</group>   
						</group>
	                    <notebook colspan="5">
	                        <page string="Engine line">
	                            <field colspan="4" name="serial_number_ids" nolabel="1" widget="one2many_list" attrs="{'readonly': [('state','!=','draft')]}">
	                                <tree string="" editable="top" edit="false" create="false">
						                <field name="name" string="Engine No"/>
										<field name="chassis_no"/>						                
						                <field name="customer_stnk"/>  
						                <field name="faktur_stnk"/>																		                
						                <field name="tgl_faktur"/> 
						                <field name="tgl_terima"/>
	                                </tree>
	                            </field>
	                        </page>
							<page string="Audit Trail">
								<group>
									<group>
										<field name="create_uid" readonly="1"></field>
										<field name="create_date" readonly="1"></field>
										<field name="confirm_uid" readonly="1"></field>
										<field name="confirm_date" readonly="1"></field>
									</group>
									<group>							
										<field name="write_uid" readonly="1"></field>
										<field name="write_date" readonly="1"></field>
										<field name="cancel_uid" readonly="1"></field>
										<field name="cancel_date" readonly="1"></field>
									</group>
								</group>
							</page>		                        
	                    </notebook>						
		           </sheet>
	                <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>		           
		        </form>
		    </field>
		</record>
 
 		<record id="view_proses_stnk_filter" model="ir.ui.view">
            <field name="name">proses.stnk.list.select</field>
            <field name="model">wtc.proses.stnk</field>
            <field name="arch" type="xml">
                <search string="Search Proses STNK">
                    <field name="name" string="Reference"/>
                    <field name="branch_id"/>     
                    <field name="engine_no"/> 
                    <field name="customer_stnk"/>                
                    <field name="partner_id"/>
                    <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                    <filter name="post" string="Posted" domain="[('state','=','posted')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Branch" icon="terp-partner" domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter string="Tanggal" icon="terp-go-month" domain="[]" context="{'group_by':'tgl_proses_stnk'}"/>
                        	                   
                    </group>
                </search>
            </field>
        </record>		
		
		<record model="ir.actions.act_window" id="proses_stnk_action">
		    <field name="name">Proses STNK</field>
		    <field name="res_model">wtc.proses.stnk</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		    <field name="search_view_id" ref="view_proses_stnk_filter"/>
			<field name="context">{"search_default_draft":1}</field>		    
		</record>
					
		<menuitem id="proses_stnk_submenu" name="Proses STNK" parent="wtc_dealer_menu.stnk_bpkb_proses_stnk_menu"  action="proses_stnk_action" sequence="10"/> 				  
	</data>
</openerp>
															