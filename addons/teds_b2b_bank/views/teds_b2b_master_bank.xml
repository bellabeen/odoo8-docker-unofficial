<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record id="view_teds_b2b_master_bank_tree" model="ir.ui.view">
            <field name="name">teds.b2b.master.bank.tree</field>
            <field name="model">teds.b2b.master.bank</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="branch_id"/>
                    <field name="name"/>
                    <field name="account_id"/>
                    <field name="config_id"/>
                    <field name="balance"/>
                </tree>
            </field>
        </record>
        
        <record id="view_teds_b2b_master_bank_form" model="ir.ui.view">
            <field name="name">teds.b2b.master.bank.form</field>
            <field name="model">teds.b2b.master.bank</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="name"/>
                        <div>
                            <h1><field name="name" placeholder="Bank Account" required="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="branch_id" options="{'no_open':True,'no_create':True}" required="1"/>
                                <field name="account_id" required="1" domain="[('branch_id','=',branch_id)]" options="{'no_open':True,'no_create':True}"/>
                                <field name="plafon" readonly="1"/>
                                <field name="currency" readonly="1"/>
                                <field name="is_fetch_statement" readonly="1"/>
                                <field name="last_balance_check" readonly="1"/>
                                <field name="last_fetch" readonly="1"/>
                            </group>
                            <group>
                                <field name="config_id" options="{'no_open':True,'no_create':True}" required="1"/>
                                <field name="schedule_id" options="{'no_open':True,'no_create':True}"/>
                                <field name="float_amount" readonly="1"/>
                                <field name="hold_amount" readonly="1"/>
                                <field name="available_balance" readonly="1"/>
                                <field name="balance" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Audit Trail">
                                <group>
                                    <group>
                                        <field name="create_uid" options="{'no_open':True,'no_create':True}" readonly="1"></field>
                                        <field name="create_date" readonly="1"></field>
                                    </group>
                                    <group>                         
                                        <field name="write_uid" options="{'no_open':True,'no_create':True}" readonly="1"></field>
                                        <field name="write_date" readonly="1"></field>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_teds_b2b_master_bank_search" model="ir.ui.view">
            <field name="name">teds.b2b.master.bank.search</field>
            <field name="model">teds.b2b.master.bank</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name" string="Bank Account"/>
                    <field name="config_id"/>
                    <field name="branch_id"/>
                    <field name="account_id"/>
                    <field name="schedule_id"/>
                    <group expand="0" string="Group By...">
                        <filter name="group_by_branch_id" string="Branch"
                            domain="[]" context="{'group_by':'branch_id'}"/>
                        <filter name="group_by_config_id" string="Config"
                            domain="[]" context="{'group_by':'config_id'}"/>
                        <filter name="group_by_schedule_id" string="Schedule"
                            domain="[]" context="{'group_by':'schedule_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_teds_b2b_master_bank" model="ir.actions.act_window">
            <field name="name">B2b Master Bank</field>
            <field name="res_model">teds.b2b.master.bank</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        
        <menuitem id="teds_b2b_master_bank_menuitem" parent="teds_b2b_api_configuration.teds_b2b_api_top_menu" action="action_teds_b2b_master_bank" sequence="4"/>

    </data>
</openerp>